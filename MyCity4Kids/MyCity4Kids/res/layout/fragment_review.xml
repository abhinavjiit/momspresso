<?xml version="1.0" encoding="utf-8"?>
<com.mycity4kids.observablescrollview.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_blue"
    android:fillViewport="true"
    android:overScrollMode="never">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/a_bg_blue">


        <TextView
            android:id="@+id/write_review"
            style="@style/custom_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#1c55f1"
            android:gravity="center_vertical|center_horizontal"
            android:padding="10dp"
            android:text="@string/write_review"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white_color"
            android:textSize="@dimen/common_button_txt_size"
            android:textStyle="bold"
            android:visibility="gone" />

        <com.mycity4kids.observablescrollview.ObservableScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/write_review"
            android:layout_alignParentTop="true"
            android:fillViewport="true"
            android:overScrollMode="never">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="2dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/reviewcount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="sans-serif-medium"
                            android:padding="5dp"
                            android:text="review count"
                            android:textColor="#424242"
                            android:textSize="16dp" />

                        <RelativeLayout
                            android:layout_width="60dp"
                            android:layout_height="45dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/rate_box">

                            <TextView
                                android:id="@+id/totalreviewrating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginTop="8dp"
                                android:gravity="center_vertical"
                                android:text="0.0"
                                android:textColor="@color/white_color"
                                android:textSize="26dp" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"
                                android:layout_gravity="bottom|right"
                                android:padding="2dp"
                                android:src="@drawable/segregator" />
                        </RelativeLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:id="@+id/reviewLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp"></LinearLayout>

                <TextView
                    android:id="@+id/txt_no_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal"
                    android:text="Be the first to review"
                    android:textColor="@color/new_grey"
                    android:textSize="18sp"
                    android:visibility="visible"></TextView>

                <TextView
                    android:id="@+id/video_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@color/white_color"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="Video Reviews"
                    android:textColor="#424242"
                    android:textSize="16dp"
                    android:textStyle="normal" />


                <com.mycity4kids.widget.CustomGridView
                    android:id="@+id/video_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/a_bg_blue"
                    android:cacheColorHint="@android:color/transparent"
                    android:numColumns="3" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@color/a_bg_blue"></View>

            </LinearLayout>

        </com.mycity4kids.observablescrollview.ObservableScrollView>

    </RelativeLayout>

</com.mycity4kids.observablescrollview.ObservableScrollView>