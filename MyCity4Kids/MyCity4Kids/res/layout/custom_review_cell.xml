<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/author_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:padding="5dp" />

        <FrameLayout
            android:layout_width="62dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_btn_review">

            <TextView
                android:id="@+id/ratingtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="4.5"
                android:textColor="@color/light_blue"
                android:textSize="25dp" />
        </FrameLayout>

        <TextView
            android:id="@+id/reviewer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/author_img"
            android:ellipsize="end"
            android:paddingTop="5dp"
            android:singleLine="true"
            android:text="Reviewer&apos;s name"
            android:textColor="#424242"
            android:textSize="@dimen/common_textsize_h1"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/ratingBar_review_new"
            style="@style/CustomRatingInfoBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/author_img"
            android:layout_below="@id/reviewer_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/author_img"
            android:isIndicator="true"
            android:max="5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/reviewer_txt"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="2dp"
            android:layout_toRightOf="@id/author_img"
            android:text="Review was posted"
            android:textColor="#7e7e7e"
            android:textSize="@dimen/common_textsize_h3" />


        <TextView
            android:id="@+id/title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/author_img"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:paddingLeft="8dp"
            android:singleLine="true"
            android:text="Review Title"
            android:textColor="@color/common_grey_1"
            android:textSize="@dimen/common_textsize_h2"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/text_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_txt">

            <TextView
                android:id="@+id/description_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingLeft="8dp"
                android:text="Review Description"
                android:textColor="@color/common_grey_1"
                android:textSize="@dimen/common_textsize_h2" />

            <TextView
                android:id="@+id/description_full_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="8dp"
                android:text="Review Description"
                android:textColor="@color/common_grey_1"
                android:textSize="@dimen/common_textsize_h2"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/viewLout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/text_container"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_less_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginTop="2dp"
                android:text="More"
                android:layout_marginBottom="2dp"
                android:textColor="@color/blue_bg"
                android:textSize="@dimen/common_textsize_h2" />
        </LinearLayout>

        <!-- <TextView
            android:id="@+id/date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/viewLout"
            android:layout_marginTop="10dp"
            android:text="Review was posted"
            android:textColor="#7e7e7e"
            android:textSize="@dimen/common_textsize_h3" /> -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/viewLout"
            android:layout_marginTop="8dp"
            android:background="@color/common_grey_2"
            android:visibility="gone" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>