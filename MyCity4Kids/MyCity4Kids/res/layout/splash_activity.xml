<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7388ff">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/tutorial_1"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/lout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/spin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/progress_spinner" />

        <TextView
            android:id="@+id/spinMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/spin"
            android:paddingLeft="5dp"
            android:text="@string/loading_txt"
            android:textColor="@color/black_color" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/logo_layout">

        <RelativeLayout
            android:id="@+id/rltBottomView"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp">


            <LinearLayout
                android:visibility="gone"
                android:id="@+id/indicator_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/one"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:alpha="0.8"
                    android:src="@drawable/white_filled_bg"
                    android:tag="1" />

                <ImageView
                    android:id="@+id/two"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:alpha="0.2"
                    android:src="@drawable/white_filled_bg"
                    android:tag="2" />

                <ImageView
                    android:id="@+id/three"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:alpha="0.2"
                    android:src="@drawable/white_filled_bg"
                    android:tag="3" />

                <ImageView
                    android:id="@+id/four"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:alpha="0.2"
                    android:src="@drawable/white_filled_bg"
                    android:tag="4" />

                <ImageView
                    android:id="@+id/five"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:alpha="0.2"
                    android:src="@drawable/white_filled_bg"
                    android:tag="5" />

                <!--<ImageView
                    android:id="@+id/six"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:alpha="0.2"
                    android:src="@drawable/white_filled_bg"
                    android:tag="6" />-->
            </LinearLayout>

            <TextView
                android:id="@+id/txvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/indicator_layout"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="mycity4kids"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white_color"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txvTitle"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|top"
                android:maxLines="3"
                android:minLines="3"
                android:text="Family Organizer"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white_color" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/img_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/rltBottomView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:src="@drawable/tutorial_1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/logo_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:src="@drawable/logo_tutorial" />

    </RelativeLayout>

</RelativeLayout>