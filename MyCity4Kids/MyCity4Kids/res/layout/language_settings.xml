<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/headerImageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_lanuage_circle" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerImageView"
        android:gravity="center"
        android:text="@string/language_settings.title"
        android:textColor="@color/language_settings.title"
        android:textSize="20sp"
        app:fontName="oswald_regular.ttf" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/subTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleTextView"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/language_settings.subtitle"
        android:textColor="@color/language_settings.subtitle"
        android:textSize="13sp"
        app:fontName="oswald.ttf" />

    <View
        android:id="@+id/underlineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/subTitleTextView"
        android:layout_marginTop="10dp"
        android:background="@color/language_settings.underline" />

    <ListView
        android:id="@+id/languageSettingListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subTitleTextView"
        android:layout_marginTop="10dp" />

</RelativeLayout>