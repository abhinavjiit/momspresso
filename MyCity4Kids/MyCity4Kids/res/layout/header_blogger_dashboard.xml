<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/bloggerImageView"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/family_xxhdpi"
        app:civ_border="true"
        app:civ_border_color="@color/line_separator_color"
        app:civ_border_width="1dp"
        app:civ_shadow="false" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bloggerImageView"
        android:layout_alignEnd="@+id/bloggerImageView"
        android:layout_alignRight="@+id/bloggerImageView"
        android:src="@drawable/camera_icon" />

    <RelativeLayout
        android:id="@+id/infoRelativeLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/bloggerImageView">

        <LinearLayout
            android:id="@+id/statsLinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:weightSum="3">

            <com.mycity4kids.widget.CustomViewFlipper
                android:id="@+id/rankViewFlipper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </com.mycity4kids.widget.CustomViewFlipper>

            <LinearLayout
                android:id="@+id/FollowersLinearLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/followersTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="--"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-light"
                    android:maxLines="1"
                    android:text="followers"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/FollowingLinearLL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/followingTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-thin"
                    android:maxLines="1"
                    android:text="--"
                    android:textColor="@color/black_color"
                    android:textSize="22sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="2dp"
                    android:ellipsize="marquee"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="followings"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statsLinearLayout"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/editProfileTextView"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_button_bg"
                android:backgroundTint="#ededed"
                android:gravity="center"
                android:text="EDIT"
                android:textColor="#525252"
                android:textSize="14sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/analyticsTextView"
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/edit_button_bg"
                android:backgroundTint="#ededed"
                android:gravity="center"
                android:text="ANALYTICS"
                android:textColor="#525252"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/followTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statsLinearLayout"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/topics_transparent_bg"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="FOLLOW"
            android:textColor="#507cbe"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/followingTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/statsLinearLayout"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text="FOLLOWING"
            android:textColor="#507cbe"
            android:textSize="12sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/userBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoRelativeLL"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:maxLines="3"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/more_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userBio"
        android:gravity="right"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="5dp"
        android:text="MORE"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/blogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/more_text"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/black_color"
        android:textSize="17sp"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/blogName"
        android:background="@color/login_grey" />

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blogName"
        android:orientation="horizontal"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/draftItemLinearlayout"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/draftImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_draft_selected" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/login_grey" />

        <LinearLayout
            android:id="@+id/publishedItemLinearlayout"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/publishedImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_publish" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/login_grey" />

        <LinearLayout
            android:id="@+id/commentsItemLinearlayout"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/commentsImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_comments" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/login_grey" />

        <LinearLayout
            android:id="@+id/reviewItemLinearLayout"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/reviewImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_review" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tabs"
        android:background="@color/login_grey" />

    <TextView
        android:id="@+id/noDraftsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="No Drafts have been saved yet"
        android:visibility="gone" />

    <TextView
        android:id="@+id/noArticlesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="No Articles Published"
        android:visibility="gone" />

    <TextView
        android:id="@+id/noCommentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="No Comments available"
        android:visibility="gone" />

    <TextView
        android:id="@+id/noReviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="No Reviews available"
        android:visibility="gone" />

</RelativeLayout>