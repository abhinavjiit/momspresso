<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_choose_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">


    <View
        android:id="@+id/overlayView_choose_story_challenge"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:alpha="0.75"
        android:background="#121212" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="280dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_dialog_bg"
        android:paddingBottom="10dp">


        <LinearLayout
            android:id="@+id/report_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:minWidth="280dp"
            android:orientation="vertical">

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/headerLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|left"
                android:padding="20dp"
                android:text="@string/choose_option_genre"
                android:textColor="@color/short_story.light_black_color"
                android:textSize="20sp"
                app:fontName="oswald.ttf" />

            <RadioGroup
                android:id="@+id/reportReasonRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/whyLeaveTextView"
                android:layout_marginLeft="24dp">

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/reason1RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Romance"
                    android:textColor="@color/short_story.light_black_color"
                    app:buttonTint="@color/app_red" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/reason2RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thriller"
                    android:textColor="@color/short_story.light_black_color"
                    app:buttonTint="@color/app_red" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/reason3RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Comedy"
                    android:textColor="@color/short_story.light_black_color"
                    app:buttonTint="@color/app_red" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/reason4RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inspirational"
                    android:textColor="@color/short_story.light_black_color"
                    app:buttonTint="@color/app_red" />

                <android.support.v7.widget.AppCompatRadioButton
                    android:id="@+id/reason5RadioButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Dark"
                    android:textColor="@color/short_story.light_black_color"
                    app:buttonTint="@color/app_red" />
            </RadioGroup>


        </LinearLayout>

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/start_writing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/report_linear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:background="@drawable/update_profile_bg"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="Start Writing"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:fontName="oswald.ttf" />


    </RelativeLayout>

</RelativeLayout>

