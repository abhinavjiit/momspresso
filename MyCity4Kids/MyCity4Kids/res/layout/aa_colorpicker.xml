<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Pick a color"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">


        <ImageView
            android:id="@+id/color1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/color_1xxhdpi"
            android:tag="1" />

        <ImageView
            android:id="@+id/color2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/color_2xxhdpi"
            android:tag="2" />

        <ImageView
            android:id="@+id/color3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/color_3xxhdpi"
            android:tag="3" />

        <ImageView
            android:id="@+id/color4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/color_4xxhdpi"
            android:tag="4" />

        <ImageView
            android:id="@+id/color5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/color_5xxhdpi"
            android:tag="5" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="5">


        <ImageView
            android:id="@+id/color6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/color_6xxhdpi"
            android:tag="6" />

        <ImageView
            android:id="@+id/color7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/color_7xxhdpi"
            android:tag="7" />

        <ImageView
            android:id="@+id/color8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/color_8xxhdpi"
            android:tag="8" />

        <ImageView
            android:id="@+id/color9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/color_9xxhdpi"
            android:tag="9" />

        <ImageView
            android:id="@+id/color10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:src="@drawable/color_10xxhdpi"
            android:tag="10" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="3"
            android:gravity="right"
            android:padding="5dp"
            android:text="CANCEL"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/blue_color" />


        <TextView
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="DONE"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/blue_color"
            android:visibility="gone" />


    </LinearLayout>
</LinearLayout>
