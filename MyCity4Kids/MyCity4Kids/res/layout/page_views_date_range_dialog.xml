<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Select Date Range"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/black_color" />

    <TextView
        android:id="@+id/fromDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableBottom="@drawable/underline"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/drop_down_arrowxxhdpi"
        android:gravity="left"
        android:padding="15dp"
        android:textColor="@color/black_color" />

    <TextView
        android:id="@+id/toDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:drawableBottom="@drawable/underline"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/drop_down_arrowxxhdpi"
        android:gravity="left"
        android:padding="15dp"
        android:textColor="@color/black_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/cancelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="CANCEL" />

        <TextView
            android:id="@+id/submitTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="SUBMIT"
            android:textColor="@color/analytics.pageview.datepicker.submit" />
    </LinearLayout>
</LinearLayout>

