<?xml version="1.0" encoding="utf-8"?>
<com.mycity4kids.observablescrollview.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_blue"
    android:fillViewport="true"
    android:overScrollMode="never">

    <RelativeLayout
        android:id="@+id/relativeLout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingBottom="80dp">

        <RelativeLayout
            android:id="@+id/leftRightContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rightElementsContainer"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:visibility="gone">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/CustomRatingInfoBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:isIndicator="true"
                    android:minHeight="22dp" />

                <TextView
                    android:id="@+id/like_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ratingBar"
                    android:layout_below="@id/ratingBar"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/fav_icon"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="#437cd8"
                    android:textSize="@dimen/common_textsize_h3"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/locality_distance_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ratingBar"
                    android:layout_below="@id/like_txt"
                    android:layout_marginLeft="-4dp"
                    android:layout_marginTop="7dp"
                    android:drawableLeft="@drawable/locality_icon"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:textColor="#437cd8"
                    android:textSize="@dimen/common_textsize_h3"
                    android:textStyle="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/leftElementsContainer"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignBaseline="@id/rightElementsContainer"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/rightElementsContainer">

                <TextView
                    android:id="@+id/sub_address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingTop="2dp"
                    android:text="@string/sub_address_txt"
                    android:textColor="@color/common_grey_1"
                    android:textSize="@dimen/common_textsize_h2"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sub_address_txt"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingTop="2dp"
                    android:singleLine="false"
                    android:text="@string/address_txt"
                    android:textColor="@color/common_grey_1"
                    android:textSize="@dimen/common_textsize_h2"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/locality_txt"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:ellipsize="end"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:text="@string/address_locality_txt"
                    android:textColor="@color/common_grey_1"
                    android:textSize="@dimen/common_textsize_h2" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/book_now_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/leftRightContainer"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layer_bg_btn"
            android:gravity="center_vertical|center_horizontal"
            android:text="Book Now"
            android:textColor="@color/white_color"
            android:textSize="@dimen/common_textsize_h2"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/book_now_btn"
            android:layout_margin="10dp"
            android:background="@drawable/bg_for_details"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/txv_btn_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/call_icon"
                android:gravity="center"
                android:padding="5dp"
                android:text="Call"
                android:textColor="#d82384"
                android:textSize="@dimen/common_textsize_h3"
                android:textStyle="bold" />

            <View
                android:id="@+id/calldivider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cbcbcb" />

            <TextView
                android:id="@+id/txv_btn_add_review"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/add_review_icon"
                android:gravity="center"
                android:padding="5dp"
                android:text="Add Review"
                android:textColor="@color/common_grey_1"
                android:textSize="@dimen/common_textsize_h3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txv_btn_add_calender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/calander_icon"
                android:gravity="center"
                android:padding="5dp"
                android:text="Add to Calender"
                android:textColor="@color/common_grey_1"
                android:textSize="@dimen/common_textsize_h3"
                android:textStyle="bold"
                android:visibility="gone" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cbcbcb" />

            <TextView
                android:id="@+id/txv_btn_add_photo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/add_photo"
                android:gravity="center"
                android:padding="5dp"
                android:text="Add Photo"
                android:textColor="@color/common_grey_1"
                android:textSize="@dimen/common_textsize_h3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txv_btn_invite_frnd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/share_with_frnds"
                android:gravity="center"
                android:padding="5dp"
                android:text="Share"
                android:textColor="@color/common_grey_1"
                android:textSize="@dimen/common_textsize_h3"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/orgview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/organised_by_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:drawableLeft="@drawable/organiser_xxhdpi"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="ORGANISER"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/organised_by_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/organised_by_txt"
                android:layout_weight=".6"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/organised_by"
                android:textColor="#424242"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/orgview"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:id="@+id/batches_lout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/black_color"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/activitiesview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/batches_lout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:padding="8dp">


            <TextView
                android:id="@+id/activities_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/activity_xxhdpi"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingLeft="7dp"
                android:text="ACTIVITIES"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/activitiest_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/activities_txt"
                android:textColor="#424242"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/activitiesview"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:id="@+id/ageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img2"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/age_group_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/age_group_xxhdpi"
                android:drawablePadding="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingLeft="7dp"
                android:text="AGE GROUP"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/age_group_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/age_grout_txt"
                android:textColor="#424242"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/ageview"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:id="@+id/dateview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img3"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/event_dates_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ageview"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/date_xxhdpi"
                android:drawablePadding="7dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="DATES"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/event_dates_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/event_dates_txt"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-medium"
                android:text="@string/event_dates_txt"
                android:textColor="#424242"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/dateview"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:id="@+id/timeview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img4"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/timings_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateview"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/time_xxhdpi"
                android:drawablePadding="7dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="TIME"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/timings_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/timings_txt"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/activities_txt"
                android:textColor="#424242"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img5"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/timeview"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:id="@+id/durationview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img5"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/duration_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/duration_xxhdpi"
                android:drawablePadding="7dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="DURATION"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/duration_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/duration_txt"
                android:textColor="#424242"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img10"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/durationview"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:id="@+id/costview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img10"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/cost_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/cost_xxhdpi"
                android:drawablePadding="7dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="COST"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/cost_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cost_txt"
                android:layout_weight="0.6"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@string/cost_txt"
                android:textColor="#424242"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img6"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/costview"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:id="@+id/desview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img6"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_color"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/description_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/costview"
                android:drawableLeft="@drawable/description_xxhdpi"
                android:drawablePadding="7dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="DESCRIPTION"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/description_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/description_txt"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/description_txt"
                android:textColor="#424242"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img7"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/desview"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E4E4E4" />

        <TextView
            android:id="@+id/additional_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img7"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/additional_information_icon"
            android:drawablePadding="7dp"
            android:gravity="top|left"
            android:paddingLeft="5dp"
            android:text="@string/additional_info"
            android:textColor="@color/common_grey_1"
            android:textSize="@dimen/common_textsize_h2"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/additional_info_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/additional_info_txt"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="-5dp"
            android:text="@string/additional_info"
            android:textColor="@color/common_grey_2"
            android:textSize="@dimen/common_textsize_h2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/facility_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/additional_info_desc"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/info_facilities"
            android:drawablePadding="7dp"
            android:gravity="top|left"
            android:paddingLeft="5dp"
            android:text="FACILITIES"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/additional_lout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/facility_txt"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical"></LinearLayout>

        <LinearLayout
            android:id="@+id/aboutview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/additional_lout"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_color"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/about_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/description_xxhdpi"
                android:drawablePadding="7dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="ABOUT"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/about_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_txt"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/about_txt"
                android:textColor="#424242"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img8"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/aboutview"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#E4E4E4" />

        <LinearLayout
            android:id="@+id/conview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img8"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/contact_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_desc"
                android:layout_weight="0.4"
                android:drawableLeft="@drawable/contact_xxhdpi"
                android:drawablePadding="7dp"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
