                <Spinner
                    android:id="@+id/spinnerCity"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_below="@id/contactLout"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/common_margin_top"
                    android:background="@drawable/dropdown"
                    android:prompt="@string/city_prompt"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/header_color" />

                <Spinner
                    android:id="@+id/spinnerLocality"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_below="@id/spinnerCity"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="@dimen/common_margin_top"
                    android:background="@drawable/dropdown"
                    android:prompt="@string/locality_prompt"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/header_color" />
            </RelativeLayout>

            <TableRow
                android:id="@+id/internal_lout_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/aboutYouLout"
                android:layout_marginTop="@dimen/common_margin_top"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Your Kids"
                    android:textColor="@color/header_color"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </TableRow>

            <LinearLayout
                android:id="@+id/internal_kid_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/internal_lout_lbl"
                android:orientation="vertical" >
            </LinearLayout>

            <TableRow
                android:id="@+id/tableRowAddChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/internal_kid_layout"
                android:layout_marginTop="@dimen/common_margin_top"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <Button
                    android:id="@+id/btnAddChild"
                    style="@style/custom_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:background="@drawable/btn_background_selector"
                    android:padding="8dp"
                    android:text="@string/children"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/common_button_txt_size" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tableRowAddChild"
                android:layout_marginTop="@dimen/common_margin_top"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" >

                <TextView
                    android:id="@+id/btnSubmit"
                    style="@style/custom_style"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:background="@drawable/btn_background_selector"
                    android:padding="8dp"
                    android:text="SAVE"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/common_button_txt_size" 
                    android:textStyle="bold" />
            </TableRow>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>