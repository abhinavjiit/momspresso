<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <include
            android:layout_width="match_parent"
            android:layout_height="50dp"
            layout="@layout/profile_header_bar" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrllvwNo1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:fadingEdgeLength="20dp"
        android:padding="10dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none" >

        <RelativeLayout
            android:id="@+id/outerLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/aboutYouLout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/aboutLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="5dp"
                    android:text="About You"
                    android:textColor="@color/header_color"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <FrameLayout
                    android:id="@+id/profileFrmLout"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/upload_photo_icon_bg"
                    android:padding="3dp" >

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/profile_img"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:clickable="true"
                        android:contentDescription="@string/profile_photo"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/profile_txv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:gravity="center_horizontal"
                        android:singleLine="true"
                        android:text="Add Photo"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="#4a4a4a"
                        android:textSize="11sp" />

                    <ImageView
                        android:id="@+id/profile_img_cross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|top"
                        android:clickable="true"
                        android:contentDescription="@string/close_profile_photo"
                        android:src="@drawable/img_cross_icon"
                        android:visibility="gone" />
                </FrameLayout>

                <LinearLayout
                    android:id="@+id/userNameLout"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/aboutLbl"
                    android:layout_marginTop="@dimen/common_margin_top"
                    android:layout_toLeftOf="@id/profileFrmLout"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="15dp" >

                    <ImageView
                        android:id="@+id/img_userName"
                        android:layout_width="45dp"
                        android:layout_height="@dimen/common_button_height"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/blue_man_icon"
                        android:scaleType="fitStart" />

                    <EditText
                        android:id="@+id/userName_edit_txt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_button_height"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/edit_text"
                        android:hint="Full Name"
                        android:inputType="textNoSuggestions"
                        android:maxLength="60"
                        android:paddingLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/input_text_color"
                        android:textColorHint="@color/hint_txt_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/emailLout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_below="@id/userNameLout"
                    android:layout_marginTop="@dimen/common_margin_top"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="45dp"
                        android:layout_height="@dimen/common_button_height"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/blue_email_icon"
                        android:scaleType="fitStart" />

                    <EditText
                        android:id="@+id/email_edit_txt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_button_height"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/edit_text"
                        android:clickable="false"
                        android:editable="false"
                        android:enabled="false"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress|textNoSuggestions"
                        android:paddingLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/input_text_color"
                        android:textColorHint="@color/hint_txt_color" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/contactLout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_below="@id/emailLout"
                    android:layout_marginTop="@dimen/common_margin_top"
                    android:orientation="horizontal"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp" >

                    <ImageView
                        android:id="@+id/img_contact"
                        android:layout_width="45dp"
                        android:layout_height="@dimen/common_button_height"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/rsz_contact_img"
                        android:scaleType="fitStart" />

                    <EditText
                        android:id="@+id/contact_edit_txt"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/common_button_height"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/edit_text"
                        android:hint="Contact Number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:paddingLeft="10dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/input_text_color"
                        android:textColorHint="@color/hint_txt_color" />
                </LinearLayout>

