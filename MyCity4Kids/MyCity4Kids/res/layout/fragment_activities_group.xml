<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff" >


    <RelativeLayout
        android:id="@+id/layout_age_non_blank"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <LinearLayout
            android:id="@+id/searchLout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:weightSum="1" >

            <EditText
                android:id="@+id/query_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".9"
                android:background="@null"
                android:hint="Search..."
                android:imeOptions="actionSearch"
                android:layout_gravity="center_vertical"
                android:inputType="textFilter"
                android:padding="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:textColor="#c6c6c6"
                android:textColorHint="#c6c6c6"
                android:textCursorDrawable="@null" />



            <ImageView
                android:id="@+id/business_search_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="3dp"
                android:layout_weight=".09"
                android:clickable="false"
                android:padding="10dp"
                android:src="@drawable/search" />

        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d3d3d3"
            android:layout_below="@+id/searchLout"
            android:id="@+id/searchline"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/filter_options"
            android:layout_alignParentBottom="true">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c6c6c6"
                android:id="@+id/lin"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:layout_below="@+id/lin">
                <TextView
                    android:id="@+id/list_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_toLeftOf="@+id/list_apply"
                    android:padding="14dp"
                    android:text="RESET"
                    android:textColor="@color/hint_txt_color"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/list_reset"
                    android:padding="14dp"
                    android:text="CANCEL"
                    android:textColor="@color/hint_txt_color"
                    android:textSize="14dp" />


                <View
                    android:id="@+id/line"
                    android:layout_width="1dp"
                    android:layout_height="45dp"
                    android:background="#ffffff"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/list_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:padding="14dp"
                    android:text="DONE"
                    android:textColor="@color/new_blue"
                    android:textSize="14dp" />
            </RelativeLayout>
        </RelativeLayout>
        <ListView
            android:id="@+id/subAgeGroupListView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/filter_options"
            android:layout_below="@+id/searchline"
            android:cacheColorHint="@color/transparent"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="none" />
        <!-- <ListView
             android:id="@+id/subAgeGroupListView"
             android:layout_width="match_parent"
             android:layout_height="fill_parent"
             android:layout_above="@+id/filter_options"
             android:cacheColorHint="@color/transparent"
             android:divider="#c4c4c4"
             android:dividerHeight="1dp"
             android:fadingEdgeLength="20dp"
             android:listSelector="@color/transparent"
             android:requiresFadingEdge="vertical"
             android:scrollbars="none" />-->
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_alignParentTop="true"
        android:background="#CECECE"></View>

</RelativeLayout>