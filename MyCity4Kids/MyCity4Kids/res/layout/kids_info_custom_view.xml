<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/genderLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/app_settings.edit_profile.gender"
        app:fontName="oswald.ttf" />

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/genderLabelTextView"
        android:layout_alignTop="@+id/genderLabelTextView"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/genderLabelTextView"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/maleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="#507cbe"
            android:checked="true"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:text="Male" />

        <RadioButton
            android:id="@+id/femaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:buttonTint="#507cbe"
            android:layoutDirection="rtl"
            android:padding="4dp"
            android:text="Female" />
    </RadioGroup>

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/kidsDOBTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/genderRadioGroup"
        android:layout_weight="2"
        android:background="@null"
        android:drawableBottom="@drawable/underline"
        android:drawablePadding="3dp"
        android:gravity="left"
        android:padding="5dp"
        android:text="@string/app_settings.edit_profile.dob"
        android:textColor="@color/app_settings.edit_profile.dob"
        app:fontName="oswald.ttf" />
</merge>