<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/languageStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:button="@drawable/language_selector_checkbox"
        android:buttonTint="@color/app_red"
        android:backgroundTint="@color/app_red"
        android:checked="false"
        android:drawablePadding="20dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/app_settings.edit_prefs.pref_lang_name"
        android:textSize="16sp" />

</LinearLayout>