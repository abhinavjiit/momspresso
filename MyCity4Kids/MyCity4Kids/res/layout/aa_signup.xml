<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/setting_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/mainScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/root"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:src="@drawable/family_xxhdpi" />

            <EditText
                android:id="@+id/family_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@null"
                android:drawableBottom="@drawable/underline"
                android:drawablePadding="5dp"
                android:hint="@string/family_name"
                android:inputType="textCapWords"
                android:padding="7dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/a_spouce_bg"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="PARENTS DETAILS"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="25dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/color_spouse"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/new_grey"
                            android:paddingBottom="7dp"
                            android:text="NAME"
                            />

                        <EditText
                            android:id="@+id/spouse_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:drawableBottom="@drawable/underline"
                            android:inputType="textCapWords|textPersonName"
                            android:paddingBottom="7dp"
                            android:textColor="@color/black_color" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/color_spouse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableBottom="@drawable/color_1xxhdpi"
                        android:drawablePadding="2dp"
                        android:hint="@string/colour"
                        android:textColor="@color/black_color" />


                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/new_grey"
                    android:paddingBottom="7dp"
                    android:text="EMAIL" />

                <EditText
                    android:id="@+id/spouse_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableBottom="@drawable/underline"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="7dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/new_grey"
                    android:paddingBottom="7dp"
                    android:text="SHARED FAMILY PASSWORD" />

                <EditText
                    android:id="@+id/family_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableBottom="@drawable/underline"
                    android:paddingBottom="7dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/new_grey"
                    android:paddingBottom="7dp"
                    android:text="CONFIRM FAMILY PASSWORD" />

                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableBottom="@drawable/underline"
                    android:paddingBottom="7dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/black_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/new_grey"
                    android:paddingBottom="7dp"
                    android:text="ADD PINCODE" />

                <EditText
                    android:id="@+id/add_pincode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:drawableBottom="@drawable/underline"
                    android:inputType="number"
                    android:maxLength="6"
                    android:paddingBottom="7dp"
                    android:textColor="@color/black_color" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/internal_adult_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"></LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/a_bg_blue" />

            <TextView
                android:id="@+id/additional_adult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/add_xxhdpi"
                android:drawablePadding="10dp"
                android:paddingBottom="12dp"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
                android:text="ADD SPOUSE OR GUARDIAN"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/blue_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/a_spouce_bg"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="CHILDREN DETAILS"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black_color" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="25dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/kidcolor"
                        android:background="@color/white_color"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="7dp"
                            android:text="CHILD'S NAME"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                        <EditText
                            android:id="@+id/kids_name"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                            android:drawableBottom="@drawable/underline"
                            android:inputType="textCapWords"
                            android:paddingBottom="7dp"
                            android:textColor="@color/black_color" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/kidcolor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableBottom="@drawable/color_2xxhdpi"
                        android:drawablePadding="2dp"
                        android:hint="@string/colour"
                        android:textColor="@color/black_color" />


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BIRTHDAY"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/kids_bdy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@null"
                    android:drawableBottom="@drawable/underline"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/drop_down_arrowxxhdpi"
                    android:gravity="left"
                    android:padding="5dp"
                    android:textColor="@color/black_color" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/a_bg_blue" />

            <LinearLayout
                android:id="@+id/internal_kid_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">


            </LinearLayout>


            <TextView
                android:id="@+id/additional_child"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/add_xxhdpi"
                android:drawablePadding="10dp"
                android:paddingLeft="20dp"
                android:text="ADD CHILDREN"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/blue_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@color/a_spouce_bg"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:visibility="gone"
                android:text="ACCOUNT PREFERENCES"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/white_color"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/device_setting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="20dp"
                    android:text="DEVICE SETTINGS"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blue_color" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/a_bg_blue" />


                <TextView
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="30dp"
                    android:visibility="gone"
                    android:paddingTop="20dp"
                    android:text="NOTIFICATIONS"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/blue_color" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/a_bg_blue" />

        </LinearLayout>


    </ScrollView>
</LinearLayout>