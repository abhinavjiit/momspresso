<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroun_img" >

    <Button
        android:id="@+id/skip_btn_login"
        style="@style/custom_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_button_height"
        android:layout_alignParentBottom="true"
        android:background="@color/trans_gray"
        android:text="@string/skip_txt"
        android:textSize="@dimen/common_button_txt_size" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/skip_btn_login" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="18dp" >

            <ImageView
                android:id="@+id/img_f_mycity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="50dp"
                android:paddingRight="45dp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:id="@+id/fb_lout_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                android:layout_alignLeft="@id/sign_up_btn"
                android:layout_alignRight="@id/sign_up_btn"
                android:layout_below="@id/img_f_mycity"
                android:background="@drawable/fb_btn_selector"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_key"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/common_button_height"
                    android:clickable="false"
                    android:padding="3dp"
                    android:src="@drawable/facebook_img" />

                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white_color" />

                <Button
                    android:id="@+id/facebook_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:background="@null"
                    android:clickable="false"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:text="@string/sign_in_fb"
                    android:textAlignment="viewStart"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white_color"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/google_lout_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                android:layout_alignLeft="@id/sign_up_btn"
                android:layout_alignRight="@id/sign_up_btn"
                android:layout_below="@id/fb_lout_btn"
                android:layout_marginTop="@dimen/common_button_margin"
                android:background="@drawable/google_btn_selector"
                android:clickable="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/google_img"
                    android:layout_width="40dp"
                    android:layout_height="@dimen/common_button_height"
                    android:clickable="false"
                    android:padding="3dp"
                    android:src="@drawable/google_plus_img" />

                <TextView
                    android:layout_width="0.5dp"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_gravity="center_vertical"
                    android:background="@color/white_color" />

                <Button
                    android:id="@+id/google_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:background="@null"
                    android:clickable="false"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="15dp"
                    android:text="@string/sign_in_google"
                    android:textAlignment="viewStart"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white_color"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:id="@+id/or_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                android:layout_alignLeft="@id/sign_up_btn"
                android:layout_alignRight="@id/sign_up_btn"
                android:layout_below="@id/google_lout_btn"
                android:layout_marginTop="@dimen/common_button_margin"
                android:src="@drawable/or_img" />

            <Button
                android:id="@+id/email_login_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                android:layout_below="@+id/or_line"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/common_button_margin"
                android:background="@drawable/final_btn_background_selector"
                android:text="@string/login_with_email"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/common_button_txt_size"
                android:textColor="@color/white_color"
                android:textStyle="bold" />

            <Button
                android:id="@+id/sign_up_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                android:layout_below="@id/email_login_btn"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/common_button_margin"
                android:background="@drawable/final_btn_background_selector"
                android:gravity="center"
                android:text="@string/sign_up_txt"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/common_button_txt_size"
                android:textColor="@color/white_color"
                android:textStyle="bold" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>