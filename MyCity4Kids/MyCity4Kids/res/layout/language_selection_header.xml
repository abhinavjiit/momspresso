<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/trendingHeaderImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_lanuage_circle" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/trendingHeaderTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trendingHeaderImageView"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:gravity="center"
        android:text="@string/lang_sel.welcome_msg"
        android:textColor="#545454"
        android:textSize="24sp"
        app:fontName="oswald_regular.ttf" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/trendingHeaderTopics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trendingHeaderTitle"
        android:layout_marginEnd="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/lang_sel.sel_lang"
        android:textColor="#9c9dac"
        android:textSize="15sp"
        app:fontName="oswald.ttf" />

</RelativeLayout>