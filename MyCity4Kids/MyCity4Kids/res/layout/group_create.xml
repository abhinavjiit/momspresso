        android:layout_height="wrap_content"
        android:id="@+id/editTextDescription"
        android:hint="Add Description"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:maxLines="3"
        android:lines="3"
        android:textColor="#000000"
        />
