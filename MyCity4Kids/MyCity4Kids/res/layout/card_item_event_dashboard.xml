<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- android:paddingBottom="10dp"
     android:paddingLeft="10dp"
     android:paddingRight="10dp"
     android:paddingTop="10dp">-->

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewWidget"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="8dp">

        <!--    <HorizontalScrollView
                android:id="@+id/titleContainer"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">-->

        <LinearLayout
            android:id="@+id/imvAuthorThumbContainer"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp"

            >

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:maxLines="3"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:singleLine="false"
                android:text="Event Name"
                android:textColor="@color/black_color"
                android:textSize="14sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:id="@+id/middleContainer">

                <ImageView
                    android:id="@+id/eventThumbnail"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="fill"
                    android:contentDescription="@string/author_img"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:id="@+id/midpane"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@+id/rightpane"
                    android:layout_toRightOf="@+id/leftpane"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:paddingBottom="2dp">

                    <LinearLayout
                        android:id="@+id/layoutAgeGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/slg"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ageGroupIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="2dp"
                            android:src="@drawable/age_group_user" />

                        <TextView
                            android:id="@+id/ageGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-light"
                            android:maxLines="2"
                            android:text="Age Group"
                            android:textColor="#595959"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutadress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/slg"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/addressicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="2dp"
                            android:src="@drawable/location_icon" />

                        <TextView
                            android:id="@+id/addresstxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif-light"
                            android:text="address"
                            android:textColor="#595959"
                            android:textSize="12sp"
                            android:singleLine="true"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layoutduration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layoutadress"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/durationicon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="2dp"
                            android:src="@drawable/clock_new" />

                        <TextView
                            android:id="@+id/durationtxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif-light"
                            android:text="time"
                            android:textColor="#595959"
                            android:textSize="12sp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:paddingLeft="10dp"
                android:id="@+id/lowerContainer">

                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif"
                    android:maxLines="2"
                    android:text="Category"
                    android:textColor="#404040"
                    android:textSize="12dp" />

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@drawable/vertical_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <ImageView
                    android:id="@+id/addEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:src="@drawable/add_red"
                   />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/contact_xxhdpi"
                    android:id="@+id/call"/>
            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>