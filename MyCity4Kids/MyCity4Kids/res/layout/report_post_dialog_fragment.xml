<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_bg"
    android:minWidth="280dp"
    android:orientation="vertical"
    android:paddingBottom="30dp">

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:padding="20dp"
        android:text="@string/report.reason"
        android:textColor="@color/short_story.light_black_color"
        android:textSize="20sp"
        app:fontName="oswald.ttf" />

    <RadioGroup
        android:id="@+id/reportReasonRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whyLeaveTextView"
        android:layout_marginLeft="24dp">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/reason1RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report.abuse"
            android:textColor="@color/short_story.light_black_color"
            app:buttonTint="@color/short_story.blue" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/reason2RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report.religious"
            android:textColor="@color/short_story.light_black_color"
            app:buttonTint="@color/short_story.blue" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/reason3RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report.spam"
            android:textColor="@color/short_story.light_black_color"
            app:buttonTint="@color/short_story.blue" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/reason4RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report.inappro"
            android:textColor="@color/short_story.light_black_color"
            app:buttonTint="@color/short_story.blue" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/reason5RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/report.not_relevant"
            android:textColor="@color/short_story.light_black_color"
            app:buttonTint="@color/short_story.blue" />
    </RadioGroup>

</LinearLayout>
