<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_bg"
    android:minWidth="280dp"
    android:orientation="vertical"
    android:paddingBottom="30dp">

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|left"
        android:padding="20dp"
        android:text="This content is inappropriate because"
        android:textColor="@color/groups.light_black_color"
        android:textSize="20sp"
        app:fontName="oswald.ttf" />

    <RadioGroup
        android:id="@+id/reportReasonRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/whyLeaveTextView"
        android:layout_marginLeft="24dp">

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/reason1RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not Interested"
            android:textColor="@color/groups.light_black_color"
            app:buttonTint="@color/groups.blue_color" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/reason2RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Religious Sentiments"
            android:textColor="@color/groups.light_black_color"
            app:buttonTint="@color/groups.blue_color" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/reason3RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="It's Spam"
            android:textColor="@color/groups.light_black_color"
            app:buttonTint="@color/groups.blue_color" />

        <android.support.v7.widget.AppCompatRadioButton
            android:id="@+id/reason4RadioButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Any other"
            android:textColor="@color/groups.light_black_color"
            app:buttonTint="@color/groups.blue_color" />
    </RadioGroup>

</LinearLayout>
