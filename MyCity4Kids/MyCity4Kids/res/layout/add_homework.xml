<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/a_bg_blue"
    android:orientation="vertical">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="8dp"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:visibility="visible">


                <EditText
                    android:id="@+id/homework_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableBottom="@drawable/underline"
                    android:drawablePadding="5dp"
                    android:gravity="left"
                    android:hint="Enter Homework"
                    android:inputType="textCapWords"
                    android:singleLine="true"
                    android:textColor="@color/black_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:padding="2dp"
                        android:text="CLASS"
                        android:textColor="@color/greytxt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:padding="2dp"
                        android:text="*"

                        android:textColor="#ff0000" />


                </LinearLayout>


                <TextView
                    android:id="@+id/task_attendee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@null"
                    android:drawableBottom="@drawable/underline"
                    android:drawablePadding="3dp"
                    android:drawableRight="@drawable/drop_down_arrowxxhdpi"
                    android:gravity="left"
                    android:paddingBottom="5dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp"
                    android:textColor="@color/black_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:text="DUE"
                        android:textColor="@color/greytxt_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:padding="2dp"
                        android:text="*"
                        android:textColor="#ff0000" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/due_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:drawableBottom="@drawable/underline"
                        android:drawablePadding="3dp"
                        android:drawableRight="@drawable/drop_down_arrowxxhdpi"
                        android:gravity="left"
                        android:lines="1"
                        android:paddingBottom="5dp"
                        android:paddingLeft="2dp"
                        android:paddingTop="5dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:background="@color/white_color"
                android:orientation="vertical"
                android:paddingBottom="20dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="2dp"
                    android:text="NOTES"
                    android:textColor="@color/greytxt_color" />

                <EditText
                    android:id="@+id/homework_notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableBottom="@drawable/underline"
                    android:drawablePadding="5dp"
                    android:hint="Add a note"
                    android:inputType="textCapWords|textMultiLine"
                    android:paddingBottom="5dp"
                    android:paddingLeft="2dp"
                    android:paddingTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black_color" />

                <TextView
                    android:id="@+id/add_attachments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/add_xxhdpi"
                    android:drawablePadding="20dp"
                    android:gravity="center"
                    android:text="ADD ATTACHMENTS"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/home_light_blue"
                    android:textStyle="bold" />

                <com.mycity4kids.widget.CustomListView
                    android:id="@+id/homework_attachment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="40dp"
                    android:paddingRight="30dp">

                </com.mycity4kids.widget.CustomListView>

            </LinearLayout>

            <com.mycity4kids.widget.CustomListView
                android:id="@+id/list_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_color"
                android:paddingBottom="5dp"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">

            </com.mycity4kids.widget.CustomListView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>