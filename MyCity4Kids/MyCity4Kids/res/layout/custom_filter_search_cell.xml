<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/childLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/common_img"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/default_img" />

    <TextView
        android:id="@+id/author_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/common_img"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="-5dp"
        android:layout_toRightOf="@id/common_img"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/btn_bg_blue"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/common_search_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/common_img"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#484848" />

    <TextView
        android:id="@+id/blog_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/common_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/common_img"
        android:singleLine="true"
        android:textColor="#545454"
        android:textSize="12sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>