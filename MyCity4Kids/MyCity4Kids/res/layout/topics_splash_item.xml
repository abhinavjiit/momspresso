<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <ImageView
        android:id="@+id/topicsBackgroundImageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:scaleType="fitXY" />

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#80000000" />

    <TextView
        android:id="@+id/parentCategoryTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/arrow_right"
        android:drawableTint="@color/white_color"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingTop="7dp"
        android:text="Pregnancy"
        android:textColor="@color/white_color"
        android:textSize="18sp" />

    <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/parentCategoryTextView">

        <LinearLayout
            android:id="@+id/popularSubcatLL_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:background="@drawable/topics_transparent_bg"
            android:clickable="true">

            <TextView
                android:id="@+id/popularSubcatTextView_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text=""
                android:textColor="@color/white_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popularSubcatLL_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/popularSubcatLL_1"
            android:background="@drawable/topics_transparent_bg"
            android:clickable="true">

            <TextView
                android:id="@+id/popularSubcatTextView_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text=""
                android:textColor="@color/white_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popularSubcatLL_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_toRightOf="@+id/popularSubcatLL_2"
            android:background="@drawable/topics_transparent_bg"
            android:clickable="true">

            <TextView
                android:id="@+id/popularSubcatTextView_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text=""
                android:textColor="@color/white_color" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/popularSubcatLL_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/popularSubcatLL_3"
            android:background="@drawable/topics_transparent_bg"
            android:clickable="true">

            <TextView
                android:id="@+id/popularSubcatTextView_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text=""
                android:textColor="@color/white_color" />
        </LinearLayout>
    </org.apmem.tools.layouts.FlowLayout><!--<RelativeLayout--><!--android:layout_width="wrap_content"--><!--android:layout_height="100dp"--><!--android:background="@drawable/default_article">-->
    <!----><!--</RelativeLayout>-->
</RelativeLayout>