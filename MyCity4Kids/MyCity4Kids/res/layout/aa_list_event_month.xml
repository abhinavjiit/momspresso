<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/appointment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/colorCode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".02"
            android:orientation="vertical"
            android:paddingBottom="2dp"
            android:paddingTop="2dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/appoint_time_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".24"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/appoint_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:textColor="@color/grey"
                android:textSize="16dp" />


            <ImageView
                android:id="@+id/event_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@drawable/cake_xxhdpi"
                />

        </LinearLayout>

        <!--<TextView-->
            <!--android:id="@+id/appoint_time"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight=".24"-->
            <!--android:padding="5dp"-->
            <!--android:textColor="@color/grey"-->
            <!--android:textSize="16dp" />-->

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".73"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical|left"
                android:layout_toLeftOf="@+id/appointment_notes"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/appoint_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="manisjkadashgdf"
                    android:textColor="@color/new_grey"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/appoint_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/grey"
                    android:textSize="12dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/appointment_notes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center|right"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="0dp"
                android:src="@drawable/note_xxhdpi"
                android:visibility="gone" />


        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/no_appointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="2dp"
        android:text="No appointment scheduled"
        android:textColor="@color/grey"
        android:textSize="12dp" />
</LinearLayout>
