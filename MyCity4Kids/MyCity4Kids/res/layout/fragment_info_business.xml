<?xml version="1.0" encoding="utf-8"?>
<com.mycity4kids.observablescrollview.ObservableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_bg_blue"
    android:fillViewport="true"
    android:overScrollMode="never">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="8dp"
        android:background="@color/white_color"
        android:paddingBottom="80dp">

        <RelativeLayout
            android:id="@+id/leftRightContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/rightElementsContainer"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:visibility="gone">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/CustomRatingInfoBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:clickable="false"
                    android:focusable="false"
                    android:isIndicator="true"
                    android:minHeight="22dp" />

                <TextView
                    android:id="@+id/like_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ratingBar"
                    android:layout_below="@id/ratingBar"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/fav_icon"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="#437cd8"
                    android:textSize="@dimen/common_textsize_h3"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/locality_distance_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ratingBar"
                    android:layout_below="@id/like_txt"
                    android:layout_marginLeft="-4dp"
                    android:layout_marginTop="7dp"
                    android:drawableLeft="@drawable/locality_icon"
                    android:drawablePadding="2dp"
                    android:gravity="center_vertical"
                    android:textColor="#437cd8"
                    android:textSize="@dimen/common_textsize_h3"
                    android:textStyle="normal" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_alignBaseline="@id/rightElementsContainer"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/rightElementsContainer"
                android:visibility="gone">

                <TextView
                    android:id="@+id/sub_address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:paddingTop="2dp"
                    android:text="@string/sub_address_txt"
                    android:textColor="@color/common_grey_1"
                    android:textSize="@dimen/common_textsize_h2"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/address_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/sub_address_txt"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:paddingTop="2dp"
                    android:singleLine="false"
                    android:text="@string/address_txt"
                    android:textColor="@color/common_grey_1"
                    android:textSize="@dimen/common_textsize_h2"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/locality_txt"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentBottom="true"
                    android:ellipsize="end"
                    android:paddingTop="8dp"
                    android:singleLine="true"
                    android:text="@string/address_locality_txt"
                    android:textColor="@color/common_grey_1"
                    android:textSize="@dimen/common_textsize_h2" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/book_now_btn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/leftRightContainer"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layer_bg_btn"
            android:gravity="center_vertical|center_horizontal"
            android:text="Book Now"
            android:textColor="@color/white_color"
            android:textSize="@dimen/common_textsize_h2"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/book_now_btn"
            android:layout_margin="10dp"
            android:background="@drawable/bg_for_details"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/txv_btn_call"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/call_icon"
                android:gravity="center"
                android:padding="5dp"
                android:text="Call"
                android:textColor="#d82384"
                android:textSize="@dimen/common_textsize_h3"
                android:textStyle="bold" />

            <View
                android:id="@+id/calldivider"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cbcbcb" />

            <TextView
                android:id="@+id/txv_btn_add_review"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/add_review_icon"
                android:gravity="center"
                android:padding="5dp"
                android:text="Add Review"
                android:textColor="@color/common_grey_1"
                android:textSize="@dimen/common_textsize_h3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txv_btn_add_calender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/calander_icon"
                android:gravity="center"
                android:padding="5dp"
                android:text="Add to Calender"
                android:textColor="@color/common_grey_1"
                android:textSize="@dimen/common_textsize_h3"
                android:textStyle="bold"
                android:visibility="gone" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#cbcbcb" />

            <TextView
                android:id="@+id/txv_btn_add_photo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/add_photo"
                android:gravity="center"
                android:padding="5dp"
                android:text="Add Photo"
                android:textColor="@color/common_grey_1"
                android:textSize="@dimen/common_textsize_h3"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txv_btn_invite_frnd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight=".33"
                android:drawablePadding="4dp"
                android:drawableTop="@drawable/share_with_frnds"
                android:gravity="center"
                android:padding="5dp"
                android:text="Share"
                android:textColor="@color/common_grey_1"
                android:textSize="@dimen/common_textsize_h3"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/organised_by_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linearLout"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/organiser_xxhdpi"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="ORGANISER"

            android:textSize="13dp" />

        <TextView
            android:id="@+id/organised_by_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/organised_by_txt"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:text="@string/organised_by"
            android:textColor="#424242"
            android:textSize="14dp" />

        <View
            android:id="@+id/separator_org"
            style="@style/Divider"
            android:layout_width="match_parent"
            android:layout_below="@id/organised_by_desc" />

        <LinearLayout
            android:id="@+id/batches_lout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_org"
            android:orientation="vertical"></LinearLayout>

        <TextView
            android:id="@+id/activities_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/batches_lout"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/activity_xxhdpi"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"

            android:paddingTop="2dp"
            android:text="ACTIVITIES"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/activitiest_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activities_txt"
            android:layout_marginTop="8dp"
            android:drawablePadding="7dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:text="@string/activities_txt"
            android:textColor="#424242"
            android:textSize="14dp" />

        <View
            android:id="@+id/separator_act"
            style="@style/Divider"
            android:layout_below="@id/activitiest_desc" />

        <TextView
            android:id="@+id/age_group_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_act"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/age_group_xxhdpi"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:text="AGE GROUP"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/age_group_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/age_group_txt"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:text="@string/age_grout_txt"
            android:textColor="#424242"
            android:textSize="14dp" />

        <View
            android:id="@+id/separator_age"
            style="@style/Divider"
            android:layout_below="@id/age_group_desc" />

        <TextView
            android:id="@+id/event_dates_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_age"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/date_xxhdpi"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="DATE"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/event_dates_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_dates_txt"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:text="@string/event_dates_txt"
            android:textColor="#424242"
            android:textSize="14dp" />

        <View
            android:id="@+id/separator_event"
            style="@style/Divider"
            android:layout_below="@id/event_dates_desc" />

        <TextView
            android:id="@+id/timings_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_event"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/time_xxhdpi"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="TIME"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/timings_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/timings_txt"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:text="@string/activities_txt"
            android:textColor="#424242"
            android:textSize="14dp" />

        <View
            android:id="@+id/separator_timing"
            style="@style/Divider"
            android:layout_below="@id/timings_desc" />

        <TextView
            android:id="@+id/cost_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_timing"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/contact_xxhdpi"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="COST"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/cost_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cost_txt"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:text="@string/cost_txt"
            android:textColor="#424242"
            android:textSize="14dp" />

        <View
            android:id="@+id/separator_cost"
            style="@style/Divider"
            android:layout_below="@id/cost_desc" />

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_cost"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/description_xxhdpi"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="8dp"
            android:text="DESCRIPTION"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/description_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_txt"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:text="@string/description_txt"
            android:textColor="#424242"
            android:textSize="14dp" />

        <View
            android:id="@+id/separator_description"
            style="@style/Divider"
            android:layout_below="@id/description_desc" />

        <TextView
            android:id="@+id/additional_info_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_description"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/additional_information_icon"
            android:drawablePadding="7dp"
            android:gravity="top|left"
            android:paddingLeft="5dp"
            android:text="@string/additional_info"
            android:visibility="gone" />

        <TextView
            android:id="@+id/additional_info_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/additional_info_txt"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="-5dp"
            android:text="@string/additional_info"
            android:textColor="@color/common_grey_2"
            android:textSize="@dimen/common_textsize_h2"
            android:visibility="gone" />

        <View
            android:id="@+id/separator_additional"
            style="@style/Divider"
            android:layout_below="@id/additional_info_desc" />

        <TextView
            android:id="@+id/facility_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_additional"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/facilities_"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:text="FACILITIES"
            android:textSize="13dp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/additional_lout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/facility_txt"
            android:orientation="vertical">

        </LinearLayout>

        <View
            android:id="@+id/separator_extra"
            style="@style/Divider"
            android:layout_below="@id/additional_lout"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/about_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_extra"
            android:drawableLeft="@drawable/description_xxhdpi"
            android:drawablePadding="7dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="13dp"
            android:paddingRight="8dp"
            android:text="ABOUT"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/about_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/about_txt"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:text="@string/about_txt"
            android:textColor="#424242"
            android:textSize="14dp" />

        <View
            android:id="@+id/separator_about"
            style="@style/Divider"
            android:layout_below="@id/about_desc" />

        <TextView
            android:id="@+id/contact_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator_about"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/contact_xxhdpi"
            android:drawablePadding="5dp"
            android:fontFamily="sans-serif"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:paddingTop="3dp"
            android:text="CONTACT"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/contact_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_txt"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:textColor="#424242"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/contact_person_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_desc"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:textColor="#424242"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/email_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_person_desc"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:textColor="#424242"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/website_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_desc"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:paddingLeft="17dp"
            android:paddingRight="15dp"
            android:textColor="#424242"
            android:textSize="14dp"
            android:visibility="gone" />
    </RelativeLayout>

</com.mycity4kids.observablescrollview.ObservableScrollView>