<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/quickLinkContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rewardsContainer"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/round_border_groups">

                <ImageView
                    android:id="@+id/rewardsImageView"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="24dp"
                    android:alpha="0.6"
                    android:src="@drawable/ic_rupee"
                    android:tint="@color/white" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/rewardsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rewardsImageView"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/rewards_program"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontName="oswald_regular.ttf" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/videosContainer"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/round_border_momsvlog">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/videoImageView"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="24dp"
                    android:alpha="0.6"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/ic_mom_vlogs_white" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/videosTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/videoImageView"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/all_videos.tabbar.funny_label"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontName="oswald_regular.ttf" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/momsTVContainer"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/round_border_videos">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/momsTVImageView"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="24dp"
                    android:alpha="0.6"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/video_grey" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/momsTVTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/momsTVImageView"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="4dp"
                    android:text="@string/all_videos.tabbar.momspresso_label"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontName="oswald_regular.ttf" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/storyContainer"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/round_border_story">

                <ImageView
                    android:id="@+id/storyImageView"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="24dp"
                    android:alpha="0.6"
                    android:src="@drawable/shortstory_grey"
                    android:tint="@color/white" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/storyTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/storyImageView"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/myprofile.section.short_story_label"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontName="oswald_regular.ttf" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/groupsContainer"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/round_border_groups">

                <ImageView
                    android:id="@+id/groupImageView"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="24dp"
                    android:alpha="0.6"
                    android:src="@drawable/ic_group_icon"
                    android:tint="@color/white" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/groupsTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/groupImageView"
                    android:layout_marginBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/groups.support_groups"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontName="oswald_regular.ttf" />
            </RelativeLayout>

            <!--<LinearLayout-->
            <!--android:layout_width="100dp"-->
