            <!--android:layout_margin="8dp"-->
            <!--android:background="#0ea2e8"-->
            <!--android:orientation="vertical">-->

            <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:padding="10dp"-->
            <!--android:src="@drawable/tab5_selected" />-->

            <!--<com.mycity4kids.widget.CustomFontTextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:layout_marginTop="10dp"-->
            <!--android:padding="10dp"-->
            <!--android:text="Trending"-->
            <!--android:textColor="@color/white"-->
            <!--android:textSize="14sp"-->
            <!--app:fontName="oswald_regular.ttf" />-->
            <!--</LinearLayout>-->

        </LinearLayout>
    </HorizontalScrollView>

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/exploreCategoriesLabel"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/explore_listing.explore_categories.title"
        android:textColor="@color/explore_listing.explore_categories.title"
        android:textSize="16sp"
        app:fontName="oswald.ttf" />
</LinearLayout>