    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="3">

        <RelativeLayout
            android:id="@+id/videosContainer"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/round_border_videos">

            <ImageView
                android:id="@+id/videoImageView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:alpha="0.6"
                android:src="@drawable/video_grey"
                android:tint="@color/white" />

            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/videoImageView"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="VIDEOS"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontName="oswald_regular.ttf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/storyContainer"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/round_border_story">

            <ImageView
                android:id="@+id/storyImageView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:alpha="0.6"
                android:src="@drawable/shortstory_grey"
                android:tint="@color/white" />

            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/storyImageView"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontName="oswald_regular.ttf" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/groupsContainer"
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:background="@drawable/round_border_groups">

            <ImageView
                android:id="@+id/groupImageView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:alpha="0.6"
                android:src="@drawable/ic_group_icon"
                android:tint="@color/white" />

            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/groupImageView"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="SUPPORT GROUPS"
                android:textColor="@color/white"
                android:textSize="18sp"
                app:fontName="oswald_regular.ttf" />
        </RelativeLayout>

