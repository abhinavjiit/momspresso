<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:background="@drawable/shape_shadow_rectangle"
    android:paddingBottom="10dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <RelativeLayout
        android:id="@+id/announcementContainerR"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/uploadVideoImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@color/fab_button_bottom_sheet"
            android:scaleType="center"
            android:gravity="center">

            <ImageView
                android:background="@drawable/ic_audio_01"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <com.mycity4kids.widget.CustomFontTextView
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/uploadVideoImage"
            android:text="@string/voise_post_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontName="open_sans.ttf" />

    </RelativeLayout>

    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/pollContainerR"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/ic_poll"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@color/fab_button_bottom_sheet"
            android:scaleType="center"
            android:gravity="center">
            
            <ImageView
                android:background="@drawable/ic_poll_01"
                android:layout_width="50dp"
                android:layout_height="50dp" />
            
        </LinearLayout>

        <com.mycity4kids.widget.CustomFontTextView
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ic_poll"
            android:text="@string/poll_post_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontName="open_sans.ttf" />

    </RelativeLayout>

    <View
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/postContainerR"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_alignParentEnd="true"
            android:id="@+id/ic_post"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@color/fab_button_bottom_sheet"
            android:scaleType="center"
            android:gravity="center">

            <ImageView
                android:background="@drawable/ic_post_01"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <com.mycity4kids.widget.CustomFontTextView
            android:textSize="14sp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ic_post"
            android:text="@string/blog_post_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:fontName="open_sans.ttf" />

    </RelativeLayout>

</LinearLayout>