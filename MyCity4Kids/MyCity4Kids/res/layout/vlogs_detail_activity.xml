<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/anim_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="5dp"
        android:minHeight="?attr/actionBarSize"
        android:visibility="visible"
        app:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/ToolbarTheme.Title" />

    <fragment
        android:id="@+id/youtube_fragment"
        android:name="com.google.android.youtube.player.YouTubePlayerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anim_toolbar" />

    <com.mycity4kids.observablescrollview.ObservableScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_Lout"
        android:layout_below="@+id/youtube_fragment">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-thin"
                android:gravity="center_vertical"
                android:lineSpacingExtra="-4dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text=""
                android:textColor="@color/ad.title"
                android:textSize="28sp"
                app:fontName="_ptsan_.ttf" />

            <TextView
                android:id="@+id/articleViewCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/article_title"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="10dp"
                android:text="Article Views"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/article_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/article_title"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/articleViewCountTextView"
                android:fontFamily="sans-serif-thin"
                android:text="Article Date"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <!--<ImageView-->
            <!--android:id="@+id/cover_image"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/article_details_app_bar_height"-->
            <!--android:layout_below="@+id/articleViewCountTextView"-->
            <!--android:paddingLeft="10dp"-->
            <!--android:paddingRight="10dp"-->
            <!--android:scaleType="fitXY"-->
            <!--android:src="@drawable/default_article" />-->

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/articleViewCountTextView"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@drawable/default_commentor_img"
                app:civ_border="true"
                app:civ_border_color="@color/white_color"
                app:civ_border_width="0dp"
                app:civ_shadow="true"
                app:civ_shadow_color="@color/grey"
                app:civ_shadow_radius="4" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/articleViewCountTextView"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/user_image"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="author name"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/blogger_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_toRightOf="@+id/user_image"
                android:fontFamily="sans-serif-thin"
                android:paddingLeft="10dp"
                android:paddingTop="2dp"
                android:text="USER"
                android:textColor="@color/blue_light"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/follow_click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/articleViewCountTextView"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:text="FOLLOW"
                android:textColor="@color/blog.comments.follow_reply_btn"
                android:textSize="14sp" />

            <!--<WebView-->
            <!--android:id="@+id/articleWebView"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/follow_click"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:autoLink="web"-->
            <!--android:background="@color/white_color"-->
            <!--android:ellipsize="end"-->
            <!--android:fontFamily="sans-serif-light"-->
            <!--android:minHeight="1000dp" />-->

            <org.apmem.tools.layouts.FlowLayout
                android:id="@+id/tagsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/follow_click"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="4dp"
                android:background="@color/white_color">

            </org.apmem.tools.layouts.FlowLayout>

            <LinearLayout
                android:id="@+id/recentAuthorArticles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tagsLayout"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/recentAuthorArticleHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="RECENT BLOGS FROM"
                    android:textAllCaps="true"
                    android:textColor="@color/primary_blue"
                    android:textSize="@dimen/ad_recent" />

                <com.mycity4kids.widget.RelatedArticlesView
                    android:id="@+id/relatedArticles1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:articleImage="@drawable/progress_spinner"
                    app:articleTitle="labda" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2" />

                <com.mycity4kids.widget.RelatedArticlesView
                    android:id="@+id/relatedArticles2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:articleImage="@drawable/progress_spinner"
                    app:articleTitle="labda" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2" />

                <com.mycity4kids.widget.RelatedArticlesView
                    android:id="@+id/relatedArticles3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:articleImage="@drawable/progress_spinner"
                    app:articleTitle="labda" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/trendingArticles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recentAuthorArticles"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="7dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/trendingArticlesHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="TRENDING VIDEOS"
                    android:textColor="@color/primary_blue"
                    android:textSize="@dimen/ad_trending" />

                <com.mycity4kids.widget.RelatedArticlesView
                    android:id="@+id/trendingRelatedArticles1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:articleImage="@drawable/progress_spinner"
                    app:articleTitle="labda" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2" />

                <com.mycity4kids.widget.RelatedArticlesView
                    android:id="@+id/trendingRelatedArticles2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:articleImage="@drawable/progress_spinner"
                    app:articleTitle="labda" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2" />

                <com.mycity4kids.widget.RelatedArticlesView
                    android:id="@+id/trendingRelatedArticles3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    app:articleImage="@drawable/progress_spinner"
                    app:articleTitle="labda" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f2f2f2" />
            </LinearLayout>

            <TextView
                android:id="@+id/commentsHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/trendingArticles"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp"
                android:text="COMMENTS"
                android:textColor="@color/primary_blue"
                android:textSize="@dimen/ad_comments_heading" />

            <LinearLayout
                android:id="@+id/commnetLout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/commentsHeading"
                android:minHeight="5dp"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- <add comment dynamically> -->
            </LinearLayout>

            <TextView
                android:id="@+id/bottomSpacingTextView"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/commnetLout" />
        </RelativeLayout>
    </com.mycity4kids.observablescrollview.ObservableScrollView>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/recommendFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_Lout"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="17dp"
        app:fab_colorNormal="@color/white_color"
        app:fab_colorPressed="@color/white_color"
        app:fab_icon="@drawable/heart_outline"
        app:fab_plusIconColor="@color/white_color"
        app:fab_size="normal" />

    <com.github.library.bubbleview.BubbleTextVew
        android:id="@+id/recommendSuggestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_Lout"
        android:layout_marginBottom="32dp"
        android:layout_toLeftOf="@+id/recommendFloatingActionButton"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/ad.recommendation.tootip_text"
        android:textColor="@color/white_color"
        android:visibility="invisible"
        app:angle="5dp"
        app:arrowHeight="8dp"
        app:arrowLocation="right"
        app:arrowPosition="12dp"
        app:arrowWidth="8dp"
        app:bubbleColor="@color/ad.recommend.tooltip.bg" />

    <LinearLayout
        android:id="@+id/bottom_Lout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeLoadingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_Lout"
            android:layout_centerHorizontal="true"
            android:background="#80000000"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <View
                android:id="@+id/sepaartorView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="1dp"
                android:background="#DEDEDE" />

            <TextView
                android:id="@+id/txvLoadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sepaartorView"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/loading_txt"
                android:textColor="@color/white_color" />

            <ImageView
                android:id="@+id/imgLoader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sepaartorView"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@id/txvLoadMore"
                android:src="@drawable/progress_spinner" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/editCommentTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".87"
                android:background="@drawable/edit_text"
                android:gravity="top|left"
                android:hint="@string/write_comment"
                android:maxLines="4"
                android:padding="12dp"
                android:singleLine="false"
                android:textColor="@color/black_color"
                android:textSize="@dimen/ad_comments_edit_text"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/addCommentLinearLayout"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_gravity="bottom"
                android:layout_weight=".13"
                android:background="@color/primary_blue"
                android:gravity="center">

                <ImageView
                    android:id="@+id/add_comment_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/send_new"
                    android:clickable="true" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/add_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/a_baseblue"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/leave_comment"
            android:textColor="@color/white_color"
            android:textSize="@dimen/common_button_txt_size"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>