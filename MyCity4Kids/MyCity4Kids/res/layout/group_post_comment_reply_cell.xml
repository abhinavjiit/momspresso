<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/replyRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/relativeMainContainer"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView
        android:id="@+id/replyMarkImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/author_img"
        android:src="@drawable/ic_comments_arrow"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/replyUserImageView"
        android:layout_width="@dimen/ad_comments_profile_pic_width"
        android:layout_height="@dimen/ad_comments_profile_pic_width"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/replyMarkImageView"
        android:contentDescription="@string/author_img"
        android:src="@drawable/default_commentor_img"
        android:visibility="visible" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/replyTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@+id/replyUserImageView"
        android:layout_toRightOf="@+id/replyUserImageView"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="false"
        android:text="Reply Title"
        android:textColor="@color/ad.comment.username"
        android:textSize="@dimen/ad_comments_username"
        app:fontName="oswald_regular.ttf" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/replyDescTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/replyTitleTextView"
        android:layout_alignStart="@+id/replyTitleTextView"
        android:layout_below="@id/replyTitleTextView"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:singleLine="false"
        android:text="Reply Desc"
        android:textColor="@color/ad.comment.body"
        android:textSize="@dimen/ad_comments_text"
        app:fontName="open_sans.ttf" />

    <LinearLayout
        android:id="@+id/replyContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/replyTitleTextView"
        android:layout_alignStart="@+id/replyTitleTextView"
        android:layout_below="@+id/replyDescTextView"
        android:orientation="horizontal">

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/replyReplyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Reply"
            android:textColor="@color/ad.comment.date"
            android:textSize="@dimen/ad_comments_date"
            app:fontName="oswald.ttf" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/replyDateDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:text="Date"
            android:textColor="@color/ad.comment.date"
            android:textSize="@dimen/ad_comments_date"
            app:fontName="oswald.ttf" />
    </LinearLayout>

    <View
        android:id="@+id/underlineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/replyContainer"
        android:layout_marginTop="10dp"
        android:background="@color/grey_light"
        android:visibility="gone" />
</RelativeLayout>