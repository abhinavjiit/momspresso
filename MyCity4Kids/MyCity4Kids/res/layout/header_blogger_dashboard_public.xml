<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--<android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize">

    </android.support.v7.widget.Toolbar>-->

    <ImageView
        android:id="@+id/bloggerImageView"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_below="@+id/toolbar"
        android:layout_margin="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/family_xxhdpi" />

    <RelativeLayout
        android:id="@+id/infoRelativeLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="22.67dp"
        android:layout_toRightOf="@id/bloggerImageView"

        >

        <LinearLayout
            android:id="@+id/rankLinearLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/followTextView"
            android:layout_toRightOf="@+id/FollowersLinearLL"
            android:layout_toStartOf="@+id/followTextView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rankingTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:text="--"
                android:textSize="32sp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Rank"
                android:textColor="@color/grey_faded"
                android:textSize="13sp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/FollowersLinearLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/followTextView"
            android:layout_alignStart="@+id/followTextView"
            android:layout_toLeftOf="@+id/FollowingLinearLL"
            android:layout_toStartOf="@+id/FollowingLinearLL"
            android:orientation="vertical">

            <TextView
                android:id="@+id/followersTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:text="--"
                android:textSize="32sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Followers"
                android:textColor="@color/grey_faded"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/FollowingLinearLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/followingTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="sans-serif-thin"
                android:gravity="center"
                android:text="--"
                android:textSize="32sp"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:text="Followings"
                android:textColor="@color/grey_faded"
                android:textSize="13sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/editProfileTextView"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:layout_below="@+id/rankLinearLL"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#ededed"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="EDIT YOUR PROFILE"
            android:textColor="#525252"
            android:textSize="14sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/followTextView"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rankLinearLL"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/follow_button_bg"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Follow"
            android:textColor="@color/blog.comments.follow_reply_btn"
            android:textSize="12sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/unfollowTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rankLinearLL"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/following_button_bg"
            android:gravity="center"
            android:paddingBottom="8dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:text="Following"
            android:textColor="@color/white_color"
            android:textSize="12sp"
            android:visibility="invisible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/userBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/infoRelativeLL"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif-light"
        android:textSize="15sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/more_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/userBio"
        android:gravity="right"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="2dp"
        android:text="More"
        android:textColor="@color/red_selected"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/blogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userBio"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/black_color"
        android:textSize="17sp"
        android:visibility="visible" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/blogName"
        android:background="@color/login_grey" />

    <LinearLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/blogName"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/draftItemLinearlayout"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1"
            android:visibility="gone">

            <ImageView
                android:id="@+id/draftImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_draft"
                android:tint="#f1455f" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/login_grey" />

        <LinearLayout
            android:id="@+id/publishedItemLinearlayout"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/publishedImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_publish" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/login_grey" />

        <LinearLayout
            android:id="@+id/commentsItemLinearlayout"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/commentsImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_comments" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/login_grey" />

        <LinearLayout
            android:id="@+id/reviewItemLinearLayout"
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/reviewImageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_review" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tabs"
        android:background="@color/login_grey" />

    <TextView
        android:id="@+id/noDraftsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="No Drafts have been saved yet"
        android:visibility="gone" />

    <TextView
        android:id="@+id/noArticlesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="No Articles Published"
        android:visibility="gone" />

    <TextView
        android:id="@+id/noCommentsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="No Comments available"
        android:visibility="gone" />

    <TextView
        android:id="@+id/noReviewTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tabs"
        android:layout_centerInParent="true"
        android:layout_marginTop="5dp"
        android:text="No Reviews available"
        android:visibility="gone" />

</RelativeLayout>