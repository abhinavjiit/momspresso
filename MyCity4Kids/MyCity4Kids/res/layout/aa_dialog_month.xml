<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/month_popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_dialog_monthbg"
    android:orientation="vertical"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_color"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/back_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:src="@drawable/previous_arrow_xxhdpi"
            android:text="back" />

        <TextView
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5dp"
            android:text="2015"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black_color" />


        <ImageView
            android:id="@+id/next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="false"
            android:layout_marginRight="20dp"
            android:layout_marginTop="7dp"
            android:gravity="center_horizontal|center_vertical"
            android:padding="10dp"
            android:src="@drawable/next_arrow_xxhdpi"
            android:text="next" />

    </RelativeLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white_color"
        android:padding="10dp">

        <TableRow>


            <TextView
                android:id="@+id/jan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="JAN"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

            <TextView
                android:id="@+id/feb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="FEB"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

            <TextView
                android:id="@+id/mar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="MAR"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

            <TextView
                android:id="@+id/apr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="APR"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/may"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="MAY"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

            <TextView
                android:id="@+id/june"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="JUN"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

            <TextView
                android:id="@+id/july"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="JUL"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

            <TextView
                android:id="@+id/aug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="AUG"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

        </TableRow>

        <TableRow>


            <TextView
                android:id="@+id/sept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="5dp"
                android:text="SEP"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

            <TextView
                android:id="@+id/oct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="OCT"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

            <TextView
                android:id="@+id/nov"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="NOV"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

            <TextView
                android:id="@+id/dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:padding="10dp"
                android:text="DEC"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/red_drawer_selected" />

        </TableRow>


    </TableLayout>


</LinearLayout>