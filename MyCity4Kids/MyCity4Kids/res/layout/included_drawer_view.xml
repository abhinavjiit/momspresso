<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_drawerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d55f1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:src="@drawable/logo_new" />

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/family_xxhdpi" />

        <TextView
            android:id="@+id/txvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Name"
            android:textColor="@color/white_color"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/rdBtnToday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="@drawable/selector_drawer_menu"
                android:button="@null"
                android:checked="true"
                android:drawableLeft="@drawable/today_icon"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:text="MYCITY4KIDS TODAY"
                android:textColor="@color/white_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rdBtnParentingBlogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/selector_drawer_menu"
                android:button="@null"
                android:drawableLeft="@drawable/parenting"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:text="PARENTING BLOGS"
                android:textColor="@color/white_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rdBtnCalender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/selector_drawer_menu"
                android:button="@null"
                android:drawableLeft="@drawable/calendar_new"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:text="CALENDAR"
                android:textColor="@color/white_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- <RadioButton
                 android:id="@+id/rdBtnTodo"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="2dp"
                 android:background="@drawable/selector_drawer_menu"
                 android:button="@null"
                 android:drawableLeft="@drawable/todo"
                 android:drawablePadding="10dp"
                 android:padding="12dp"
                 android:text="TO-DO LISTS"
                 android:textColor="@color/white_color"
                 android:textSize="16sp"
                 android:textStyle="bold" />-->

            <RadioButton
                android:id="@+id/rdBtnUpcoming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/selector_drawer_menu"
                android:button="@null"
                android:drawableLeft="@drawable/upcoming_events"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:text="UPCOMING EVENTS"
                android:textColor="@color/white_color"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/rdBtnKids"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/selector_drawer_menu"
                android:button="@null"
                android:drawableLeft="@drawable/kids"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:text="KIDS RESOURCES"
                android:textColor="@color/white_color"
                android:textSize="16sp"
                android:textStyle="bold" />


            <!--  <RadioButton
                  android:id="@+id/editor"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
