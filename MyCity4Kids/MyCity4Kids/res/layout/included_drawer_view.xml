                  android:padding="12dp"
                  android:text="DRAFTS"
                  android:textColor="@color/white_color"
                  android:textSize="16sp"
                  android:textStyle="bold" />-->


        </RadioGroup>

        <TextView
            android:id="@+id/txvfeedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/parenting"
            android:drawablePadding="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:text="SEND FEEDBACK"
            android:textColor="@color/white_color"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txvrate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/parenting"
            android:drawablePadding="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:text="RATE THE APP"
            android:textColor="@color/white_color"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/editor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:drawableLeft="@drawable/icon_add_blog"
            android:drawablePadding="10dp"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:text="ADD A BLOG"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/drafts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:drawableLeft="@drawable/icon_drafts"
            android:drawablePadding="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:text="DRAFTS"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/bloggerDashboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:drawableLeft="@drawable/icon_my_blogs"
            android:drawablePadding="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:text="MY BLOGS"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txvSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:drawableLeft="@drawable/settings_new"
            android:drawablePadding="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:text="SETTINGS"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/feed_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:drawableLeft="@drawable/feedback_xxhdpi"
            android:drawablePadding="10dp"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingTop="5dp"
            android:text="SEND FEEDBACK"
            android:textColor="@color/white_color"
            android:textSize="12sp" />

