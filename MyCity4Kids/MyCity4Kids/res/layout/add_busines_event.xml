<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:layout_width="match_parent"
        android:layout_height="50dp"
        layout="@layout/common_header_bar" />

    <TextView
        android:id="@+id/add_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="left"
        android:text="@string/add_business_description"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/header_color"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/add_businees_or_event_etxt"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext_ractangle"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
        android:drawableLeft="@drawable/rsz_add_event"
        android:drawablePadding="5dp"
        android:hint="@string/add_business_hint"
        android:inputType="textPersonName"
        android:maxLength="50"
        android:textColorHint="@color/edit_hint_color"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/contact_edit_txt"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_edittext_ractangle"
        android:digits="0123456798"
        android:drawableLeft="@drawable/rsz_contact_img"
        android:drawablePadding="5dp"
        android:hint="@string/add_business_contact"
        android:inputType="phone"
        android:maxLength="10"
        android:textColorHint="@color/edit_hint_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txtSentBtn"
        style="@style/custom_style"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_btn_background"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="SEND"
        android:textColor="@color/white_color"
        android:textSize="@dimen/common_button_txt_size" />

</LinearLayout>