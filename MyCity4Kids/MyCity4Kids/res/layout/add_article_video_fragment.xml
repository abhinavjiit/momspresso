<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#545454"
    android:clickable="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/uploadVideoImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/uploadVideoTextView"
        android:layout_alignRight="@+id/writeArticleImageView"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circular_image_bg"
        android:scaleType="center"
        android:src="@drawable/ic_ulpload_video_icon" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/uploadVideoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/suggestedTopicImageView"
        android:layout_alignEnd="@+id/becomeBloggerTextView"
        android:layout_alignLeft="@+id/becomeBloggerTextView"
        android:layout_alignRight="@+id/becomeBloggerTextView"
        android:layout_alignStart="@+id/becomeBloggerTextView"
        android:layout_marginBottom="25dp"
        android:gravity="center"
        android:text="@string/add_article_or_video.upload_video"
        android:textColor="@color/white"
        app:fontName="oswald.ttf" />

    <ImageView
        android:id="@+id/suggestedTopicImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/suggestedTopicTextView"
        android:layout_alignEnd="@+id/becomeBloggerTextView"
        android:layout_alignRight="@+id/becomeBloggerTextView"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/circular_image_bg"
        android:scaleType="center"
        android:src="@drawable/ic_suggested_topics"
        android:visibility="visible" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/suggestedTopicTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/writeArticleImageView"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="@string/add_article_or_video.suggested_topic"
        android:textColor="@color/white"
        android:visibility="visible"
        app:fontName="oswald.ttf" />

    <ImageView
        android:id="@+id/writeArticleImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/becomeBloggerTextView"
        android:layout_alignEnd="@+id/becomeBloggerTextView"
        android:layout_alignRight="@+id/becomeBloggerTextView"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/circular_image_bg"
        android:scaleType="center"
        android:src="@drawable/ic_write_white"
        android:visibility="visible" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/writeArticleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="10dp"
        android:text="@string/add_article_or_video.write_article"
        android:textColor="@color/white"
        android:visibility="visible"
        app:fontName="oswald.ttf" />

    <ImageView
        android:id="@+id/setUpBlogImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/becomeBloggerTextView"
        android:layout_alignEnd="@+id/becomeBloggerTextView"
        android:layout_alignRight="@+id/becomeBloggerTextView"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/circular_image_bg"
        android:scaleType="center"
        android:src="@drawable/ic_become_a_bloger"
        android:visibility="invisible" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/becomeBloggerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="80dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:text="@string/add_article_or_video.become_blogger"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:fontName="oswald.ttf" />
</RelativeLayout>