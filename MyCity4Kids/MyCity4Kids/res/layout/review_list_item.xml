<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:id="@+id/titleContainer"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txvReviewTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="top"
                android:ellipsize="end"
                android:fontFamily="sans-serif-thin"
                android:gravity="top"
                android:maxLines="2"
                android:paddingLeft="10dp"
                android:singleLine="false"
                android:text="@string/title"
                android:textColor="@color/black_color"
                android:textSize="13sp"
                android:layout_marginRight="30dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_below="@+id/txvReviewTitle"
                android:id="@+id/reviewAddress"
                android:fontFamily="sans-serif-thin"
                android:text="Address"
                android:paddingLeft="10dp"
                android:layout_marginTop="3dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom"
                android:gravity="bottom"
                >


                <TextView
                    android:id="@+id/txvPublishDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"

                    android:fontFamily="sans-serif"
                    android:gravity="left"
                    android:layout_gravity="bottom"
                    android:singleLine="true"
                    android:text="@string/article_publish_date"
                    android:textColor="@color/gray2"
                    android:textSize="12dp"
                    android:paddingLeft="10dp"/>
                <TextView
                    android:id="@+id/unapproved"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="UNAPPROVED"
                    android:paddingRight="19dp"
                    android:layout_below="@+id/img_menu"
                    android:textColor="@color/blue_color"
                    android:gravity="right"



                    />
            </LinearLayout>
            <ImageView
                android:id="@+id/img_menu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_more_vert_black_24dp" />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>