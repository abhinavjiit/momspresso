<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/topLineView"
        android:layout_below="@+id/postContentTextView" />

    <com.mycity4kids.widget.CustomFontEditText
        android:id="@+id/writeCommentEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/addCommentImageView"
        android:hint="Write a comment" />

    <ImageView
        android:id="@+id/addCommentImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/writeCommentEditText"
        android:background="@color/black"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/ic_play_tts" />

    <View
        android:id="@+id/topLineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/writeCommentEditText"
        android:background="@color/light_underline" />
</RelativeLayout>