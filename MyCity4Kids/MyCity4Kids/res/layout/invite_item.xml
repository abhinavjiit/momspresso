<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:paddingBottom="10dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/inviteeImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/inviteeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/inviteeImage"
        android:layout_toRightOf="@+id/inviteeImage"
        android:text="Joseph Defrenco"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/inviteeEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inviteeKids"
        android:layout_below="@+id/inviteeName"
        android:layout_toRightOf="@+id/inviteeImage"
        android:gravity="center"
        android:textSize="14sp"
        android:text="joseph@gmail.com"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/inviteeKids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/inviteeImage"
        android:layout_toRightOf="@+id/inviteeImage"
        android:text="kid name1, kid name2" />

    <TextView
        android:id="@+id/cancelInvitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/inviteeImage"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/view"
        android:background="@drawable/rounded_corners"
        android:gravity="center"
        android:padding="10dp"
        android:text="Cancel" />

    <View
        android:id="@+id/view"
        android:layout_width="20dp"
        android:layout_height="1dp"
        android:layout_below="@+id/inviteeImage"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/acceptInvitation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/inviteeImage"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@+id/view"
        android:background="@drawable/blue_bg_rounded_corners"
        android:gravity="center"
        android:padding="10dp"
        android:text="Accept"
        android:textColor="@color/white_color" />
</RelativeLayout>