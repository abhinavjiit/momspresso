<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg"
    android:orientation="vertical"
    android:padding="5dp"
    android:scrollbars="none">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/forYouLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/forYouHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/txtForYou"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".85"
                        android:paddingBottom="3dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:text="FOR YOU"
                        android:textColor="@color/primary_blue"
                        android:textSize="15sp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/forYouProgressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/no_for_you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="No Blogs Listed"
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:id="@+id/forYouHSV"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="1dp"
                    android:divider="@color/dividercolor"
                    android:dividerHeight="0.3dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/forYouHSVLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/blogss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/blogHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/img_go_to_blogs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".12"
                        android:src="@null"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtBlogs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".85"
                        android:paddingBottom="3dp"
                        android:paddingLeft="8dp"
                        android:paddingTop="10dp"
                        android:text="TRENDING BLOGS"
                        android:textColor="@color/primary_blue"
                        android:textSize="15sp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/blogprogressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/no_blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="No Blogs Listed"
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:id="@+id/bloglist"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="1dp"
                    android:divider="@color/dividercolor"
                    android:dividerHeight="0.3dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/hzScrollLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/go_to_blog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/home_goto_blog"
                    android:textColor="@color/home_light_blue"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/momspressoLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/momspressoHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/go_to_momspresso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".12"
                        android:src="@null"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtMomspresso"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".85"
                        android:paddingBottom="3dp"
                        android:paddingLeft="8dp"
                        android:text="MOMSPRESSO VIDEOS"
                        android:textColor="@color/primary_blue"
                        android:textSize="15sp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/momspressoProgressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/no_momspresso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="No Blogs Listed"
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:id="@+id/momspressolist"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="1dp"
                    android:divider="@color/dividercolor"
                    android:dividerHeight="0.3dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/momspressoHZScrollLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/txv_go_to_momspresso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/home_goto_blog"
                    android:textColor="@color/home_light_blue"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/editorPicks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/blogHeader1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/img_go_to_blogs1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".12"
                        android:src="@null"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtBlogs1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".85"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:text="EDITOR'S PICKS"
                        android:textColor="@color/primary_blue"
                        android:textSize="15sp" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/blogprogressbar1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/no_blog1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="No Articles Found"
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:id="@+id/bloglist1"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="1dp"
                    android:divider="@color/dividercolor"
                    android:dividerHeight="0.3dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/hzScrollLinearLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:id="@+id/go_to_blog1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home_goto_blog"
                    android:textColor="@color/home_light_blue"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <!--     </android.support.v7.widget.CardView>-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:visibility="gone">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@color/home_purple"
                        android:orientation="horizontal"

                        android:weightSum="1">


                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".2">

                            <ImageView
                                android:id="@+id/img_go_to_cal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:src="@drawable/calendar_dashboard_list" />

                            <TextView
                                android:id="@+id/current_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_centerHorizontal="true"
                                android:paddingBottom="3dp"
                                android:text="17"
                                android:textColor="@color/black_color" />

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/txtCal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".7"
                            android:paddingBottom="10dp"
                            android:paddingTop="10dp"
                            android:text="@string/home_appointment"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/white_color"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/add_appointment"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight=".1"
                            android:gravity="center"
                            android:padding="5dp"
                            android:src="@drawable/attachment" />

                    </LinearLayout>

                    <com.mycity4kids.widget.CustomListView
                        android:id="@+id/home_appointmentList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/dividercolor"
                        android:dividerHeight="0.3dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/home_bg" />

                    <TextView
                        android:id="@+id/go_to_cal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="15dp"
                        android:text="@string/home_gotoCalendar"
                        android:textColor="@color/home_light_blue"
                        android:textStyle="bold" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/eventsss"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/eventHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:id="@+id/img_go_to_events"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".13"
                        android:src="@null"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txtEvents"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight=".85"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:text="@string/home_events"
                        android:textColor="@color/primary_blue"
                        android:textSize="15sp" />


                </LinearLayout>

                <ProgressBar
                    android:id="@+id/eventprogressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/no_events"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:padding="2dp"
                    android:text="No Events Listed"
                    android:textColor="@color/grey"
                    android:textSize="12dp"
                    android:visibility="gone" />


                <com.mycity4kids.widget.CustomListView
                    android:id="@+id/eventList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@color/dividercolor"
                    android:dividerHeight="0.3dp"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginTop="1dp"
                    android:divider="@color/dividercolor"
                    android:dividerHeight="0.3dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/hzScrollLinearLayoutEvent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:id="@+id/go_to_events"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="@string/home_goto_event"
                    android:textColor="@color/home_light_blue"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </LinearLayout>
            <!--  </android.support.v7.widget.CardView>-->

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/rltLoadingView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/white_color"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <View
                android:id="@+id/sepaartorView"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:background="@color/blue_bg" />

            <TextView
                android:id="@+id/txvLoadMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sepaartorView"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/loading_txt"
                android:textColor="@color/black_color" />

            <ImageView
                android:id="@+id/imgLoader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sepaartorView"
                android:layout_centerVertical="true"
                android:layout_marginTop="4dp"
                android:layout_toLeftOf="@id/txvLoadMore"
                android:src="@drawable/progress_spinner" />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>