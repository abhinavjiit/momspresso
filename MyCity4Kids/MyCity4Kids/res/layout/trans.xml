<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0000000"
    tools:context=".Testt">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#fff">


        <TextView
            android:id="@+id/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="24dp"
            android:text="continue writting"
            android:textSize="17dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_below="@+id/write"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

        </android.support.v7.widget.RecyclerView>


        <TextView
            android:id="@+id/create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerview"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="26dp"
            android:text="create new"
            android:textSize="25dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/recyclerview"
            android:layout_marginLeft="220dp"
            android:layout_marginRight="18dp"
            android:layout_marginTop="28dp"
            android:background="@drawable/border">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:text="edit previous"
                android:textSize="17dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/create"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imgProfile"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:src="@drawable/family_xxhdpi"
                app:civ_border="true"
                app:civ_border_color="@color/line_separator_color"
                app:civ_border_width="1dp"
                app:civ_shadow="false" />


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imgProfile1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:src="@drawable/family_xxhdpi"
                app:civ_border="true"
                app:civ_border_color="@color/line_separator_color"
                app:civ_border_width="1dp"
                app:civ_shadow="false" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imgProfile2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:src="@drawable/family_xxhdpi"
                app:civ_border="true"
                app:civ_border_color="@color/line_separator_color"
                app:civ_border_width="1dp"
                app:civ_shadow="false" />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/imgProfile3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:layout_weight="1"
                android:src="@drawable/family_xxhdpi"
                app:civ_border="true"
                app:civ_border_color="@color/line_separator_color"
                app:civ_border_width="1dp"
                app:civ_shadow="false" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="22dp"
            android:layout_marginStart="33dp"
            android:text="Type 1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginStart="124dp"
            android:text="Type 2" />


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginEnd="130dp"
            android:text="Type 3" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginEnd="42dp"
            android:text="Type 4" />


    </RelativeLayout>
</RelativeLayout>