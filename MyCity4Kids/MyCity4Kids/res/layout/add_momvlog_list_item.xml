<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/short_story_border_bg">

    <RelativeLayout
        android:id="@+id/momVlogLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="4dp">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/addMomVlogImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/mom_vlogs_background_ad"
            android:scaleType="fitXY" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:gravity="bottom|center_horizontal"
            android:lines="2"
            android:maxLines="2"
            android:text="@string/mom_vlog_banner_title"
            android:textColor="@color/white"
            android:textSize="26sp"
            card_view:fontName="Oswald-Medium.ttf" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/videoLogBanner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/sub_title"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:maxLines="1"
            android:text="#GotItFromMyMom"
            android:textColor="@color/white"
            android:textSize="26sp"
            card_view:fontName="Oswald-Medium.ttf" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonsLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:lines="2"
            android:maxLines="2"
            android:text="@string/mom_vlog_banner_subtitle"
            android:textColor="@color/white"
            android:textSize="22sp"
            card_view:fontName="Oswald-Medium.ttf" />

        <LinearLayout
            android:id="@+id/buttonsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/addMomVlogImageView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:divider="@android:color/transparent"
                android:dividerHeight="0.0px"
                android:elevation="8dp"
                card_view:cardElevation="10dp"
                card_view:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mom_vlog_banner_button">

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dp"
                        android:layout_marginRight="22dp"
                        android:drawableLeft="@drawable/ic_mom_vlog_banner_button"
                        android:drawablePadding="10dp"
                        android:text="@string/mom_vlog_banner_button"
                        android:textColor="@color/app_red"
                        card_view:fontName="Oswald-Medium.ttf" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/challengeNameTextMomVlog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/addMomVlogImageView"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="20dp"
            android:elevation="@dimen/space_10"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:textColor="@color/white"
            android:textSize="22sp"
            card_view:fontName="oswald_regular.ttf" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/momVlogLayout">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/txvArticleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/forYouInfoLL"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="10dp"
                    android:singleLine="false"
                    android:text="@string/title"
                    android:textColor="@color/article_listing.title"
                    android:textSize="14sp"
                    card_view:fontName="oswald_regular.ttf" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txvArticleTitle"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/articleImageView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/article_listing.article_image"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:contentDescription="@string/author_img"
                        android:scaleType="centerCrop" />

                    <RelativeLayout
                        android:id="@+id/winnerLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignRight="@id/thumbNail"
                        android:layout_alignBottom="@id/articleImageView"
                        android:layout_margin="@dimen/space_10"
                        android:background="@drawable/update_profile_bg">

                        <ImageView
                            android:id="@+id/imageWinner"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/space_5"
                            android:tint="@color/white"
                            card_view:srcCompat="@drawable/ic_winner_cup" />

                        <com.mycity4kids.widget.CustomFontTextView
                            android:id="@+id/winner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="@dimen/space_5"
                            android:layout_toRightOf="@+id/imageWinner"
                            android:text="WINNER"
                            android:textColor="#fff"
                            android:textSize="14sp"
                            app:fontName="oswald.ttf" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/article_listing.article_image"
                        android:layout_alignParentTop="true"
                        android:background="#80000000"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/videoIndicatorImageView"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="60dp"
                        android:src="@drawable/ic_videos"
                        android:visibility="visible" />


                    <RelativeLayout
                        android:id="@+id/relativeUserCountNameViews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/articleImageView">

                        <com.mycity4kids.widget.CustomFontTextView
                            android:id="@+id/txvAuthorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:clickable="true"
                            android:gravity="bottom"
                            android:paddingLeft="10dp"
                            android:paddingTop="8dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:singleLine="true"
                            android:text="@string/author_name"
                            android:textColor="@color/article_listing.author_name"
                            android:textSize="12sp"
                            card_view:fontName="open_sans.ttf" />


                        <com.mycity4kids.widget.CustomFontTextView
                            android:id="@+id/viewCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txvAuthorName"
                            android:layout_alignLeft="@+id/txvAuthorName"
                            android:layout_marginLeft="9dp"
                            android:drawableLeft="@drawable/ic_views"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:paddingLeft="2dp"
                            android:text="0"
                            android:textColor="@color/article_listing.stats"
                            android:textSize="12sp"
                            card_view:fontName="open_sans.ttf" />

                        <com.mycity4kids.widget.CustomFontTextView
                            android:id="@+id/commentCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txvAuthorName"
                            android:layout_alignTop="@+id/viewCountTextView"
                            android:layout_alignBottom="@+id/viewCountTextView"
                            android:layout_marginLeft="11dp"
                            android:layout_toRightOf="@+id/viewCountTextView"
                            android:drawableLeft="@drawable/ic_comments"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/article_listing.stats"
                            android:textSize="12sp"
                            card_view:fontName="open_sans.ttf" />

                        <com.mycity4kids.widget.CustomFontTextView
                            android:id="@+id/recommendCountTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txvAuthorName"
                            android:layout_alignTop="@+id/viewCountTextView"
                            android:layout_alignBottom="@+id/viewCountTextView"
                            android:layout_marginLeft="11dp"
                            android:layout_toRightOf="@+id/commentCountTextView"
                            android:drawableLeft="@drawable/ic_likes"
                            android:drawablePadding="4dp"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/article_listing.stats"
                            android:textSize="12sp"
                            card_view:fontName="open_sans.ttf" />


                        <com.mycity4kids.widget.CustomFontTextView
                            android:id="@+id/goldLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/recommendCountTextView"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginTop="@dimen/space_5"
                            android:background="@drawable/border_for_gold_logo_video_listing"
                            android:drawableTint="@color/gold_color_video_listing"
                            android:gravity="center_vertical"
                            android:paddingLeft="5dp"

                            android:paddingRight="10dp"
                            android:text=" Gold"
                            android:textAllCaps="true"
                            android:textColor="@color/gold_color_video_listing"
                            android:tint="@color/gold_color_video_listing"
                            android:visibility="visible"
                            card_view:fontName="oswald.ttf" />

                    </RelativeLayout>


                    <ImageView
                        android:id="@+id/bookmarkArticleImageView"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_alignTop="@+id/relativeUserCountNameViews"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:paddingTop="5dp"
                        android:paddingRight="10dp"
                        android:src="@drawable/ic_bookmark"
                        android:visibility="gone" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/forYouInfoLL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingTop="12dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="12dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/one"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/white_filled_bg"
                        android:tag="1"
                        android:tint="@color/onboarding.already_member" />

                    <ImageView
                        android:id="@+id/two"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/white_filled_bg"
                        android:tag="2"
                        android:tint="@color/onboarding.already_member" />

                    <ImageView
                        android:id="@+id/three"
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:src="@drawable/white_filled_bg"
                        android:tag="3"
                        android:tint="@color/onboarding.already_member" />
                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </FrameLayout>
</RelativeLayout>