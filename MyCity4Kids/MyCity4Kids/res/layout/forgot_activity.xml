<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_xxhdpi"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="18dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="151dp">

        <ImageView
            android:id="@+id/img_f_mycity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="50dp"
            android:visibility="gone"
            android:paddingRight="45dp"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/txvCancel"
            android:layout_width="@dimen/common_margin"
            android:layout_height="@dimen/common_margin"
            android:paddingBottom="25dp"
            android:paddingRight="25dp"
            android:src="@drawable/cross_icon_back" />

        <LinearLayout
            android:id="@+id/editEmailLout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/common_button_height"
            android:layout_alignLeft="@+id/txvSubmit"
            android:layout_alignRight="@+id/txvSubmit"
            android:layout_below="@id/img_f_mycity"
            android:layout_marginTop="@dimen/common_margin"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/img_key"
                android:layout_width="45dp"
                android:layout_height="@dimen/common_button_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/blue_man_icon"
                android:scaleType="fitStart" />

            <EditText
                android:id="@+id/editEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_edittext_ractangle"
                android:hint="Enter your email"
                android:inputType="textEmailAddress"
                android:paddingLeft="5dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColorHint="@color/hint_txt_color" />
        </LinearLayout>

        <TextView
            android:id="@+id/txvSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_button_height"
            android:layout_below="@id/editEmailLout"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="@dimen/common_button_margin"
            android:background="@drawable/final_btn_background_selector"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/reset_password"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/common_button_txt_size"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </RelativeLayout>

</RelativeLayout>