<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="5dp"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/ToolbarTheme.Title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/customDateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/daysCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:layout_toLeftOf="@+id/customDateMenuOption"
                        android:ellipsize="end"
                        android:paddingLeft="10dp"
                        android:text="@string/analytics.pageviews.daycount"
                        android:textColor="@color/black_color"
                        android:textSize="16sp" />

                    <ImageView
                        android:id="@+id/customDateMenuOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:padding="15dp"
                        android:src="@drawable/ic_more_vert_black_24dp" />


                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/viewsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customDateLayout"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/pageViewsLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/pageViewsMenuOption"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:singleLine="false"
                        android:text="@string/analytics.pageviews.label"
                        android:textColor="@color/black_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/pageViewCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/pageViewsLabel"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@+id/pageViewsMenuOption"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-thin"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/pageViewsMenuOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_more_vert_black_24dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/chartLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/viewsLayout"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                card_view:cardElevation="4dp">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/pageViewsChart"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/rankLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chartLayout"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rankLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/rankMenuOption"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:singleLine="false"
                        android:text="@string/analytics.rank.label"
                        android:textColor="@color/black_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/rankTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rankLabel"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@+id/rankMenuOption"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-thin"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/rankMenuOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_more_vert_black_24dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/engagementLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rankLayout"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/engagementLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/engagementMenuOption"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:singleLine="false"
                        android:text="@string/analytics.engagement.label"
                        android:textColor="@color/black_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/likesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/engagementLabel"
                        android:layout_marginTop="8dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-thin"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/black_color"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/likesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/likesCount"
                        android:layout_below="@+id/likesCount"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="likes"
                        android:textColor="@color/analytics.engagement.likes_label"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/separatorView1"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/likesLabel"
                        android:layout_alignTop="@+id/likesCount"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@id/likesCount"
                        android:background="@color/analytics.engagement.separator" />

                    <TextView
                        android:id="@+id/sharesCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/engagementLabel"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/separatorView1"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-thin"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/black_color"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/sharesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/sharesCount"
                        android:layout_below="@+id/sharesCount"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Shares"
                        android:textColor="@color/analytics.engagement.shares_label"
                        android:textSize="12sp" />

                    <View
                        android:id="@+id/separatorView2"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/sharesLabel"
                        android:layout_alignTop="@+id/sharesCount"
                        android:layout_marginLeft="25dp"
                        android:layout_toRightOf="@id/sharesCount"
                        android:background="@color/analytics.engagement.separator" />

                    <TextView
                        android:id="@+id/commentsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/engagementLabel"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/separatorView2"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-thin"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="0"
                        android:textColor="@color/black_color"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/commentsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/commentsCount"
                        android:layout_below="@+id/commentsCount"
                        android:layout_marginBottom="10dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Comments*"
                        android:textColor="@color/analytics.engagement.comments_label"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/commentsDisclaimer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/commentsLabel"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="sans-serif-light"
                        android:paddingLeft="10dp"
                        android:text="@string/analytics.engagement.comments_disclaimer"
                        android:textColor="@color/analytics.engagement.comments_label"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/engagementMenuOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_more_vert_black_24dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/followersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/engagementLayout"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                card_view:cardElevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/followersLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/followersMenuOption"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:singleLine="false"
                        android:text="@string/analytics.followers.label"
                        android:textColor="@color/black_color"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/followersCount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/followersLabel"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@+id/followersMenuOption"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-thin"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black_color"
                        android:textSize="30sp" />

                    <ImageView
                        android:id="@+id/followersMenuOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_more_vert_black_24dp" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/topBloggersLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/followersLayout"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                card_view:cardElevation="4dp">

                <LinearLayout
                    android:id="@+id/topBloggersContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>