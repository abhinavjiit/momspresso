<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/indexTextView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/circular_textview_suggested_topic"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:text="11"
        android:textColor="@color/suggested_topic.index.text"
        android:textSize="10sp"
        app:fontName="open_sans.ttf"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/suggestedTopicTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/indexTextView"
        android:layout_toRightOf="@+id/indexTextView"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:text="F dwadawd awd aw dw d ad ad awdaw da d ad ad awd wad wad awd aw daw da wdaw vc vfdsvf sv "
        android:textColor="@color/suggested_topic.topic_text"
        android:textSize="13sp"
        app:fontName="open_sans.ttf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/indexTextView"
        app:layout_constraintTop_toTopOf="parent" />

