<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_bg"
    android:minWidth="280dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/closeDialogImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:src="@drawable/cross_icon_back" />

    <ImageView
        android:id="@+id/headerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/closeDialogImageView"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_lanuage_circle" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/anonymousLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headerImageView"
        android:layout_centerHorizontal="true"
        android:text="ANONYMOUS"
        android:textColor="@color/groups.light_black_color"
        android:textSize="24sp"
        app:fontName="oswald_regular.ttf" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/anonymousDescTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anonymousLabelTextView"
        android:layout_centerHorizontal="true"
        android:padding="24dp"
        android:text="Lorem ipsum kya dikkat hai bhai anonymous post karega hero banega"
        android:textColor="@color/groups.light_black_color"
        android:textSize="16sp"
        app:fontName="open_sans.ttf" />


    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/okTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/anonymousDescTextView"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="10dp"
        android:text="YES"
        android:textColor="@color/videos.upload_option.gallery"
        android:textSize="18sp"
        app:fontName="oswald_regular.ttf" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/cancelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/anonymousDescTextView"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="40dp"
        android:paddingBottom="10dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="10dp"
        android:text="NOT REALLY"
        android:textColor="@color/videos.upload_option.cancel"
        app:fontName="oswald_regular.ttf" />
</RelativeLayout>
