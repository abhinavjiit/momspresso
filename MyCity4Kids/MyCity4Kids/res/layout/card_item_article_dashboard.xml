<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewWidget"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp">

        <RelativeLayout
            android:id="@+id/imvAuthorThumbContainer"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imvAuthorThumb"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_alignParentTop="true"
                android:layout_gravity="fill"
                android:contentDescription="@string/author_img"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/videoIndicatorImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/play_1"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/txvArticleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imvAuthorThumb"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:fontFamily="sans-serif"
                android:gravity="left"
                android:lines="3"
                android:maxLines="3"
                android:padding="10dp"
                android:singleLine="false"
                android:text="@string/title"
                android:textColor="@color/black_color"
                android:textSize="14sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>