<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/bloggerImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        app:civ_border="true"
        app:civ_border_color="@color/light_grey1"
        app:civ_border_width="1dp"
        app:civ_shadow="false" />

    <TextView
        android:id="@+id/bloggerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/bloggerImageView"
        android:layout_toRightOf="@+id/bloggerImageView"
        android:text="Blogger Name"
        android:textColor="@color/black_color"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/followersCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bloggerName"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/bloggerImageView"
        android:fontFamily="sans-serif-light"
        android:text="Blogger"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:drawableLeft="@drawable/rankup"
        android:fontFamily="sans-serif-thin"
        android:gravity="center"
        android:text="1"
        android:textSize="24sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/bloggerImageView"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@color/analytics.engagement.separator" />

</RelativeLayout>