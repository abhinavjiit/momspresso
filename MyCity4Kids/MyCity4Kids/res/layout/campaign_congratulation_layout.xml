<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_EFF9F8">

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/headerRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:gravity="center_horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/congratulationHeaderImageView"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:clickable="false"
                    android:src="@drawable/congratulations_screen_illustration" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/space_18"
                    android:src="@drawable/cross_icon_back"
                    android:tint="@color/black" />


            </RelativeLayout>

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:text="@string/congratulation_text"
                android:textColor="#4A4A4A"
                android:textSize="30dp"
                android:visibility="gone"
                app:fontName="oswald_regular.ttf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerRelativeLayout" />


            <RadioButton
                android:id="@+id/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="@dimen/space_20"
                android:buttonTint="@color/app_red"
                android:checked="true"
                android:clickable="true"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView5" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/thankYouForSubmittingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_5"
                android:clickable="false"
                android:gravity="center_horizontal"
                android:text="@string/thanks_for_submitting"
                android:textColor="#4A4A4A"
                android:textSize="22sp"
                android:visibility="visible"
                app:fontName="oswald_regular.ttf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerRelativeLayout" />


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@id/one"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="@dimen/space_30"
                android:background="@drawable/circular_image_bg"
                android:backgroundTint="#F494A3"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/radioButton"

                />

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/two"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="49dp"
                android:layout_marginTop="@dimen/space_30"
                android:background="@drawable/circular_image_bg"
                android:backgroundTint="#F494A3"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/one" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/pendingTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginRight="20dp"
                android:clickable="false"
                android:gravity="center"
                android:text="@string/be_in_touch_text"
                android:textSize="13sp"
                android:visibility="visible"
                app:fontName="OpenSans-Light.ttf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/thankYouForSubmittingTextView" />


            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_5"
                android:layout_marginTop="22dp"
                android:text="Post approval, payment would be made"
                android:textSize="16sp"
                android:visibility="gone"
                app:fontName="oswald.ttf"
                app:layout_constraintStart_toEndOf="@id/two"
                app:layout_constraintTop_toBottomOf="@+id/pendingTextView" />

            <RelativeLayout
                android:id="@+id/l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_10"
                android:background="@color/color_EFF9F8"
                android:paddingLeft="@dimen/space_18"
                android:paddingTop="@dimen/space_10"
                android:paddingRight="@dimen/space_18"
                android:paddingBottom="@dimen/space_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pendingTextView">

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="WANT TO EARN MORE?"
                    android:textColor="@color/color_37C4AC"
                    android:textSize="16sp"
                    app:fontName="oswald.ttf" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ldki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView10"
                    android:layout_marginTop="@dimen/space_10"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/illustration" />


                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ldki"
                    android:layout_centerHorizontal="true"
                    android:background="#37C4AC"
                    android:gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:paddingTop="@dimen/space_6"
                    android:paddingRight="@dimen/space_20"
                    android:paddingBottom="@dimen/space_6"
                    android:shadowColor="#EBABB5"
                    android:shadowDx="0"
                    android:shadowDy="3"
                    android:text="@string/share_joy"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontName="OpenSans-SemiBold.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView12"
                    android:layout_marginTop="@dimen/space_10"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">


                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/whatsappShareImageView"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginRight="@dimen/space_20"
                        app:srcCompat="@drawable/ic_whatsapp_camp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/facebookShareImageView"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:layout_marginRight="@dimen/space_20"

                        app:srcCompat="@drawable/ic_facebook_camp" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/genricShareImageView"
                        android:layout_width="38dp"
                        android:layout_height="38dp"
                        android:tint="#38C5A5"
                        app:srcCompat="@drawable/ic_share_camp" />

                </LinearLayout>

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/continueBrowsingCampaignsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_red"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        android:text="@string/continue_browsing_campaign"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:visibility="gone"
        app:fontName="oswald_regular.ttf"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>