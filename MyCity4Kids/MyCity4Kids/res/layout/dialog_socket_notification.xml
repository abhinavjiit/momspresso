<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:background="@drawable/shape_shadow_rectangle">

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/textUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="20dp"
            android:text="Recommended for you"
            android:textColor="@color/campaign_list_buttons"
            android:textSize="14sp"
            app:fontName="oswald_regular.ttf" />

        <ImageView
            android:id="@+id/cross"
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/space_10"
            android:src="@drawable/cross_icon"
            android:tint="@color/campaign_expired_background" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@+id/textUpdate"
            android:layout_marginLeft="@dimen/space_10"/>

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/textbody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textUpdate"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/image"
            android:textColor="@color/campaign_515151"
            android:textSize="16sp"
            app:fontName="oswald_regular.ttf" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/textauthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textbody"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:layout_toRightOf="@+id/image"
            android:textColor="@color/color_979797"
            android:textSize="12sp"
            app:fontName="open_sans.ttf" />
    </RelativeLayout>
</RelativeLayout>