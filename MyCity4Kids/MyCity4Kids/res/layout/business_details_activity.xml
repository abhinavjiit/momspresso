<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.mycity4kids.observablescrollview.TouchInterceptionFrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/pager_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_blue">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/flexible_space_image_height"
                    android:scaleType="centerCrop"
                    android:src="@drawable/bg_business_detail" />

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="?attr/actionBarSize"
                    app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar" />
                <!--<android.support.v7.widget.Toolbar-->
                <!--android:id="@+id/toolbar"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:minHeight="?attr/actionBarSize"-->
                <!--app:popupTheme="@style/Theme.AppCompat.Light.DarkActionBar" />-->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/flexible_space_image_height"
                    android:paddingEnd="@dimen/margin_standard"
                    android:paddingLeft="@dimen/margin_standard"
                    android:paddingStart="@dimen/margin_standard"
                    android:paddingTop="25dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="75dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="18dp"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif"
                        android:gravity="center|bottom"
                        android:maxLines="3"
                        android:textColor="@android:color/white"
                        android:textSize="20dp" />

                    <RelativeLayout
                        android:id="@+id/des"
                        android:layout_width="match_parent"
                        android:layout_height="28dp"
                        android:layout_below="@id/title"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:ellipsize="end"
                            android:maxEms="10"
                            android:minHeight="?attr/actionBarSize"
                            android:singleLine="true"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/description"
                            android:paddingBottom="3dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:paddingTop="3dp"
                            android:src="@drawable/location_new"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/distance"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center_vertical"
                            android:layout_toRightOf="@+id/img"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/buttonsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="50dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txvCall"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/call_n"
                            android:gravity="center"
                            android:text="CALL"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/txvBookNow"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/book_now_detail"
                            android:gravity="center"
                            android:text="PAY NOW"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="10dp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/txvAddToCal"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/add_photo2_xxhdpi"
                            android:gravity="center"
                            android:text="ADD PHOTOS"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/txvShare"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:drawablePadding="5dp"
                            android:drawableTop="@drawable/write_review_xxhdpi"
                            android:gravity="center"
                            android:text="WRITE A REVIEW"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="10dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ratingLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_above="@+id/buttonsLayout"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="10">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1.2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4.35"
                            android:background="#557ce8"></View>

                        <TextView
                            android:id="@+id/ratingHeader"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/des"
                            android:layout_weight="1.3"
                            android:background="#557ce8"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:paddingBottom="0dp"
                            android:paddingTop="0dp"
                            android:text="1.2"
                            android:textColor="@android:color/white"
                            android:textSize="15dp" />

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1.2dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="4.35"
                            android:background="#557ce8"></View>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/flexible_space_image_height"
                        android:background="@android:color/transparent" />
                </RelativeLayout>

                <View
                    android:id="@+id/overlay"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/flexible_space_image_height"
                    android:background="@color/primary_blue"
                    android:visibility="visible" />

                <com.mycity4kids.slidingtab.SlidingTabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tab_height"
                    android:background="@color/a_bg_blue" />
            </FrameLayout>

        </com.mycity4kids.observablescrollview.TouchInterceptionFrameLayout>

        <RelativeLayout
            android:id="@+id/rltRootHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/lnrHeaderView"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:src="@drawable/bg_business_detail">


                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:src="@drawable/back_xxhdpi" />


                <TextView
                    android:id="@+id/titleMain"
                    android:layout_width="0dip"
                    android:layout_height="48dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:minHeight="?attr/actionBarSize"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@android:color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/img_favourites"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_favorite_border_white_48dp" />

                <ImageView
                    android:id="@+id/img_round"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:paddingBottom="10dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/more_info_new" />
            </LinearLayout>

            <com.mycity4kids.widget.DetailHeader
                android:id="@+id/detailsHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lnrHeaderView"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </RelativeLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/reviewBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:src="@drawable/add_bluexxhdpi"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/filterlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/transitBtn"
            style="@style/custom_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1c55f1"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/transit"
            android:textSize="@dimen/common_button_txt_size" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/directionBtn"
            style="@style/custom_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#1c55f1"
            android:gravity="center"
            android:padding="12dp"
            android:text="@string/direction"
            android:textSize="@dimen/common_button_txt_size" />
    </LinearLayout>


</RelativeLayout>