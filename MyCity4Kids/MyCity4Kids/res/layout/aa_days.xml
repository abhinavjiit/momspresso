<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:minWidth="1000dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/monday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="Monday"
            android:textColor="@color/black_color" />

        <CheckBox
            android:id="@+id/monday_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:button="@drawable/new_checkbox_selector"
            android:gravity="center"
            android:padding="20dp"
            android:text="Monday"
            android:textColor="@color/white_color"
            android:textSize="0dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tuesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="Tuesday"
            android:textColor="@color/black_color" />

        <CheckBox
            android:id="@+id/tuesday_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:button="@drawable/new_checkbox_selector"
            android:checked="false"
            android:gravity="center"
            android:padding="20dp"
            android:text="Tuesday"
            android:textColor="@color/white_color"
            android:textSize="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/wednesday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="Wednesday"
            android:textColor="@color/black_color" />

        <CheckBox
            android:id="@+id/wednesday_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:button="@drawable/new_checkbox_selector"
            android:gravity="center"
            android:padding="20dp"
            android:text="Wednesday"
            android:textColor="@color/white_color"
            android:textSize="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/thursday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="Thursday"
            android:textColor="@color/black_color" />

        <CheckBox
            android:id="@+id/thursday_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:button="@drawable/new_checkbox_selector"
            android:gravity="center"
            android:padding="20dp"
            android:text="Thursday"
            android:textColor="@color/white_color"
            android:textSize="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/friday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="Friday"
            android:textColor="@color/black_color" />

        <CheckBox
            android:id="@+id/friday_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:button="@drawable/new_checkbox_selector"
            android:gravity="center"
            android:padding="20dp"
            android:text="Friday"
            android:textColor="@color/white_color"
            android:textSize="0dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/saturday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="Saturday"
            android:textColor="@color/black_color" />

        <CheckBox
            android:id="@+id/saturday_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:button="@drawable/new_checkbox_selector"
            android:gravity="center"
            android:padding="20dp"
            android:text="Saturday"
            android:textColor="@color/white_color"
            android:textSize="0dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sunday"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:paddingBottom="15dp"
            android:paddingLeft="30dp"
            android:paddingRight="15dp"
            android:paddingTop="15dp"
            android:text="Sunday"
            android:textColor="@color/black_color" />

        <CheckBox
            android:id="@+id/sunday_check"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:button="@drawable/new_checkbox_selector"
            android:gravity="center"
            android:padding="20dp"
            android:text="Sunday"
            android:textColor="@color/white_color"
            android:textSize="0dp" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/a_bg_blue" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="CANCEL"
            android:textColor="@color/canceltxt_color"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:text="DONE"
            android:textColor="@color/blue_color"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>