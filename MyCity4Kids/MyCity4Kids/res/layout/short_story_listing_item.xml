<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/short_story_border_bg">

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/short_story.card_bg_1"
        android:elevation="2dp">

        <RelativeLayout
            android:id="@+id/titleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/storyTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/storyOptionImageView"
                android:maxLines="2"
                android:paddingBottom="14dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingTop="14dp"
                android:text=""
                android:textColor="@color/short_story.light_black_color"
                android:textSize="18sp"
                app:fontName="georgia.ttf" />

            <View
                android:id="@+id/viewId"
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:layout_below="@+id/storyTitleTextView"
                android:layout_marginLeft="14dp"
                android:background="@color/common_underline" />

            <ImageView
                android:id="@+id/storyOptionImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:padding="15dp"
                android:src="@drawable/ic_more_vert_black_24dp" />
        </RelativeLayout>

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/storyBodyTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleContainer"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="14dp"
            android:text=""
            android:textColor="@color/short_story.light_black_color"
            android:textSize="17sp"
            app:fontName="georgia.ttf" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/authorNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/storyBodyTextView"
            android:padding="14dp"
            android:text="Reena Goyal"
            android:textColor="@color/app_blue"
            android:textSize="16sp"
            app:fontName="georgia.ttf" />

        <View
            android:id="@+id/underline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/authorNameTextView"
            android:background="@color/light_underline" />

        <RelativeLayout
            android:id="@+id/statsContainer"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/underline"
            android:background="@color/white">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/facebookShareImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="12dp"
                app:srcCompat="@drawable/ic_facebook_svg"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/whatsappShareImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/facebookShareImageView"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="12dp"
                android:src="@drawable/ic_whats_app"
                android:tint="@color/app_red" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/instagramShareImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/whatsappShareImageView"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="12dp"
                android:src="@drawable/ic_insta"
                android:tint="@color/app_red" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/genericShareImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/instagramShareImageView"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="12dp"
                android:src="@drawable/ic_share_white"
                android:tint="@color/app_red" />

            <LinearLayout
                android:id="@+id/linearLayoutContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true">

                <LinearLayout
                    android:id="@+id/storyRecommendationContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:orientation="horizontal">

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/storyRecommendationCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="10dp"
                        android:text="0"
                        android:textColor="@color/ad.stats.text"
                        android:textSize="15sp"
                        app:fontName="open_sans.ttf" />

                    <ImageView
                        android:id="@+id/likeImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="12dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="4dp"
                        android:paddingTop="12dp"
                        android:src="@drawable/ic_ss_like"
                        android:tint="@color/app_red" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/storyCommentContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/storyCommentCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:paddingLeft="6dp"
                        android:paddingTop="10dp"
                        android:text="0"
                        android:textColor="@color/ad.stats.text"
                        android:textSize="15sp"
                        app:fontName="open_sans.ttf" />

                    <ImageView
                        android:id="@+id/icSsComment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingBottom="12dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="4dp"
                        android:paddingTop="12dp"
                        android:src="@drawable/ic_ss_comment"
                        android:tint="@color/app_red" />
                </LinearLayout>

            </LinearLayout>
            <!--<com.mycity4kids.widget.CustomFontTextView-->
            <!--android:id="@+id/articleViewCountTextView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:layout_marginRight="10dp"-->
            <!--android:drawableLeft="@drawable/ic_views"-->
            <!--android:drawablePadding="3dp"-->
            <!--android:text=""-->
            <!--android:textColor="@color/ad.stats.text"-->
            <!--android:textSize="12sp"-->
            <!--app:fontName="open_sans.ttf" />-->
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>