<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/saveTextView"
        android:background="@color/white"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ToolbarTheme"
                app:titleTextAppearance="@style/ToolbarTheme.Title">

                <RelativeLayout
                    android:id="@+id/toolbarRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/toolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/subscribe_topics.toolbar.title"
                        android:textColor="@color/subscribe_topics.toolbar.title"
                        android:textSize="20sp"
                        app:fontName="oswald_regular.ttf" />

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

            <View
                android:id="@+id/underline1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/toolbar"
                android:background="@color/common_underline" />

            <ImageView
                android:id="@+id/headerImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/underline1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/ic_pie" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/completeLabelTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="@string/complete_blogger_profile.complete_label"
                android:textColor="@color/complete_blogger_profile.complete_label"
                android:textSize="18sp"
                app:fontName="oswald_regular.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/paidEligibilityTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/completeLabelTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:paddingLeft="45dp"
                android:paddingRight="45dp"
                android:text="@string/complete_blogger_profile.paid_eligibility"
                android:textColor="@color/complete_blogger_profile.paid_eligibility"
                android:textSize="18sp"
                app:fontName="oswald.ttf" />

            <View
                android:id="@+id/underline2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/paidEligibilityTextView"
                android:layout_marginTop="30dp"
                android:background="@color/common_underline" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/howManyTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/underline2"
                android:layout_margin="20dp"
                android:text="@string/app_settings.edit_profile.how_many_child"
                android:textColor="@color/app_settings.edit_profile.how_many_child"
                android:textSize="16sp"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.rangebar.RangeBar
                android:id="@+id/rangebar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/howManyTextView"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:barWeight="2dp"
                app:connectingLineColor="#507cbe"
                app:pinColor="#507cbe"
                app:pinMaxFont="11sp"
                app:rangeBar="false"
                app:rangeBarColor="#9c9dac"
                app:selectorBoundaryColor="#507cbe"
                app:selectorColor="#507cbe"
                app:selectorSize="5dp"
                app:temporaryPins="false"
                app:tickColor="@color/white"
                app:tickEnd="8"
                app:tickInterval="1"
                app:tickStart="0" />

            <LinearLayout
                android:id="@+id/childInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rangebar"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="vertical">

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/saveTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:elevation="20dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/complete_blogger_profile.save"
        android:textColor="@color/complete_blogger_profile.save"
        android:textSize="17sp"
        app:fontName="oswald_regular.ttf" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>
