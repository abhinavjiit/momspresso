<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color" >

    <Button
        android:id="@+id/skip_btn"
        style="@style/custom_style"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_margin="2dp"
        android:background="@color/trans_gray"
        android:text="@string/skip_txt" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/skip_btn" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/img_f_mycity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/app_logo" />

            

            <TextView
                android:id="@+id/simple_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="160dp"
                android:text="Login"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textStyle="bold" />

            <!--
                 <com.facebook.widget.LoginButton
                android:id="@+id/authButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/my_city_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />
            -->

            <LinearLayout
                android:id="@+id/btn_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="140dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/facebook_btn"
                    style="@style/custom_style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/facebook_img"
                    android:padding="10dp" />

                <Button
                    android:id="@+id/facebook_logout"
                    style="@style/custom_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:visibility="gone"
                    android:background="@drawable/bg_btn_green"
                    android:padding="10dp"
                    android:text="@string/logout_txt" />

                <Button
                    android:id="@+id/google_plus_btn"
                    style="@style/custom_style"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/google_plus_img"
                    android:padding="10dp" />
            </LinearLayout>

            <EditText
                android:id="@+id/email_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_layout"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_edittext"
                android:hint="Email Address"
                android:inputType="textEmailAddress|textNoSuggestions"
                android:padding="8dp" />

            <EditText
                android:id="@+id/password_edit_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_edit_txt"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="8dp" />

            <Button
                android:id="@+id/email_login_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/sign_up_btn"
                android:layout_below="@+id/password_edit_txt"
                android:layout_marginRight="4dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_btn_blue"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Login"
                android:textColor="@color/white_color" />

            <TextView
                android:id="@+id/forgot_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/email_login_btn"
                android:layout_below="@id/password_edit_txt"
                android:layout_marginLeft="20dp"
                android:text="@string/forgot_password"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/blue_color" />

            <Button
                android:id="@+id/sign_up_btn"
                style="@style/custom_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_login_btn"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_btn_green"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/sign_up_txt" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>