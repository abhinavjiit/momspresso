<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroun_img" >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="18dp" >

            <ImageView
                android:id="@+id/img_f_mycity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="50dp"
                android:paddingRight="45dp"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/cross_icon"
                android:layout_width="@dimen/common_margin"
                android:layout_height="@dimen/common_margin"
                android:paddingRight="25dp"
                android:paddingBottom="25dp"
                android:src="@drawable/cross_icon_back" />

            <LinearLayout
                android:id="@+id/emailLout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_button_height"
                android:layout_alignLeft="@id/email_login_btn"
                android:layout_alignRight="@id/email_login_btn"
                android:layout_below="@id/img_f_mycity"
                android:layout_marginTop="@dimen/common_button_height"
                android:orientation="horizontal" >

                <ImageView

                    android:layout_width="45dp"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/blue_man_icon"
                    android:scaleType="fitStart" />

                <EditText
                    android:id="@+id/email_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_edittext_ractangle"
                    android:hint="Enter your email address"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:inputType="textEmailAddress|textNoSuggestions"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/hint_txt_color" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_lout"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/common_button_height"
                android:layout_alignLeft="@id/email_login_btn"
                android:layout_alignRight="@id/email_login_btn"
                android:layout_below="@id/emailLout"
                android:layout_marginTop="@dimen/common_button_margin"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/img_key"
                    android:layout_width="45dp"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/blue_key_icon"
                    android:scaleType="fitStart" />

                <EditText
                    android:id="@+id/password_edit_txt"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_button_height"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/bg_edittext_ractangle"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:paddingLeft="10dp"
                    android:textColorHint="@color/hint_txt_color" />
            </LinearLayout>

            <TextView
                android:id="@+id/forgot_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/email_login_btn"
                android:layout_below="@id/password_lout"
                android:layout_marginTop="15dp"
                android:paddingBottom="5dp"
                android:text="@string/forgot_password"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_color" />

            <TextView
                android:id="@+id/sign_up_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/email_login_btn"
                android:layout_below="@id/password_lout"
                android:layout_marginTop="15dp"
                android:paddingBottom="5dp"
                android:text="@string/new_user"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/white_color" />

            <Button
                android:id="@+id/email_login_btn"
                style="@style/custom_style"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common_button_height"
                android:layout_below="@id/sign_up_btn"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="@dimen/common_button_margin"
                android:background="@drawable/final_btn_background_selector"
                android:gravity="center"
                android:text="@string/sign_in"
                android:textColor="@color/white_color"
                android:textSize="@dimen/common_button_txt_size" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>