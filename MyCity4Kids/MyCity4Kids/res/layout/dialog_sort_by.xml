<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_shadow_rectangle"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <com.mycity4kids.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_header_choose_sort_type"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:textColor="@color/black"
            app:fontName="oswald_regular.ttf"/>

        <LinearLayout
            android:id="@+id/linearSortByRecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_recent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:text="@string/sort.recent"
                android:textAllCaps="true" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearSortByPopular"
            android:layout_width="wrap_content"
            android:layout_marginRight="100dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_popular" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/sort.popular"
                android:layout_marginLeft="10dp"
                android:textAllCaps="true" />
        </LinearLayout>

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/textUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_centerHorizontal="true"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="@string/cancel"
            android:textColor="@color/app_red"
            android:textSize="16sp"
            app:fontName="oswald_regular.ttf" />

    </LinearLayout>
</LinearLayout>