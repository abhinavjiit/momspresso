<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rltHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_bg" >

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back_img"
            android:padding="10dp"
            android:src="@drawable/back_arrow" />

        <TextView
            android:id="@+id/header_txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/top_picks"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white_color"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_twitter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/round_img"
            android:padding="5dp"
            android:src="@drawable/header_twitter" />

        <View
            android:id="@+id/img_fb_separator"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_twitter"
            android:background="@drawable/header_seprator" />

        <ImageView
            android:id="@+id/img_fb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_fb_separator"
            android:contentDescription="@string/round_img"
            android:padding="5dp"
            android:src="@drawable/header_facebook_post" />

        <View
            android:id="@+id/img_share_separator"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_fb"
            android:background="@drawable/header_seprator" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_share_separator"
            android:contentDescription="@string/round_img"
            android:padding="5dp"
            android:src="@drawable/header_share" />

        <View
            android:id="@+id/img_follow_separator"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_share"
            android:background="@drawable/header_seprator" />

        <ImageView
            android:id="@+id/img_follow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_follow_separator"
            android:contentDescription="@string/round_img"
            android:padding="5dp"
            android:src="@drawable/header_follow" />

        <View
            android:id="@+id/img_font_size_separator"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_follow"
            android:background="@drawable/header_seprator" />

        <ImageView
            android:id="@+id/img_font_size"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_font_size_separator"
            android:contentDescription="@string/round_img"
            android:padding="5dp"
            android:src="@drawable/header_char_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topPicksDetailContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rltHeader"
        android:padding="10dp" >

        <RelativeLayout
            android:id="@+id/imvAuthorThumbContainer"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginTop="5dp" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/imvAuthorThumb1"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/author_img"
                android:src="@drawable/default_img"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imvAuthorThumb"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/author_img"
                android:src="@drawable/default_img" />
        </RelativeLayout>

        <TextView
            android:id="@+id/txvArticleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/imvAuthorThumbContainer"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingLeft="10dp"
            android:singleLine="false"
            android:text="@string/title"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/btn_bg_blue"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvPublishDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txvAuthorName"
            android:layout_alignBottom="@+id/txvAuthorName"
            android:layout_alignParentRight="true"
            android:singleLine="true"
            android:text="@string/article_publish_date"
            android:textColor="@color/gray2"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txvAuthorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imvAuthorThumbContainer"
            android:layout_alignLeft="@+id/txvArticleTitle"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text="@string/author_name"
            android:textColor="#737373"
            android:textSize="12sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topPicksDetailContainer"
        android:fadingEdgeLength="20dp"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none" >

        <TextView
            android:id="@+id/txvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="10dp"
            android:singleLine="false"
            android:text="@string/description"
            android:textAlignment="textEnd"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#494949" />
    </ScrollView>

</RelativeLayout>