<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/emitter_top_center"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="-30dp" />

        <View
            android:id="@+id/emiter_top_left"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="-30dp" />

        <View
            android:id="@+id/emiter_top_right"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_gravity="top|center"
            android:layout_marginTop="-30dp" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/introLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/upload_video.tutorial.title"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:padding="20dp"
            android:text="@string/upload_video.tutorial.description"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/learnMoreTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/upload_video.tutorial.learn_more"
            android:textColor="@color/upload_video.tutorial.learn_more"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/tutorialLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/headingTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="30dp"
            android:text="@string/upload_video.tutorial.instruction"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/uploadTutorialImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/goToFunnyVideosTextView"
            android:layout_below="@+id/headingTextView"
            android:src="@drawable/video_intro1" />

        <TextView
            android:id="@+id/goToFunnyVideosTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:padding="40dp"
            android:text="@string/upload_video.tutorial.see_what_people_are_sharing"
            android:textColor="@color/upload_video.tutorial.learn_more"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>