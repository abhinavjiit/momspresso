<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/a_light_blue">

    <RelativeLayout
        android:id="@+id/rltHeader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue_bg"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back_img"
            android:padding="10dp"
            android:src="@drawable/back_arroow" />

        <TextView
            android:id="@+id/header_txt"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text="@string/articles"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white_color"
            android:textStyle="bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/img_twitter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/round_img"
            android:padding="5dp"
            android:src="@drawable/header_twitter" />

        <View
            android:id="@+id/img_fb_separator"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_twitter"
            android:background="@drawable/header_seprator" />

        <ImageView
            android:id="@+id/img_fb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_fb_separator"
            android:contentDescription="@string/round_img"
            android:padding="5dp"
            android:src="@drawable/header_facebook_post" />

        <View
            android:id="@+id/img_share_separator"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_fb"
            android:background="@drawable/header_seprator" />

        <ImageView
            android:id="@+id/img_share"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_share_separator"
            android:contentDescription="@string/round_img"
            android:padding="5dp"
            android:src="@drawable/header_share" />

        <View
            android:id="@+id/img_follow_separator"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_share"
            android:background="@drawable/header_seprator" />

        <ImageView
            android:id="@+id/img_follow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_follow_separator"
            android:contentDescription="@string/round_img"
            android:padding="5dp"
            android:src="@drawable/header_follow" />

        <View
            android:id="@+id/img_font_size_separator"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@id/img_follow"
            android:background="@drawable/header_seprator" />

        <Spinner
            android:id="@+id/fontSizePicker"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_toLeftOf="@id/img_font_size_separator"
            android:background="@drawable/header_char_size"
            android:ellipsize="end"
            android:padding="10dp"
            android:prompt="@string/none"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/btn_bg_blue"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/topPicksDetailContainer_new"
        android:layout_width="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_height="275dp">

        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="match_parent"
            android:background="@drawable/blog_bgnew"
            android:layout_height="195dp" />

        <View
            android:id="@+id/temp_view"
            android:background="@color/white_color"
            android:layout_below="@+id/cover_image"
            android:layout_width="match_parent"
            android:layout_height="80dp">

        </View>

        <TextView
            android:text="username12"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/user_name"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="EDITOR"
            android:paddingTop="4dp"
            android:background="@color/blue_color"
            android:paddingBottom="4dp"
            android:textColor="@color/white_color"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/blogger_type"
            android:layout_above="@+id/user_name"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/user_image"
            android:layout_marginBottom="4dp"
            android:layout_above="@+id/blogger_type"
            android:layout_centerHorizontal="true"
            android:background="@drawable/default_img"
            android:layout_width="60dp"
            android:layout_height="65dp" />

        <TextView
            android:text="31 July 2015"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="@color/white_color"
            android:paddingRight="12dp"
            android:layout_marginBottom="7dp"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/article_date"
            android:layout_above="@+id/user_image"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="asdasdasdjhsdfkjsdhfkljhasdfasdjkhf"
            android:paddingTop="4dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingBottom="4dp"
            android:textColor="@color/white_color"
            android:paddingRight="12dp"
            android:layout_marginBottom="2dp"
            android:paddingLeft="12dp"
            android:maxLines="4"
            android:ellipsize="middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/article_title"
            android:layout_above="@+id/article_date"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/transparent"
        android:minHeight="?attr/actionBarSize">

        <Spinner
            android:id="@+id/fontSizePicker_new"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@drawable/icon_text"
            android:ellipsize="end"
            android:padding="10dp"
            android:prompt="@string/none"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/btn_bg_blue"
            android:textStyle="bold" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topPicksDetailContainer_new"
        android:fadingEdgeLength="20dp"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/inside_scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/a_light_blue"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:background="@color/white_color"
                android:ellipsize="end"
                android:padding="10dp"
                android:singleLine="false"
                android:textAlignment="textEnd"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#494949" />

            <!--
                 <WebView
                android:id="@+id/WebView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:padding="10dp" />
            -->

            <!--android:drawableTop="@drawable/top_separator"-->

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/comment_text_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:elevation="3dp"
                card_view:contentPadding="5dp">

                <TextView
                    android:id="@+id/txvComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_color"
                    android:drawablePadding="5dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="Comments"
                    android:textAlignment="textEnd"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/black_color" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:id="@+id/commnetLout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/a_light_blue"
                android:orientation="vertical"
                android:padding="5dp">

                <!-- <add comment dynamically> -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_Lout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/comment_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@color/white_color"
            android:orientation="horizontal"
            android:weightSum="1">

            <EditText
                android:id="@+id/editCommentTxt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".87"
                android:background="@drawable/edit_text"
                android:gravity="top|left"
                android:hint="@string/write_comment"
                android:maxLength="150"
                android:padding="12dp"
                android:singleLine="false"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/black_color"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/add_comment_btn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".13"
                android:background="@drawable/comment_add_new"
                android:clickable="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/add_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/a_baseblue"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/leave_comment"
            android:textColor="@color/white_color"
            android:textSize="@dimen/common_button_txt_size"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>