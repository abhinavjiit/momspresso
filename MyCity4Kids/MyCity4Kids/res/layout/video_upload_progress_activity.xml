<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="5dp"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/ToolbarTheme.Title" />

    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/circleView"
        android:layout_centerHorizontal="true"
        android:autoLink="web"
        android:gravity="center_horizontal"
        android:text="Uploading ..."
        android:textColor="@color/black"
        android:textSize="16sp" />

    <com.natasa.progressviews.CircleProgressBar
        android:id="@+id/circleView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        app:bar_width="12dp"
        app:progress_color="#d3f115"
        app:progress_width="10dp" />

    <TextView
        android:id="@+id/cancelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/circleView"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="Cancel"
        android:textColor="@color/red_selected"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/descriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cancelTextView"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="Please do not exit or kill the app, it will cancel the upload automatically."
        android:textColor="@color/black"
        android:textStyle="italic" />
</RelativeLayout>