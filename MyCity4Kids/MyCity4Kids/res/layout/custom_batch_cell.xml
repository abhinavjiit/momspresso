<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/group_lout"
        android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/group_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/electronic_fun_"
            android:visibility="visible" />

        <TextView
            android:id="@+id/batch_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/group_img"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="Batch"
            android:textColor="#2355F4"
            android:textSize="14dp" />

        <CheckedTextView
            android:id="@+id/plus_minus_img"
            android:layout_width="10dp"
            android:layout_height="6dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/updownselector_gray" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/batch_txt"
            android:background="#d3d3d3" />

    </RelativeLayout>

    <!--
         <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/group_lout"
        android:background="#cbcbcb" />
    -->

    <LinearLayout
        android:id="@+id/childLout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_lout"
        android:orientation="vertical"></LinearLayout>

</RelativeLayout>