<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/blogger_bg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/blog_bgnew" />

        <View
            android:id="@+id/transparentView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#4D000000" />


        <LinearLayout
            android:id="@+id/blank_view"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/blogger_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#E0E3E9"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blogger_bg"></View>

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_alignBottom="@+id/blank_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">


            <RelativeLayout
                android:id="@+id/dp_frame"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:id="@+id/blogger_profile"
                    android:layout_width="90dp"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/edit_hint_color" />

                <TextView
                    android:id="@+id/author_type"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:singleLine="true"
                    android:text="BLOGGER"
                    android:textColor="@color/white_color"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/blog_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/follow_blog"
                    android:padding="10dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/blogger_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_toEndOf="@+id/dp_frame"
                android:layout_toRightOf="@+id/dp_frame"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:lines="1"
                android:text="asdfadad"
                android:textColor="@color/white_color"
                android:textSize="22dp" />


            <ImageView
                android:id="@+id/facebook_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/dp_frame"
                android:background="@drawable/fb_new"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/twitter_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/facebook_"
                android:background="@drawable/twitter_"
                android:padding="10dp" />

            <ImageView
                android:id="@+id/rss_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/twitter_"
                android:background="@drawable/rss_"
                android:padding="10dp"
                android:visibility="gone" />

        </RelativeLayout>

        <TextView
            android:id="@+id/blog_rank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:drawableLeft="@drawable/trend_"
            android:drawablePadding="7dp"
            android:padding="10dp"
            android:text="15"
            android:textColor="@color/white_color" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/about_desc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E0E3E9"
        android:paddingLeft="1dp"
        android:paddingRight="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blogger_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/blogger_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="10dp"
                android:textColor="@color/black_color"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/more_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/blogger_desc"
                android:gravity="right"
                android:paddingBottom="8dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="2dp"
                android:text="More"
                android:textColor="#5962E4"
                android:visibility="visible" />

        </RelativeLayout>


    </RelativeLayout>


</LinearLayout>
