                <!--android:textAppearance="?android:attr/textAppearanceSmall" />-->

                <com.mycity4kids.widget.CustomFontEditText
                    android:id="@+id/password_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawablePadding="5dp"
                    android:hint="Password"
                    android:paddingTop="30dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/dashboard.bloggername"
                    android:textColorHint="@color/login_grey"
                    app:fontName="roboto_light.ttf" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/login_line_grey" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/signinTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/signin_selector"
                    android:gravity="center"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:text="Sign In"
                    android:textColor="@drawable/signin_selector"
                    android:textSize="18sp"
                    app:fontName="roboto_light.ttf" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/forgot_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical">

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/forgot_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingTop="10dp"
                    android:text="@string/forgot_txt"
                    android:textColor="@color/login_grey"
                    app:fontName="roboto_light.ttf" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

