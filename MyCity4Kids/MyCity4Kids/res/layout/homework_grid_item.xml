<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:id="@+id/calendarImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/appointment_suggestion_icon" />

            <TextView
                android:id="@+id/calDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/calendarImageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="24" />

            <TextView
                android:id="@+id/calMonthTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calDateTextView"
                android:layout_centerHorizontal="true"
                android:text="JUN" />

            <TextView
                android:id="@+id/assignemntTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calendarImageView"
                android:layout_centerHorizontal="true"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="Science Assignment"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dueDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/assignemntTitleTextView"
                android:layout_centerHorizontal="true"
                android:text="Due: 24 May 2015" />

            <TextView
                android:id="@+id/classTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dueDateTextView"
                android:layout_centerHorizontal="true"
                android:text="Section: Class-4B" />

            <TextView
                android:id="@+id/postedByTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/classTextView"
                android:layout_centerHorizontal="true"
                android:text="Posted by: Joanna" />


        </RelativeLayout>

        <TextView
            android:id="@+id/addToDoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rl1"
            android:layout_alignRight="@+id/rl1"
            android:layout_below="@+id/rl1"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_blue_light"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="Add to To-Do"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</android.support.v7.widget.CardView>