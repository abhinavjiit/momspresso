<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/cancle"
            app:layout_constraintEnd_toEndOf="@id/cancle"
            app:layout_constraintHorizontal_bias=".5"
            app:layout_constraintStart_toStartOf="@id/cancle"
            app:layout_constraintTop_toTopOf="@id/cancle"
            app:layout_constraintVertical_bias=".5" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@id/space"
            app:layout_constraintTop_toBottomOf="@id/space">


            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/addCollectionNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_marginTop="@dimen/space_50"
                android:text="Add collection name"
                android:textColor="@color/campaign_515151"
                android:textSize="20sp"
                app:fontName="Helvetica Bold.ttf" />

            <com.mycity4kids.widget.CustomFontEditText
                android:id="@+id/collectionNameEditTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/addCollectionNameTextView"
                android:layout_marginLeft="@dimen/space_30"
                android:layout_marginTop="@dimen/space_16"
                android:layout_marginRight="@dimen/space_15"

                android:background="@drawable/mainprofile_thin_border"
                android:backgroundTint="#F1F1F1"
                android:gravity="center_vertical"
                android:padding="@dimen/space_10"
                android:text="hcshjcbshjdchjsdcjhsbd"
                android:textColor="@color/campaign_4A4A4A"
                android:textSize="@dimen/space_16" />


            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/collectionNameEditTextView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/space_16"
                android:layout_marginBottom="@dimen/space_30"
                android:background="@drawable/update_profile_bg"
                android:gravity="center"
                android:paddingLeft="20dp"
                android:paddingTop="@dimen/space_10"
                android:paddingRight="20dp"
                android:paddingBottom="@dimen/space_10"
                android:text="Confirm"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="14sp"
                app:fontName="Helvetica Bold.ttf" />


        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cancle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/cross_icon_circle_background_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>
