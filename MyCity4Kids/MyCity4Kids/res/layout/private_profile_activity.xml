<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/menuCoachmark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dark_transparent"
            android:elevation="8dp"
            android:minHeight="1000dp"
            android:visibility="invisible">

            <View
                android:id="@+id/menuHorizontalLine"
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_below="@+id/toolbarMenu"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:background="@color/white" />

            <View
                android:id="@+id/menuVerticalLine"
                android:layout_width="2dp"
                android:layout_height="30dp"
                android:layout_below="@id/menuHorizontalLine"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:background="@color/white" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ToolbarTheme"
                app:titleTextAppearance="@style/ToolbarTheme.Title">

                <RelativeLayout
                    android:id="@+id/toolbarRelativeLayoutMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/editProfileImageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="15dp"
                        android:src="@drawable/ic_red_edit"
                        android:tint="@color/red_drawer_selected"
                        android:visibility="visible" />

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/editProfileTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/editProfileImageView1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/app_settings.tabbar.edit_profile"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:fontName="oswald_regular.ttf" />

                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/menuGuideTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menuVerticalLine"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/white"
                android:paddingLeft="9dp"
                android:paddingTop="7dp"
                android:paddingRight="9dp"
                android:paddingBottom="7dp"
                android:text="@string/coachmark.edit_profile"
                android:textColor="@color/black"
                app:fontName="oswald.ttf" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <LinearLayout
                android:id="@+id/linearRewardsHeader"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/userbioTextView"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_rewards_bottom_header"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/header"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight=".7"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.mycity4kids.widget.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_blue"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="NEW"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            app:fontName="oswald_regular.ttf" />

                        <com.mycity4kids.widget.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/momspresso_rewards"
                            android:textColor="@color/app_red"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            app:fontName="oswald_regular.ttf" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.mycity4kids.widget.CustomFontTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="2"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="@string/rewards_participate"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            app:fontName="oswald.ttf" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_weight=".3">

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/textHeaderUpdate"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="2"
                        android:background="@drawable/update_profile_bg"
                        android:gravity="center"
                        android:paddingLeft="12dp"
                        android:paddingTop="7dp"
                        android:paddingRight="12dp"
                        android:paddingBottom="7dp"
                        android:text="@string/update"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:fontName="oswald_regular.ttf" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/statsCountContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relative_profile_progress"
                android:layout_marginTop="16dp"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/followerContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/followerCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="--"
                        android:textColor="@color/app_light_black"
                        android:textSize="14sp"
                        app:fontName="oswald_regular.ttf" />

                    <com.mycity4kids.widget.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/myprofile.followers_label"
                        android:textColor="@color/app_grey"
                        android:textSize="12sp"
                        app:fontName="oswald.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/followingContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/followingCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="--"
                        android:textColor="@color/app_light_black"
                        android:textSize="14sp"
                        app:fontName="oswald_regular.ttf" />

                    <com.mycity4kids.widget.CustomFontTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/myprofile.following_label"
                        android:textColor="@color/app_grey"
                        android:textSize="12sp"
                        app:fontName="oswald.ttf" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rankContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/rankCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="--"
                        android:textColor="@color/app_light_black"
                        android:textSize="14sp"
                        app:fontName="oswald_regular.ttf" />

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/rankLanguageTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="RANK IN ENGLISH"
                        android:textColor="@color/app_grey"
                        android:textSize="12sp"
                        app:fontName="oswald.ttf" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_underline" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/light_underline" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/publishCoachmark1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/publishedSectionTextView1"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="0dp"
                android:background="@color/dark_transparent"
                android:elevation="18dp"
                android:orientation="vertical"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/publishCoachmark2"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@+id/publishedSectionTextView"
                android:background="@color/dark_transparent"
                android:elevation="18dp"
                android:orientation="vertical"
                android:visibility="invisible">

                <View
                    android:id="@+id/menuHorizontalLine1"
                    android:layout_width="80dp"
                    android:layout_height="2dp"
                    android:layout_below="@+id/toolbarMenu"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="40dp"
                    android:background="@color/white" />

                <View
                    android:id="@+id/menuVerticalLine1"
                    android:layout_width="2dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/menuHorizontalLine1"
                    android:layout_marginLeft="70dp"
                    android:background="@color/white" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/menuGuideTextView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/white"
                    android:paddingLeft="9dp"
                    android:paddingTop="7dp"
                    android:paddingRight="9dp"
                    android:paddingBottom="7dp"
                    android:text="@string/coachmark.publish"
                    android:textColor="@color/black"
                    app:fontName="oswald.ttf" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative_profile_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/userbioTextView"
                android:background="@drawable/shape_round_rectangle"
                android:visibility="invisible">

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/profileCompletionLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/mymoney_profile"
                    android:textColor="@color/app_red"
                    android:textStyle="bold"
                    app:fontName="oswald_regular.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/updateProfileTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/update_profile_bg"
                    android:paddingLeft="20dp"
                    android:paddingTop="6dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="6dp"
                    android:text="@string/update"
                    android:textColor="@color/white"
                    app:fontName="oswald_regular.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/profilePercentageTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profileCompletionLabel"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/updateProfileTextView"
                    android:layout_toRightOf="@id/progress_bar_1"
                    android:text=""
                    android:textColor="@color/app_light_black"
                    app:fontName="oswald_regular.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/improveTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profilePercentageTextView"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/updateProfileTextView"
                    android:text="@string/rewards_participate"
                    app:fontName="oswald.ttf" />

                <com.mycity4kids.widget.RoundedHorizontalProgressBar
                    android:id="@+id/progress_bar_1"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="200dp"
                    android:layout_height="6dp"
                    android:layout_below="@+id/profileCompletionLabel"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:indeterminate="false"
                    android:maxHeight="6dp"
                    android:minHeight="6dp"
                    android:progress="0"
                    app:backgroundColor="@color/profile_progress"
                    app:progressColor="@color/app_red" />
            </RelativeLayout>

            <View
                android:id="@+id/underline_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/publishedSectionTextView"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/light_grey1" />

            <View
                android:id="@+id/underline_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/draftSectionTextView"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/light_grey1" />


            <View
                android:id="@+id/underline_3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/readArticles"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/light_grey1" />

            <View
                android:id="@+id/underline_4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/activitySectionTextView"
                android:layout_marginStart="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/light_grey1" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="11dp"
                android:minHeight="?attr/actionBarSize"
                app:theme="@style/ToolbarTheme"
                app:titleTextAppearance="@style/ToolbarTheme.Title">

                <RelativeLayout
                    android:id="@+id/toolbarRelativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/menuImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:src="@drawable/ic_back_arrow"
                        android:tint="@color/app_light_black" />

                    <ImageView
                        android:id="@+id/editProfileImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="10dp"
                        android:paddingTop="15dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="15dp"
                        android:src="@drawable/ic_red_edit"
                        android:tint="@color/red_drawer_selected"
                        android:visibility="visible" />

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/editProfileTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/editProfileImageView"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:text="@string/app_settings.tabbar.edit_profile"
                        android:textColor="@color/app_light_black"
                        android:textSize="16sp"
                        app:fontName="oswald_regular.ttf" />

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <com.github.florent37.diagonallayout.DiagonalLayout
                android:id="@+id/topContainer"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:elevation="10dp"
                app:diagonal_angle="40"
                app:diagonal_direction="left"
                app:diagonal_position="bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/blurImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:src="@color/app_nav_bg" />

                </RelativeLayout>

            </com.github.florent37.diagonallayout.DiagonalLayout>


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profileImageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignLeft="@+id/topContainer"
                android:layout_alignBottom="@+id/topContainer"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="10dp"
                android:src="@drawable/momspresso_logo"
                app:civ_border="true"
                app:civ_border_color="@color/white"
                app:civ_border_width="2dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="4" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/nameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/profileImageView"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_toRightOf="@+id/profileImageView"
                android:gravity="left"
                android:onClick="onClick"
                android:text=""
                android:textColor="@color/app_light_black"
                android:textSize="20sp"
                app:fontName="oswald.ttf" />


            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/authorTypeTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nameTextView"
                android:layout_marginLeft="16dp"
                android:layout_toRightOf="@+id/profileImageView"
                android:drawablePadding="10dp"
                android:gravity="left"
                android:onClick="onClick"
                android:text=""
                android:textColor="@color/app_grey"
                android:textSize="14sp"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/userbioTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/topContainer"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="@color/app_light_black" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/publishedSectionTextView"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/statsCountContainer"
                android:drawableLeft="@drawable/ic_article"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/user_article.tabbar.published_label"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/publishedSectionTextView1"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/statsCountContainer"
                android:background="@color/dark_transparent"
                android:drawableLeft="@drawable/ic_article"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/user_article.tabbar.published_label"
                android:textColor="@color/white"
                android:visibility="invisible"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/draftSectionTextView"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/underline_1"
                android:drawableLeft="@drawable/draft_article"
                android:drawablePadding="18dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/user_article.tabbar.draft_label"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/readArticles"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/underline_2"
                android:drawableLeft="@drawable/read_article"
                android:drawablePadding="18dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="READ ARTICLES"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/activitySectionTextView"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/underline_3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="-2dp"
                android:drawableLeft="@drawable/ic_activity"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/myprofile.section.activity_label"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/signoutSectionTextView"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_below="@+id/underline_4"
                android:drawableLeft="@drawable/ic_sign_out"
                android:drawablePadding="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/myprofile.section.signout_label"
                app:fontName="oswald.ttf" />

        </RelativeLayout>
    </FrameLayout>
</ScrollView>
