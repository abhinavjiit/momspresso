<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_xxhdpi"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="SIGN UP"
        android:visibility="invisible"
        android:textColor="@color/white_color"
        android:textSize="36dp"
        android:textStyle="bold"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Create an account for your entire family"
        android:textColor="@color/white_color"
        android:textSize="15dp" />


    <TextView
        android:id="@+id/craete_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/blue_background_selector"
        android:gravity="center"
        android:padding="15dp"
        android:text="CREATE A FAMILY ACCOUNT"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/join_family"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/blue_background_selector"
        android:gravity="center"
        android:padding="15dp"
        android:text="JOIN A FAMILY ACCOUNT"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/email_login_btn"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="3dp"
        android:paddingBottom="7dp"
        android:paddingTop="10dp"
        android:text="EXISTING ACCOUNT? SIGN IN HERE"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white_color" />

</LinearLayout>
