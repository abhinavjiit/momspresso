<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_bg"
    android:minWidth="280dp"
    android:orientation="vertical">

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/spellChkMsgTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:paddingTop="10dp"
        android:text="@string/confirmation_dialog.delete_draft.message"
        android:textColor="@color/spell_check.black"
        android:textSize="17sp"
        app:fontName="oswald.ttf" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/cancelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/continueTextView"
            android:layout_toStartOf="@+id/continueTextView"
            android:paddingBottom="10dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingTop="10dp"
            android:text="@string/confirmation_dialog.no"
            android:textColor="@color/spell_check.black"
            android:textSize="18sp"
            app:fontName="oswald.ttf" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/continueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:paddingBottom="10dp"
            android:paddingLeft="23dp"
            android:paddingRight="23dp"
            android:paddingTop="10dp"
            android:text="@string/confirmation_dialog.yes"
            android:textColor="@color/spell_check.black"
            android:textSize="16sp"
            app:fontName="oswald.ttf" />
    </RelativeLayout>
</LinearLayout>
