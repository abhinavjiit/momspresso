<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/homeItemRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/labelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:paddingBottom="3dp"
                android:paddingLeft="8dp"
                android:paddingTop="10dp"
                android:text="@string/home.sections.title.hindi"
                android:textColor="@color/primary_blue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/labelTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/labelTextView"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Bangla"
                android:textColor="@color/primary_blue"
                android:textSize="15sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/labelTextView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/labelTextView2"
                android:paddingBottom="3dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Marathi"
                android:textColor="@color/primary_blue"
                android:textSize="15sp"
                android:visibility="gone" />


        </LinearLayout>

        <TextView
            android:id="@+id/addTopicsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="3dp"
            android:paddingRight="8dp"
            android:paddingTop="10dp"
            android:text="ADD TOPICS"
            android:textColor="@color/home.foryou.addTopics"
            android:textSize="12sp"
            android:visibility="gone" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" />

    <TextView
        android:id="@+id/emptyListTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="2dp"
        android:text="No Blogs Listed"
        android:textColor="@color/grey"
        android:textSize="12dp"
        android:visibility="gone" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_marginTop="1dp"
        android:divider="@color/dividercolor"
        android:dividerHeight="0.3dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/hsvLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" />
    </HorizontalScrollView>

</LinearLayout>