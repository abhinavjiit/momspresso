<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/video_cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/item_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/user_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/main_media_frame"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:src="@drawable/default_commentor_img"
            app:civ_border="true"
            app:civ_border_color="@color/white_color"
            app:civ_border_width="0dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/grey"
            app:civ_shadow_radius="4" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/userHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@+id/user_image"
            android:letterSpacing="-0.02"
            android:textColor="#E6FFFFFF"
            android:textSize="13sp" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/follow_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/three_dot"
            android:background="@drawable/rounded_corner"
            android:padding="5dp"
            android:text="Follow"
            android:textColor="#CCFFFFFF" />

        <ImageView
            android:id="@+id/three_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:tint="#CCFFFFFF" />
    </RelativeLayout>

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/textViewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_top_layout"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:letterSpacing="-0.02"
        android:lineSpacingExtra="5sp"
        android:textColor="#CCFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:text="Was india better then south africa in current serise?" />

    <FrameLayout
        android:id="@+id/video_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textViewTitle"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/black"
        android:gravity="center"
        android:scaleType="center"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

        <ImageView
            android:id="@+id/cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/title"
            android:scaleType="centerCrop"
            android:src="@drawable/default_article" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/countlikecontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/video_layout"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp">

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/viewsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:textColor="#80FFFFFF" />

        <View
            android:id="@+id/countlikeseparator"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/viewsCount"
            android:background="@drawable/dot" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/viewsLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/countlikeseparator"
            android:textColor="#80FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countlikecontainer"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/heart"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_likes"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/heart"
            android:src="@drawable/share"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/whatsapp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/share"
            android:src="@drawable/ic_whats_app"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/commentCount"
            android:src="@drawable/ic_comments"
            android:visibility="gone" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:drawableLeft="@drawable/ic_comments"
            android:drawablePadding="@dimen/space_10"
            android:textColor="@color/white"
            android:tint="@color/white" />
    </RelativeLayout>
</RelativeLayout>