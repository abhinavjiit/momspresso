<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/saveTextView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <com.mycity4kids.widget.CustomFontEditText
                android:id="@+id/firstNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/app_settings.edit_profile.edit_text_underline"
                android:hint="@string/app_settings.edit_profile.hint_fn"
                android:inputType="textPersonName"
                android:paddingBottom="15dp"
                android:textColor="@color/app_settings.edit_profile.text_fn"
                android:textColorHint="@color/app_settings.edit_profile.hint_fn"
                android:textSize="16sp"
                android:visibility="gone"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontEditText
                android:id="@+id/lastNameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/app_settings.edit_profile.edit_text_underline"
                android:hint="@string/app_settings.edit_profile.hint_ln"
                android:inputType="textPersonName"
                android:paddingBottom="15dp"
                android:textColor="@color/app_settings.edit_profile.text_ln"
                android:textColorHint="@color/app_settings.edit_profile.hint_ln"
                android:textSize="16sp"
                android:visibility="gone"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/emailTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/dotted_line"
                android:text="email@email.com"
                android:textColor="@color/app_settings.edit_profile.email"
                android:textSize="16sp"
                android:visibility="gone"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontEditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/app_settings.edit_profile.edit_text_underline"
                android:hint="@string/app_settings.edit_profile.hint_phone"
                android:inputType="phone"
                android:maxLength="10"
                android:paddingBottom="15dp"
                android:textColor="@color/app_settings.edit_profile.text_phone"
                android:textColorHint="@color/app_settings.edit_profile.hint_phone"
                android:textSize="16sp"
                android:visibility="gone"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/cityNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/ic_down_arrow"
                android:paddingBottom="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:text="City Name"
                android:textColor="@color/app_settings.edit_profile.city"
                android:textSize="15sp"
                app:fontName="oswald.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/app_settings.edit_profile.edit_text_underline" />

            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="4dp"
                android:text="@string/app_settings.edit_profile.describe_label"
                android:textColor="@color/app_settings.edit_profile.describe_label"
                android:textSize="16sp"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontEditText
                android:id="@+id/describeSelfEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/app_settings.edit_profile.edit_text_underline"
                android:text=""
                android:textColor="@color/app_settings.edit_profile.text_describe"
                android:textSize="16sp"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="4dp"
                android:text="@string/app_settings.edit_profile.blog_title_label"
                android:textColor="@color/app_settings.edit_profile.blog_title_label"
                android:textSize="16sp"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontEditText
                android:id="@+id/blogTitleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/app_settings.edit_profile.edit_text_underline"
                android:maxLength="200"
                android:text=""
                android:textColor="@color/app_settings.edit_profile.text_blog_title"
                android:textSize="16sp"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:paddingLeft="4dp"
                android:text="@string/app_settings.edit_profile.family_detail_label"
                android:textColor="@color/app_settings.edit_profile.family_detail_label"
                android:textSize="16sp"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="@string/app_settings.edit_profile.family_detail_desc"
                android:textColor="@color/app_settings.edit_profile.family_detail_desc"
                android:textSize="16sp"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:text="@string/app_settings.edit_profile.how_many_child"
                android:textColor="@color/app_settings.edit_profile.how_many_child"
                android:textSize="16sp"
                app:fontName="oswald.ttf" />

            <LinearLayout
                android:id="@+id/childInfoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/addKidContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:visibility="visible">

                <com.mycity4kids.widget.CustomFontEditText
                    android:id="@+id/kidNameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/deleteKidTextView"
                    android:backgroundTint="@color/app_settings.edit_profile.edit_text_underline"
                    android:hint="Enter Kid's name"
                    android:textColor="@color/app_light_black"
                    app:fontName="oswald.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/deleteKidTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/kidNameEditText"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/kidNameEditText"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Delete Kid"
                    android:textColor="@color/app_blue"
                    android:visibility="gone"
                    app:fontName="oswald.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/kidsDOBTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kidNameEditText"
                    android:background="@null"
                    android:drawableBottom="@drawable/underline"
                    android:drawablePadding="3dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="8dp"
                    android:text="@string/app_settings.edit_profile.dob"
                    android:textColor="@color/app_settings.edit_profile.dob"
                    app:fontName="oswald.ttf" />

                <RadioGroup
                    android:id="@+id/genderRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kidsDOBTextView"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <RadioButton
                        android:id="@+id/maleRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#507cbe"
                        android:checked="true"
                        android:layoutDirection="rtl"
                        android:padding="4dp"
                        android:text="Male" />

                    <RadioButton
                        android:id="@+id/femaleRadioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:buttonTint="#507cbe"
                        android:layoutDirection="rtl"
                        android:padding="4dp"
                        android:text="Female" />
                </RadioGroup>
            </RelativeLayout>

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/addNewKidTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/lang_sel.continue_bg"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:text="@string/app_settings.edit_prefs.add"
                android:textColor="@color/white"
                app:fontName="oswald_regular.ttf" />
        </LinearLayout>
    </ScrollView>

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/saveTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:elevation="20dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/app_settings.edit_profile.save"
        android:textColor="@color/app_settings.edit_profile.save"
        android:textSize="17sp"
        app:fontName="oswald_regular.ttf" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>