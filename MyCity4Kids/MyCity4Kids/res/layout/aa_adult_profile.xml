<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color"
    android:orientation="vertical"
    android:padding="25dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/adultcolor"
            android:background="@color/white_color"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="7dp"
                android:text="NAME"
                android:textAppearance="?android:attr/textAppearanceSmall" />

            <EditText
                android:inputType="textCapSentences"
                android:id="@+id/adult_name"
                android:layout_width="wrap_content"
                android:digits=" abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:layout_height="match_parent"
                android:background="@null"
                android:drawableBottom="@drawable/underline"
                android:paddingBottom="7dp"
                android:textColor="@color/black_color" />


        </LinearLayout>


        <TextView
            android:id="@+id/adultcolor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableBottom="@drawable/color_2xxhdpi"
            android:drawablePadding="2dp"
            android:hint="@string/colour"
            android:textColor="@color/black_color" />


    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingTop="5dp"
        android:text="EMAIL"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/adult_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@null"
        android:inputType="textEmailAddress"
        android:drawableBottom="@drawable/underline"
        android:drawablePadding="3dp"
        android:gravity="left"
        android:padding="5dp"
        android:textColor="@color/black_color" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="7dp"
        android:paddingTop="5dp"
        android:text="PINCODE"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <EditText
        android:id="@+id/pincode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:background="@null"
        android:maxLength="6"
        android:drawableBottom="@drawable/underline"
        android:drawablePadding="3dp"
        android:gravity="left"
        android:inputType="number"
        android:padding="5dp"
        android:textColor="@color/black_color" />


</LinearLayout>
