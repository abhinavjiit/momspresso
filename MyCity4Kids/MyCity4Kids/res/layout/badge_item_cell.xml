<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/badge_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/campaign_border_round_rectangular_layout">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/badgeImageView"
        android:layout_width="@dimen/space_115"
        android:layout_height="@dimen/space_115"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_10"
        android:contentDescription="@string/author_img"
        android:visibility="visible" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/badgeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/badgeImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginBottom="@dimen/space_16"
        android:textColor="@color/campaign_4A4A4A"
        android:textSize="14sp"
        app:fontName="open_sans.ttf" />

</RelativeLayout>