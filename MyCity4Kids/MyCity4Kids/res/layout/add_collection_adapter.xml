<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/collectionImageVIEW"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/space_10"
        android:src="@drawable/default_article" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/close"
        android:layout_toRightOf="@id/collectionImageVIEW">

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/collectionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Weddine Makeup Tips"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/collectionDiscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/collectionTitle"
            android:layout_marginLeft="@dimen/space_10"
            android:layout_marginTop="@dimen/space_5"

            android:ellipsize="end"
            android:maxLines="1"
            android:text="Lorem Ipsum is simply"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close"
        android:layout_width="@dimen/space_20"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/space_5"
        android:src="@drawable/ic_close_pop_up"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/collectionImageVIEW"
        android:layout_marginTop="@dimen/space_10"
        android:background="#DADADA" />


</RelativeLayout>