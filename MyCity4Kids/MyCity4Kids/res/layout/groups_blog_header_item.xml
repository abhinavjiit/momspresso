<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/groups.main_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/white">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/userImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/default_commentor_img"
            app:civ_border="true"
            app:civ_border_color="@color/white_color"
            app:civ_border_width="0dp"
            app:civ_shadow="true"
            app:civ_shadow_color="@color/grey"
            app:civ_shadow_radius="4" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/writeLabelTextView"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/userImageView"
            android:gravity="center"
            android:text="Write a blog"
            android:textColor="@color/groups.dark_black"
            android:textSize="12sp"
            app:fontName="oswald_regular.ttf" />

        <ImageView
            android:id="@+id/shareGroupImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="14dp"
            android:src="@drawable/ic_article" />

    </RelativeLayout>
</LinearLayout>