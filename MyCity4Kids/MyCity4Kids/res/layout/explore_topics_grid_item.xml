<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:elevation="0dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/imvAuthorThumbContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tagImageView"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_article" />

            <View
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"

                android:background="@color/explore_listing.topics.layer" />

            <ImageView
                android:id="@+id/durationImageView"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toStartOf="@+id/durationTextView"
                android:layout_toLeftOf="@+id/durationTextView"
                android:padding="6dp"
                android:shadowColor="#48000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:src="@drawable/ic_watch"
                android:tint="@color/white"
                android:visibility="gone" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/durationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:paddingTop="6dp"
                android:paddingRight="6dp"
                android:paddingBottom="6dp"
                android:shadowColor="#48000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="10 min"
                android:textColor="@color/white"
                android:visibility="gone"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/topicsNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:shadowColor="#48000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="6"
                android:text="TOPICS"

                android:textColor="@color/explore_listing.explore_categories.category_name"
                android:textSize="18sp"
                app:fontName="oswald_regular.ttf" />

            <View
                android:id="@+id/selectorView"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@color/white_opacity"
                android:visibility="gone" />
        </RelativeLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>