<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red_drawer_selected"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rltBottomView"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:id="@+id/indicator_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/one"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:tag="1"
                android:alpha="0.2"
                android:src="@drawable/white_filled_bg" />

            <ImageView
                android:id="@+id/two"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:tag="2"
                android:alpha="0.2"
                android:layout_marginRight="5dp"
                android:src="@drawable/white_filled_bg" />

            <ImageView
                android:id="@+id/three"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:tag="3"
                android:alpha="0.2"
                android:src="@drawable/white_filled_bg" />

            <ImageView
                android:id="@+id/four"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:tag="4"
                android:alpha="0.2"
                android:layout_marginRight="5dp"
                android:src="@drawable/white_filled_bg" />

            <ImageView
                android:id="@+id/five"
                android:tag="5"
                android:alpha="0.2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/white_filled_bg" />

            <ImageView
                android:id="@+id/six"
                android:layout_width="10dp"
                android:tag="6"
                android:alpha="0.2"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/white_filled_bg" />
        </LinearLayout>

        <TextView
            android:id="@+id/txvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/indicator_layout"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:text="Involve"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white_color"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txvTitle"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:gravity="center_horizontal|top"
            android:maxLines="3"
            android:minLines="3"
            android:text="Involve vdfdfdfgdg"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white_color" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/img_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rltBottomView"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:src="@drawable/tutorial_1" />
</RelativeLayout>