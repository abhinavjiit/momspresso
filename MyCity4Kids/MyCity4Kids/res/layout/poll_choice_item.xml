<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.mycity4kids.widget.CustomFontEditText
        android:id="@+id/textPollEditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_toLeftOf="@+id/removeItemImageView"
        android:background="@null"
        android:hint="Choice 1"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/groups.light_black_color"
        app:fontName="open_sans.ttf" />

    <ImageView
        android:id="@+id/removeItemImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textPollEditText"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textPollEditText"
        android:layout_centerVertical="true"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:src="@drawable/cross_icon_back"
        android:visibility="gone" />

    <View
        android:id="@+id/questionUnderline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textPollEditText"
        android:background="@color/light_underline" />
</RelativeLayout>