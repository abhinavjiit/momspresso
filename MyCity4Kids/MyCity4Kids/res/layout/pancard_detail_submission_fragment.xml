    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/relativeLayout2">


        <com.mycity4kids.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTE : "
            android:textColor="@color/app_red"
            android:textSize="16sp" />

        <com.mycity4kids.widget.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="In case of Invalid/No Pan card attached, 20% tax will be deducted from the payment."
            android:textColor="#4A4A4A"
            android:textSize="16sp" />


    </LinearLayout>


    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/submitTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/shape_red_fill"
        android:paddingLeft="80dp"
        android:paddingTop="@dimen/space_10"
        android:paddingRight="80dp"
        android:paddingBottom="@dimen/space_10"
        android:text="SAVE  CONTINUE"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:fontName="oswald_regular.ttf"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="28dp"
        android:gravity="center_horizontal"
        android:text="Maybe Later"
        android:textColor="@color/app_red"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="parent" />
