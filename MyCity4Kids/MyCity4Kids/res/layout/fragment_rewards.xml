<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clipToPadding="false"
    android:paddingBottom="100dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/headerRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                android:src="@drawable/mymoney"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:alpha=".5"
                android:background="@drawable/gradient_in_video_challenge_image" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/imageView2"
                android:layout_alignLeft="@+id/imageView2"
                android:layout_alignEnd="@+id/imageView2"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_marginBottom="10dp"
                android:elevation="10dp"
                android:gravity="bottom|center"
                android:shadowColor="@color/black"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="5"
                android:text="@string/reward_welcome"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:visibility="gone"
                app:fontName="oswald_regular.ttf" />

            <RelativeLayout
                android:id="@+id/relativeParticipate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView2"
                android:visibility="gone">

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textAgain"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/rewards_participate_and_earn"
                    android:textAllCaps="true"
                    android:textColor="#666666"
                    android:textSize="18sp"
                    android:visibility="visible"
                    app:fontName="oswald_regular.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="12sp"
                    android:gravity="center"
                    android:text="@string/rewards_description"
                    android:textSize="16sp"
                    app:fontName="oswald.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/textAgain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text2"
                    android:layout_marginLeft="12sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="12sp"
                    android:gravity="center"
                    android:text="@string/reards.description_secand_text"
                    android:textSize="16sp"
                    app:fontName="oswald.ttf" />

                <TextView
                    android:id="@+id/text3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Leading brands host campaiL"
                    android:visibility="gone" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/textStartReward"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text1"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="4dp"
                    android:background="@drawable/shape_red_fill"
                    android:gravity="center"
                    android:paddingLeft="40dp"
                    android:paddingTop="10dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="10dp"
                    android:text="@string/rewards_start_now"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontName="oswald_regular.ttf" />

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearConnectivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/headerRelativeLayout"
            android:layout_marginTop="@dimen/space_20"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="visible">

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/textPersonalInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/ic_personal_info"
                android:drawablePadding="15dp"
                android:padding="@dimen/space_20"
                android:text="@string/rewards_tab_fragment_personalInfo_text"
                android:textSize="14sp"
                app:fontName="oswald.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey_light" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/textSocial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/ic_social_links"
                android:drawablePadding="12dp"
                android:padding="@dimen/space_20"
                android:text="@string/rewards_tab_fragment_socialLink_text"
                android:textSize="14sp"
                app:fontName="oswald.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey_light" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/textPaymentModes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/ic_payment_mode"
                android:drawablePadding="15dp"
                android:padding="@dimen/space_20"
                android:text="@string/rewards_tab_fragment_paymentMode"
                android:textSize="14sp"
                app:fontName="oswald.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey_light" />

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/textPanDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:drawableLeft="@drawable/ic_pan_details"
                android:drawablePadding="15dp"
                android:padding="@dimen/space_20"
                android:text="@string/rewards_tab_fragment_panCard"
                android:textSize="14sp"
                app:fontName="oswald.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey_light" />

            <RelativeLayout
                android:id="@+id/myearning_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/textMyEarning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@drawable/ic_my_earning_profile_page"
                    android:drawablePadding="15dp"
                    android:padding="@dimen/space_20"
                    android:text="@string/rewards_tab_fragment_myEarning"
                    android:textColor="#676767"
                    android:textSize="14sp"
                    app:fontName="oswald.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/textMyEarning"
                    android:background="@drawable/rectangular_btn_green_bg"
                    android:backgroundTint="@color/color_23CAAD"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/new_label"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontName="oswald_regular.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/totalearning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_20"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:textColor="@color/color_23CAAD"
                    android:textSize="16sp"
                    app:fontName="open_sans_bold.ttf" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="10dp"
                android:background="@color/grey_light" />

            <RelativeLayout
                android:id="@+id/relativeShareReferralCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/textReferral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:drawableLeft="@drawable/ic_share_icon_image"
                    android:drawablePadding="15dp"
                    android:drawableTint="@color/black"
                    android:padding="@dimen/space_20"
                    android:text="@string/rewards_tab_fragment_referrer_myMoney"
                    android:textAllCaps="true"
                    android:textColor="#676767"
                    android:textSize="14sp"
                    app:fontName="oswald.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/textReferral"
                    android:background="@drawable/rectangular_btn_green_bg"
                    android:backgroundTint="@color/color_23CAAD"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/new_label"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontName="oswald_regular.ttf" />


            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>