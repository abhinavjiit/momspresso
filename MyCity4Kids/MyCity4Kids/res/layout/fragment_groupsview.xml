<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="3dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:tabIndicatorColor="@color/campaign_list_buttons"
        app:tabIndicatorHeight="3dp"
        app:tabSelectedTextColor="@color/color_979797"
        app:tabTextAppearance="@style/CustomGroupTabText"
        app:tabTextColor="@color/color_979797" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tablayout" />


    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/createFabButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="right|bottom"
        android:visibility="gone"
        app:fab_colorNormal="@color/app_red"
        app:fab_colorPressed="@color/app_red"
        app:fab_icon="@drawable/ic_edit" />


</RelativeLayout>