<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="@string/rate_us.dialog.title"
                    android:textColor="@color/rate_us.dialog.title"
                    android:textSize="27sp"
                    app:fontName="oswald_regular.ttf" />

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/text"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/rateus_" />
            </RelativeLayout>


            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/rate_us.dialog.message1"
                android:textColor="@color/rate_us.dialog.message"
                android:textSize="18sp"
                app:fontName="oswald.ttf" />

            <com.mycity4kids.widget.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:text="@string/rate_us.dialog.message2"
                android:textColor="@color/rate_us.dialog.message"
                android:textSize="18sp"
                app:fontName="oswald.ttf" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:background="@color/light_grey1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/separator"
                    android:layout_width="1dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/light_grey1" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/not_now"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_toLeftOf="@+id/separator"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/rate_us.dialog.not_now"
                    android:textColor="@color/rate_us.dialog.not_now"
                    android:textSize="14sp"
                    app:fontName="oswald.ttf" />

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/rate_now"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@+id/separator"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/rate_now"
                    android:textColor="@color/rate_us.dialog.rate_now"
                    android:textSize="14sp"
                    app:fontName="oswald.ttf" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
