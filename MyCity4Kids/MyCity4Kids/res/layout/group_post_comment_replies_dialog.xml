<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_color">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="5dp"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ToolbarTheme"
        app:titleTextAppearance="@style/ToolbarTheme.Title">

        <RelativeLayout
            android:id="@+id/toolbarRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <com.mycity4kids.widget.CustomFontTextView
                android:id="@+id/toolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Replies"
                android:textColor="@color/city_picker.toolbar.title"
                android:textSize="20sp"
                app:fontName="oswald_regular.ttf" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/repliesRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/topLineView"
        android:layout_below="@+id/toolbar" />

    <com.mycity4kids.widget.CustomFontEditText
        android:id="@+id/writeCommentEditText"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/addCommentImageView"
        android:background="@null"
        android:hint="Add a"
        android:textColor="@color/groups.light_black_color" />

    <ImageView
        android:id="@+id/addCommentImageView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@color/groups.blue_color"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:src="@drawable/ic_gp_add_response" />

    <View
        android:id="@+id/topLineView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/writeCommentEditText"
        android:background="@color/light_underline" />

</RelativeLayout>