<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#f9f9f9"
  android:orientation="vertical">

  <com.mycity4kids.widget.CustomFontTextView
    android:id="@+id/sectionHeaderTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawablePadding="16dp"
    android:padding="16dp"
    android:text="Creators your friends follow"
    android:textColor="@color/app_light_black"
    android:textSize="16sp"
    android:textStyle="bold" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/suggestedCreatorsRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sectionHeaderTextView"
    android:layout_marginStart="8dp" />

</RelativeLayout>