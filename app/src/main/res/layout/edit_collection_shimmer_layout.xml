<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/changeYourCollectionTextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/space_30"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_30"
        android:background="@color/background"
        android:text="change your collection name"
        android:textColor="@color/background" />

    <TextView
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/changeYourCollectionTextView"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginEnd="@dimen/space_30"
        android:background="@color/background"
        android:padding="@dimen/space_10"
        android:text="My top 10 blogs"
        android:textColor="@color/background"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/edittext"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_30"
        android:background="@color/background" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edittext"
        android:layout_marginStart="@dimen/space_30"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@id/image"
        android:background="@color/background"
        android:padding="@dimen/space_10"
        android:text="change"
        android:textColor="@color/background" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_marginStart="@dimen/space_16"
        android:layout_marginTop="@dimen/space_30"
        android:layout_marginEnd="@dimen/space_16"
        android:background="@color/background"
        android:padding="@dimen/space_16"
        android:text="hcdsciub iuhsduichsdkiusdd sbiu"
        android:textColor="@color/background"
        android:textSize="@dimen/space_16" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/description"
        android:orientation="vertical">

        <include
            layout="@layout/collection_item_type_shimmer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/collection_item_type_shimmer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <include
            layout="@layout/collection_item_type_shimmer_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>