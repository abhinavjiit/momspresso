<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <androidx.appcompat.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:minHeight="?attr/actionBarSize"
    app:theme="@style/ToolbarTheme"
    app:titleTextAppearance="@style/ToolbarTheme.Title">

    <RelativeLayout
      android:id="@+id/toolbarRelativeLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="visible">

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/toolbarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="@string/all_invite"
        android:textColor="@color/user_articles.toolbar.title"
        android:textSize="20sp"
        app:fontName="oswald_regular.ttf" />

    </RelativeLayout>
  </androidx.appcompat.widget.Toolbar>

  <RelativeLayout
    android:id="@+id/fbFriendsContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar"
    android:padding="20dp">

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/facebookImageView"
      android:layout_width="60dp"
      android:layout_height="60dp"
      android:layout_alignParentStart="true"
      android:layout_centerVertical="true"
      android:src="@drawable/ic_badge_facebook" />

    <com.mycity4kids.widget.CustomFontTextView
      android:id="@+id/getFBFriendsTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_toStartOf="@+id/arrowImageView"
      android:layout_toEndOf="@+id/facebookImageView"
      android:gravity="center"
      android:paddingRight="16dp"
      android:text="Invite Facebook Friends"
      android:textSize="20sp"
      android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/arrowImageView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentEnd="true"
      android:layout_centerVertical="true"
      android:src="@drawable/arrow_right" />
  </RelativeLayout>


  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/toolbar"
    android:visibility="gone" />

  <TextView
    android:id="@+id/emptyList"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:textColor="@color/black_color"
    android:visibility="visible" />
  <ProgressBar
    android:id="@+id/progressBar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:visibility="gone" />

</RelativeLayout>