    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/articleImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:contentDescription="@string/author_img"
                android:scaleType="fitXY"
                android:src="@drawable/default_article" />


            <View
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#59000000" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:elevation="@dimen/space_10"
                android:gravity="center_vertical">

                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/articleTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/space_10"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:padding="@dimen/space_5"
                    android:text="jbvhdvbdk kjfbd jkbdfjkv jkdnfkdf vjdnfkd kjbkjdf  "
                    android:textColor="@color/white" />


                <com.mycity4kids.widget.CustomFontTextView
                    android:id="@+id/author_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/articleTitleTextView"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/space_10"
                    android:layout_marginEnd="0dp"
                    android:text="Abhinav Bhadauriya "
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:id="@+id/winnerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/author_name"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/space_5"
                    android:paddingStart="@dimen/space_7"
                    android:paddingTop="@dimen/space_3"
                    android:paddingEnd="@dimen/space_7"
                    android:paddingBottom="@dimen/space_3">

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/recommendCountTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="11dp"
                        android:drawableLeft="@drawable/ic_likes"
                        android:drawablePadding="4dp"
                        android:drawableTint="@color/white"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        card_view:fontName="open_sans.ttf" />

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/viewCountTextView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="9dp"
                        android:layout_toRightOf="@id/recommendCountTextView1"
                        android:drawableLeft="@drawable/ic_views"
                        android:drawablePadding="4dp"
                        android:drawableTint="@color/white"
                        android:gravity="center"
                        android:paddingLeft="2dp"
                        android:text="0"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        card_view:fontName="open_sans.ttf" />


                    <ImageView
                        android:id="@+id/imageWinner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:visibility="visible"
                        card_view:srcCompat="@drawable/ic_trophy" />

                    <com.mycity4kids.widget.CustomFontTextView
                        android:id="@+id/winner"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="@dimen/space_5"
                        android:layout_toRightOf="@+id/imageWinner"
                        android:text="WINNER"
                        android:textColor="#fff"
                        android:textSize="14sp"
                        android:visibility="gone"
                        card_view:fontName="oswald.ttf" />
                </RelativeLayout>

