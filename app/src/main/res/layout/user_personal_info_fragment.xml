<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/rootView"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:clipToPadding="false">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:orientation="vertical">

    <com.mycity4kids.widget.CustomFontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_margin="@dimen/space_16"
      android:layout_marginTop="16dp"
      android:background="@drawable/rewards_disclaimer_bg"
      android:paddingLeft="@dimen/space_16"
      android:paddingTop="@dimen/space_10"
      android:paddingBottom="@dimen/space_10"
      android:paddingRight="@dimen/space_16"
      android:text="@string/rewards_personal_disclaimer"
      android:textColor="@color/campaign_515151"
      android:textSize="14sp"
      app:fontName="Roboto-Regular.ttf" />


    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/space_35">

      <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profileImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/family_xxhdpi"
        app:civ_border_color="@color/app_red"
        app:civ_border_width="2dp" />

      <ImageView
        android:id="@+id/editImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/profileImageView"
        android:layout_alignParentBottom="true"
        android:background="@drawable/profile_camera_circle"
        android:padding="12dp"
        android:src="@drawable/ic_camera"
        android:tint="@color/white_color" />
    </RelativeLayout>

    <com.mycity4kids.widget.CustomFontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="16dp"
      android:text="@string/rewards_personal_header"
      android:textAllCaps="true"
      android:textColor="@color/app_grey"
      android:textSize="14sp"
      android:visibility="gone"
      app:fontName="oswald.ttf" />


    <com.mycity4kids.widget.CustomFontTextView
      android:id="@+id/labelFirstName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="15dp"
      android:text="@string/rewards_first_name"
      android:textColor="@color/color_85848A"
      android:textSize="16sp" />

    <com.mycity4kids.widget.CustomFontEditText
      android:id="@+id/editFirstName"
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_40"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="20dp"
      android:background="@drawable/mainprofile_thin_border"
      android:hint=""
      android:inputType="textNoSuggestions"
      android:padding="@dimen/space_8"
      android:textColor="@color/campaign_4A4A4A"
      android:textSize="16sp" />

    <com.mycity4kids.widget.CustomFontTextView
      android:id="@+id/labelLastName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="15dp"
      android:text="@string/rewards_last_name"
      android:textColor="@color/color_85848A"
      android:textSize="16sp" />

    <com.mycity4kids.widget.CustomFontEditText
      android:id="@+id/editLastName"
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_40"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="20dp"
      android:background="@drawable/mainprofile_thin_border"
      android:hint=""
      android:inputType="textNoSuggestions"
      android:padding="@dimen/space_8"
      android:textColor="@color/campaign_4A4A4A"
      android:textSize="16sp" />


    <com.mycity4kids.widget.CustomFontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="15dp"
      android:text="@string/profile_userhandle"
      android:textColor="@color/color_85848A"
      android:textSize="16sp" />

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="20dp"
      android:background="@drawable/mainprofile_thin_border">

      <com.mycity4kids.widget.CustomFontEditText
        android:id="@+id/userHandleTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_marginLeft="5dp"
        android:layout_toStartOf="@+id/checkTextView"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789_-."
        android:maxLength="30"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/campaign_4A4A4A"
        android:textSize="16sp" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/checkTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:paddingLeft="@dimen/space_15"
        android:text="@string/profile_check"
        android:textColor="@color/app_red"
        android:textSize="12sp"
        android:visibility="visible" />
    </RelativeLayout>

    <com.mycity4kids.widget.CustomFontTextView
      android:id="@+id/userAvailabilityResultTextView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="@dimen/space_2"
      android:textSize="10sp"
      android:visibility="gone" />

    <com.mycity4kids.widget.CustomFontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="15dp"
      android:text="@string/profile_emailid"
      android:textColor="@color/color_85848A"
      android:textSize="16sp" />

    <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="15dp"
      android:background="@drawable/mainprofile_thin_border">

      <com.mycity4kids.widget.CustomFontEditText
        android:id="@+id/emailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toStartOf="@+id/changePasswordTextView"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/campaign_4A4A4A"
        android:textSize="16sp" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/passwordTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailTextView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="5dp"
        android:text="*********"
        android:textColor="@color/campaign_4A4A4A"
        android:textSize="16sp"
        android:visibility="visible" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/changePasswordTextView"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:paddingLeft="@dimen/space_15"
        android:text="Change password"
        android:textColor="@color/app_red"
        android:textSize="12sp"
        android:visibility="visible" />
    </RelativeLayout>

    <com.mycity4kids.widget.CustomFontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="15dp"
      android:text="@string/blog_setup.hint_phone"
      android:textColor="@color/color_85848A"
      android:textSize="16sp" />


    <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="15dp"
      android:background="@drawable/mainprofile_thin_border">

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/editAddNumber"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/mainprofile_thin_border"
        android:gravity="center"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:tag="+91"
        android:text="ADD NUMBER AND VERIFY"
        android:textColor="@color/app_light_black"
        android:visibility="gone"
        app:fontName="oswald.ttf" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/editPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/mainprofile_thin_border"
        android:gravity="center_vertical"
        android:inputType="number"
        android:paddingStart="15dp"
        android:paddingLeft="15dp"
        android:tag="+91"
        android:text="@string/rewards_mobile_number_verified"
        android:textColor="@color/campaign_4A4A4A"
        android:textSize="16sp" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/textVerify"
        android:layout_width="50sp"
        android:layout_height="30sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_round"
        android:gravity="center"
        android:text="@string/rewards_edit"
        android:textAllCaps="false"
        android:textColor="@color/white_color"
        android:textSize="14sp"
        app:fontName="oswald_regular.ttf" />
    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatCheckBox
      android:id="@+id/whatsapp_notification"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="@dimen/space_10"
      android:buttonTint="@color/app_red"
      android:gravity="center_vertical"
      android:paddingEnd="15dp"
      android:paddingRight="15dp"
      android:text="@string/whatsapp_notification_text"
      android:textColor="@color/color_85848A"
      android:textSize="16sp"
      android:visibility="gone"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toBottomOf="@id/gender" />

    <RelativeLayout
      android:id="@+id/layoutLocation"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="15dp"
      android:layout_marginRight="16dp">

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rewards_location"
        android:textColor="@color/color_85848A"
        android:textSize="16sp" />

      <com.mycity4kids.widget.CustomFontEditText
        android:id="@+id/editLocation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_below="@+id/textViewLocation"
        android:layout_marginTop="5dp"
        android:background="@drawable/mainprofile_thin_border"
        android:editable="false"
        android:focusable="false"
        android:hint=""
        android:inputType="textNoSuggestions"
        android:padding="5dp"
        android:textColor="@color/campaign_4A4A4A"
        android:textSize="16sp" />

      <ImageView
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_alignTop="@+id/editLocation"
        android:layout_alignRight="@id/editLocation"
        android:layout_marginTop="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/arrowdownnew" />
    </RelativeLayout>

    <com.mycity4kids.widget.CustomFontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="15dp"
      android:text="@string/profile_blog_title"
      android:textColor="@color/color_85848A"
      android:textSize="16sp" />

    <com.mycity4kids.widget.CustomFontTextView
      android:id="@+id/handleNameTextView"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="20dp"
      android:background="@drawable/mainprofile_thin_border"
      android:gravity="center_vertical"
      android:paddingLeft="10dp"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:textColor="@color/campaign_4A4A4A"
      android:textSize="16sp" />

    <RelativeLayout
      android:id="@+id/interestLayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="15dp">

      <com.mycity4kids.widget.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:text="@string/rewards_interest"
        android:textColor="@color/color_85848A"
        android:textSize="16sp" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/textEditInterest"
        android:layout_width="50sp"
        android:layout_height="30sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:background="@drawable/shape_red_border"
        android:gravity="center"
        android:text="@string/rewards_edit"
        android:textColor="@color/app_red"
        android:textSize="13sp"
        android:visibility="gone"
        app:fontName="open_sans.ttf" />
    </RelativeLayout>

    <LinearLayout
      android:id="@+id/linearInterest"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="15dp"
      android:animateLayoutChanges="true"
      android:orientation="vertical"
      android:paddingTop="10dp"
      android:paddingBottom="10dp"
      android:visibility="gone">

      <org.apmem.tools.layouts.FlowLayout
        android:id="@+id/floatingInterest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

      </org.apmem.tools.layouts.FlowLayout>
    </LinearLayout>


    <com.mycity4kids.widget.CustomFontEditText
      android:id="@+id/editInterest"
      android:layout_width="match_parent"
      android:layout_height="@dimen/space_40"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="5dp"
      android:layout_marginRight="15dp"
      android:background="@drawable/mainprofile_thin_border"
      android:editable="false"
      android:focusable="false"
      android:hint="Select"
      android:inputType="textNoSuggestions"
      android:padding="5dp"
      android:textColor="@color/campaign_4A4A4A"
      android:textSize="16sp" />


    <com.mycity4kids.widget.CustomFontTextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="16dp"
      android:text="@string/about_txt"
      android:textColor="@color/color_85848A"
      android:textSize="16sp" />

    <com.mycity4kids.widget.CustomFontEditText
      android:id="@+id/aboutEditText"
      android:layout_width="match_parent"
      android:layout_height="100dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="3dp"
      android:layout_marginRight="16dp"
      android:background="@drawable/about_user_bg"
      android:gravity="top"
      android:hint="@string/write_about_yourself"
      android:inputType="textMultiLine"
      android:overScrollMode="always"
      android:paddingLeft="16dp"
      android:paddingTop="12dp"
      android:scrollbarStyle="insideInset"
      android:scrollbars="vertical"
      android:textColor="@color/campaign_expired_background"
      android:textSize="16sp" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">

      <com.mycity4kids.widget.CustomFontTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="@string/rewards_family_header"
        android:textColor="@color/app_grey"
        android:textSize="14sp"
        android:visibility="gone"
        app:fontName="oswald.ttf" />


      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutGenderDOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp">

        <com.mycity4kids.widget.CustomFontTextView
          android:id="@+id/gender"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/rewards_gender"
          android:textColor="@color/color_85848A"
          android:textSize="16sp"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <com.mycity4kids.widget.CustomFontTextView
          android:id="@+id/dobLabelTextView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/rewards_dob"
          android:textColor="@color/color_85848A"
          android:textSize="16sp"
          app:layout_constraintLeft_toLeftOf="@+id/textDOB"
          app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatSpinner
          android:id="@+id/genderSpinner"
          android:layout_width="150dp"
          android:layout_height="40dp"
          android:layout_marginTop="8dp"
          android:background="@drawable/mainprofile_thin_border"
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintRight_toLeftOf="@+id/textDOB"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/gender" />

        <ImageView
          android:layout_width="14dp"
          android:layout_height="14dp"
          android:layout_marginTop="12dp"
          android:layout_marginRight="12dp"
          android:src="@drawable/arrowdownnew"
          app:layout_constraintRight_toRightOf="@id/genderSpinner"
          app:layout_constraintTop_toTopOf="@+id/genderSpinner" />

        <com.mycity4kids.widget.CustomFontTextView
          android:id="@+id/textDOB"
          android:layout_width="150dp"
          android:layout_height="40dp"
          android:layout_marginStart="8dp"
          android:layout_marginLeft="8dp"
          android:layout_marginTop="7dp"
          android:background="@drawable/mainprofile_thin_border"
          android:drawableLeft="@drawable/calander_icon"
          android:drawablePadding="@dimen/space_4"
          android:gravity="center_vertical"
          android:hint="DD/MM/YYYY"
          android:paddingLeft="10dp"
          android:textColor="@color/campaign_4A4A4A"
          android:textSize="16sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toEndOf="@+id/genderSpinner"
          app:layout_constraintTop_toBottomOf="@id/dobLabelTextView" />
      </androidx.constraintlayout.widget.ConstraintLayout>

      <RelativeLayout
        android:id="@+id/layoutWorking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="16dp">

        <com.mycity4kids.widget.CustomFontTextView
          android:id="@+id/textWorkingStatus"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/rewards_working_status"
          android:textColor="@color/color_85848A"
          android:textSize="16sp" />

        <RadioGroup
          android:id="@+id/radioGroupWorkingStatus"
          android:layout_width="match_parent"
          android:layout_height="40dp"
          android:layout_below="@+id/textWorkingStatus"
          android:layout_marginTop="5dp"
          android:gravity="center_vertical"
          android:orientation="horizontal">

          <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radiokWorking"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/textWorkingStatus"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:buttonTint="@color/app_red"
            android:text="@string/rewards_working"
            android:textColor="@color/campaign_4A4A4A"
            android:textSize="16sp" />

          <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radioNotWorking"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/textWorkingStatus"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="8dp"
            android:buttonTint="@color/app_red"
            android:text="@string/rewards_non_working"
            android:textColor="@color/campaign_4A4A4A"
            android:textSize="16sp" />
        </RadioGroup>
      </RelativeLayout>

      <RelativeLayout
        android:id="@+id/langLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp">

        <com.mycity4kids.widget.CustomFontTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_marginTop="15dp"
          android:text="@string/rewards_language"
          android:textColor="@color/color_85848A"
          android:textSize="16sp" />

        <com.mycity4kids.widget.CustomFontTextView
          android:id="@+id/textEditLanguage"
          android:layout_width="50sp"
          android:layout_height="30sp"
          android:layout_alignParentRight="true"
          android:layout_centerVertical="true"
          android:layout_marginRight="4dp"
          android:background="@drawable/shape_red_border"
          android:gravity="center"
          android:text="@string/rewards_edit"
          android:textColor="@color/app_red"
          android:textSize="13sp"
          android:visibility="gone"
          app:fontName="open_sans.ttf" />
      </RelativeLayout>

      <LinearLayout
        android:id="@+id/linearLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topicInterestLabel"
