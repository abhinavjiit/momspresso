<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color"
    android:focusable="true"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_16"
        android:layout_weight="0.4"
        android:orientation="vertical">

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:text="@string/size"
            android:textColor="@color/campaign_expired"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="@dimen/space_6"
            app:cardElevation="@dimen/space_5"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/textsize_up"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space_16"
                    app:srcCompat="@drawable/ic_font_size_up" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/space_48"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginBottom="@dimen/space_5"
                    android:background="@color/color_E2E2E2" />

                <ImageView
                    android:id="@+id/textsize_down"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space_16"
                    app:srcCompat="@drawable/ic_font_size_down" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_16"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/alignment_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_10"
            android:text="@string/align"
            android:textColor="@color/campaign_expired"
            android:textSize="14sp" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="@dimen/space_6"
            app:cardElevation="@dimen/space_5"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/align_left"
                    android:layout_width="@dimen/space_55"
                    android:layout_height="@dimen/space_44"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space_10"
                    app:srcCompat="@drawable/ic_text_align_left" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/space_48"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginBottom="@dimen/space_5"
                    android:background="@color/color_E2E2E2" />


                <ImageView
                    android:id="@+id/align_center"
                    android:layout_width="@dimen/space_55"
                    android:layout_height="@dimen/space_44"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space_10"
                    app:srcCompat="@drawable/ic_text_align_center" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="@dimen/space_48"
                    android:layout_marginTop="@dimen/space_5"
                    android:layout_marginBottom="@dimen/space_5"
                    android:background="@color/color_E2E2E2" />


                <ImageView
                    android:id="@+id/align_right"
                    android:layout_width="@dimen/space_55"
                    android:layout_height="@dimen/space_44"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/space_10"
                    app:srcCompat="@drawable/ic_text_align_right" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>