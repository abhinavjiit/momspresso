<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/campaign_unapply_white_bg"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/space_15"
    android:paddingTop="@dimen/space_20"
    android:paddingRight="@dimen/space_15">

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/unapply_campaign_dialog"
        android:textColor="@color/campaign_4A4A4A"
        android:textSize="16sp"
        app:fontName="OpenSans-Regular.ttf" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_20">

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/btn_no"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/space_15"
            android:paddingBottom="@dimen/space_15"
            android:background="@drawable/campaign_unapply_red_bg"
            android:gravity="center"
            android:layout_marginEnd="@dimen/space_5"
            android:text="@string/confirmation_dialog.no"
            android:textColor="@color/white_color"
            android:textSize="14sp"
            app:fontName="oswald_regular.ttf" />

        <com.mycity4kids.widget.CustomFontTextView
            android:id="@+id/btn_yes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/space_5"
            android:paddingTop="@dimen/space_15"
            android:paddingBottom="@dimen/space_15"
            android:background="@drawable/campaign_unapply_yes"
            android:gravity="center"
            android:text="@string/confirmation_dialog.yes"
            android:textColor="@color/campaign_list_buttons"
            android:textSize="14sp"
            app:fontName="oswald_regular.ttf" />
    </LinearLayout>

</LinearLayout>