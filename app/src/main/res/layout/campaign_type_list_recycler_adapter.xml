<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@color/white"
  android:orientation="vertical">

  <RelativeLayout
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/space_20"
    android:layout_marginTop="@dimen/space_10"
    android:layout_marginRight="@dimen/space_20"
    android:layout_marginBottom="@dimen/space_10"
    android:background="@drawable/campaign_type_unselected_bg"
    android:paddingLeft="@dimen/space_10"
    android:paddingTop="@dimen/space_13"
    android:paddingRight="@dimen/space_13"
    android:paddingBottom="@dimen/space_10">

    <com.mycity4kids.widget.CustomFontTextView
      android:id="@+id/campaign_type"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Review"
      android:textColor="@color/campaign_515151"
      android:textSize="16sp" />


    <androidx.appcompat.widget.AppCompatCheckBox
      android:id="@+id/campaignlistCheckBox"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentRight="true"
      app:buttonTint="@color/campaign_type_list_checkbox_tint" />

    <com.mycity4kids.widget.CustomFontTextView
      android:id="@+id/campaign_desc"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@+id/campaign_type"
      android:layout_marginTop="@dimen/space_10"
      android:text="Review your favourite products!"
      android:textColor="@color/campaign_515151"
      android:textSize="14sp" />
  </RelativeLayout>


</LinearLayout>