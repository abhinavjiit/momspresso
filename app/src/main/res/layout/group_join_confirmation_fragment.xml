<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_dialog_bg"
    android:minWidth="280dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/closeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:padding="20dp"
        android:src="@drawable/cross_icon_back" />

    <ImageView
        android:id="@+id/headerImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_uploaded" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/headerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:text="@string/groups.approval_req_sent"
        android:textColor="@color/groups.light_black_color"
        android:textSize="16sp"
        app:fontName="open_sans.ttf" />

    <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/okayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/unfollow_topic_author_bg"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:paddingLeft="60dp"
        android:paddingRight="60dp"
        android:paddingTop="16dp"
        android:text="@string/blog_setup.okay"
        android:textColor="@color/blog_setup.okay"
        android:textSize="18sp"
        app:fontName="oswald_regular.ttf" />
</LinearLayout>
