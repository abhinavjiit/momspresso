<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="#f9f9f9"
  android:orientation="vertical">

  <com.mycity4kids.widget.CustomFontTextView
    android:id="@+id/sectionHeaderTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableStart="@drawable/ic_tv_icon"
    android:drawablePadding="16dp"
    android:drawableTint="@color/app_red"
    android:padding="16dp"
    android:text="@string/all_upcoming_live_sessions"
    android:textColor="@color/app_light_black"
    android:textSize="16sp"
    app:fontName="Roboto-Medium.ttf" />

  <TextView
    android:id="@+id/viewAllLivesTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@+id/sectionHeaderTextView"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:gravity="center"
    android:padding="16dp"
    android:text="@string/ad.view_all_tags.text"
    android:textColor="@color/app_red" />

  <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/upcomingLivesRecyclerView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sectionHeaderTextView" />

</RelativeLayout>