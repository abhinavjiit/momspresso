<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginTop="20dp"
  android:layout_marginBottom="20dp"
  android:background="@drawable/custom_dialog_bg"
  android:minWidth="300dp"
  android:orientation="vertical">

  <com.mycity4kids.widget.CustomFontTextView
    android:id="@+id/headerLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="10dp"
    android:paddingLeft="23dp"
    android:paddingRight="23dp"
    android:text="@string/choose_pref_lang"
    android:textColor="@color/videos.dialog.title"
    android:textSize="18sp"
    app:fontName="oswald_regular.ttf" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/cancelTextView"
    android:layout_below="@+id/headerLayout"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:fadeScrollbars="false"
    android:scrollIndicators="end"
    android:scrollbarThumbVertical="@color/app_red"
    android:scrollbars="vertical">

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/englishTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="8dp"
        android:text="@string/language_label.english"
        android:textColor="@color/videos.upload_option.camera"
        android:textSize="18sp"
        app:fontName="oswald.ttf" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/hindiTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="10dp"
        android:text="@string/language_label.hindi"
        android:textColor="@color/videos.upload_option.gallery"
        android:textSize="18sp"
        app:fontName="oswald.ttf" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/marathiTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="10dp"
        android:text="@string/language_label.marathi"
        android:textColor="@color/videos.upload_option.gallery"
        android:textSize="18sp"
        app:fontName="oswald.ttf" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/bengaliTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="10dp"
        android:text="@string/language_label.bengali"
        android:textColor="@color/videos.upload_option.gallery"
        android:textSize="18sp"
        app:fontName="oswald.ttf" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/tamilTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="10dp"
        android:text="@string/language_label.tamil"
        android:textColor="@color/videos.upload_option.gallery"
        android:textSize="18sp"
        app:fontName="oswald.ttf" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/teluguTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="10dp"
        android:text="@string/language_label.telegu"
        android:textColor="@color/videos.upload_option.gallery"
        android:textSize="18sp"
        app:fontName="oswald.ttf" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/kannadaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="10dp"
        android:text="@string/language_label.kannada"
        android:textColor="@color/videos.upload_option.gallery"
        android:textSize="18sp"
        app:fontName="oswald.ttf" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/malayalamTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="10dp"
        android:text="@string/language_label.malayalam"
        android:textColor="@color/videos.upload_option.gallery"
        android:textSize="18sp"
        app:fontName="oswald.ttf" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/gujratiTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="10dp"
        android:text="@string/language_label.gujarati"
        android:textColor="@color/videos.upload_option.gallery"
        android:textSize="18sp"
        app:fontName="oswald.ttf" />

      <com.mycity4kids.widget.CustomFontTextView
        android:id="@+id/punjabiTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingLeft="23dp"
        android:paddingTop="8dp"
        android:paddingRight="23dp"
        android:paddingBottom="10dp"
        android:text="@string/language_label.punjabi"
        android:textColor="@color/videos.upload_option.gallery"
        android:textSize="18sp"
        app:fontName="oswald.ttf" />

    </LinearLayout>
  </ScrollView>

  <com.mycity4kids.widget.CustomFontTextView
    android:id="@+id/cancelTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_gravity="right"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp"
    android:paddingLeft="23dp"
    android:paddingTop="8dp"
    android:paddingRight="23dp"
    android:paddingBottom="10dp"
    android:text="@string/choose_pref_lang.cancel"
    android:textColor="@color/app_red"
    app:fontName="oswald_regular.ttf" />
</RelativeLayout>
